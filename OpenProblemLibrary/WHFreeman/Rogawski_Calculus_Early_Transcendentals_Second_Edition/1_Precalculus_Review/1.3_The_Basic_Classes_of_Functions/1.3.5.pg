DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$int = random(1, 10);
$f = Formula("1/(x+$int)");

$mc = new_multiple_choice();
$mc->qa('Determine the domain of the function.', "\( x {\not =} -$int \)");
$mc->extra("\( x $GTE -$int \)", "\( x $LTE -$int \)", "all Real numbers");

Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "1.3","5") \}
$PAR
\{ $mc->print_q() \} 
$PAR
\( f(x) = $f \)
$PAR
\{ $mc->print_a() \}
END_TEXT

ANS(radio_cmp($mc->correct_ans));

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
$PAR
The domain of a rational function \( \frac{P(x)}{Q(x)} \) is the set of numbers x such that \( Q(x) {\not =} 0 \).
END_SOLUTION

ENDDOCUMENT();
