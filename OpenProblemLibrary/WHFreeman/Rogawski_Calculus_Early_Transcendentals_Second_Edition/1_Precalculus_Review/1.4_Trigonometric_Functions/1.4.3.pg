## DBsubject(Trigonometry)
## DBchapter(Geometric and algebraic foundations for trigonometry)
## DBsection(Radians, converting radians & degrees)
## Institution(W.H.Freeman)
## Author(Christopher Sira)
## MLT(KentMoreLike8)
## Level(2)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('2')
## Section1('1.4')
## Problem1('3')
## KEYWORDS('calculus', 'trigonometry', 'angles', 'radians')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$num = random(9, 30);
$mod = $num % 8;
$ans = ($mod * pi) / 4;

$fac = 180 / pi;

$q1 = list_random(3,5);
$q2 = list_random(2,4,5);
$q3 = list_random(5,7,11,13);
$q4 = list_random(3,5);

$a1 = Real("$q1 / 2 * $fac");
$a2 = Real("($q2 * pi) / 3 * $fac");
$a3 = Real("$q3 / 12 * $fac");
$a4 = Real("-1 * ($q4 * pi) / 4 * $fac");

Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "1.4","3") \}
$PAR
Convert from radians to degrees.
$PAR
(a) \( \frac{$q1}{2} \)       \{ans_rule()\}
$PAR
(b) \( \frac{$q2 \pi}{3} \)   \{ans_rule()\}
$PAR
(c) \( \frac{$q3}{12} \)      \{ans_rule()\}
$PAR
(d) \( - \frac{$q4 \pi}{4} \) \{ans_rule()\}
END_TEXT

ANS($a1->cmp);
ANS($a2->cmp);
ANS($a3->cmp);
ANS($a4->cmp);

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
$PAR
(a) \( \frac{$q1}{2} \frac{180}{\pi} \approx $a1 \)
$PAR
(b) \( \frac{$q2 \pi}{3} \frac{180}{\pi} = $a2 \)
$PAR
(c) \( \frac{$q3}{12} \frac{180}{\pi} \approx $a3 \)
$PAR
(d) \( \frac{$q4 \pi}{4} \frac{180}{\pi} = $a4 \)
END_SOLUTION

ENDDOCUMENT();
