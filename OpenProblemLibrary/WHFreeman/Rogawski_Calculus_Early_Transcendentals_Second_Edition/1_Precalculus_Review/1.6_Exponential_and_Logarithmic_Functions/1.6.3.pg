DOCUMENT();

#Load Necessary Macros

loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#Book Values
# $exponentleft = 2x;
# $exponentright = x+1;


#Randomized Values

$coef1 = random(1, 5);
$coef2 = random(1, 3) + $coef1;
$constant = random(1, 8);


$exponentleft = Formula("$coef2*x")->reduce;
$exponentright = Formula("$coef1*x + $constant")->reduce;
Context()->texStrings;


$solution = Formula("$constant/($coef2 - $coef1)")->reduce;

BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "1.6", "3") \}

$PAR
Solve for the unknown variable.
$PAR


\( e^{$exponentleft} = e^{$exponentright} \)
$PAR

\( x = \) \{ans_rule() \}
$PAR
END_TEXT

Context()->normalStrings;

#Answer Checker
ANS($solution->cmp);

Context()->texStrings;

SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
$BR
If \( e^{$exponentleft} = e^{$exponentright} \) then \( $exponentleft = $exponentright \), and \( x= $solution \).

$BR

END_SOLUTION

