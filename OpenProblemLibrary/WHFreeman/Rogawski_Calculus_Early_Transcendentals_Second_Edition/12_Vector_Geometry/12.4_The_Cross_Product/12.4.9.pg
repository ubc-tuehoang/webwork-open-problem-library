## MLT(Cross_Product_Compute)
## Level(2)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('2')
## Section1('12.4')
## Problem1('9')
## KEYWORDS('calculus')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGgraphmacros.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$v1=random(0,8,1);
$v2=random(0,8,1);
$v3=random(0,8,1);

$w1=random(0,8,1);
$w2=random(0,8,1);
$w3=random(0,8,1);

$cp1=$v2*$w3-$v3*$w2;
$cp2=-($v1*$w3-$v3*$w1);
$cp3=$v1*$w2-$v2*$w1;

Context("Vector");
$v = Compute("<$v1, $v2, $v3>");
$w = Compute("<$w1, $w2, $w3>");
$ans = Compute("$cp1 i + $cp2 j + $cp3 k");
($i, $j, $k) = (Compute("i"), Compute("j"), Compute("k"));

Context()->texStrings;

BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "12.4","9") \}
Calculate \(\bf{v} \times \bf{w}\):
$BR $BR
\( \mathbf{v}=$v,\quad \mathbf{w}=$w \)
$PAR
\(\mathbf{v}\times \mathbf{w} = \) \{ans_rule()\}
END_TEXT 

Context()->normalStrings;
ANS($ans->cmp);

Context()->texStrings;

SOLUTION(EV3(<<'END_SOLUTION'));
Using the definition of cross product we get:
$PAR
\(
\left|\begin{array}{ccc}
 $i & $j & $k \\
 $v1 & $v2 & $v3 \\
 $w1 & $w2 & $w3 
\end{array} \right|
= 
\left| \begin{array}{ccc}
 $v2 & $v3 \\
 $w2 & $w3 
\end{array} \right| $i
-  \left| \begin{array}{ccc}
 $v1 & $v3 \\
 $w1 & $w3  \end{array} \right| $j
+ \left| \begin{array}{ccc}
 $v1 & $v2 \\
 $w1 & $w2  \end{array} \right| $k
\)

$BR

\(\qquad = \left($v2\cdot $w3-$v3\cdot $w2\right) $i - \left($v1\cdot $w3-$v3\cdot $w1\right) $j + \left($v1\cdot $w2-$v2\cdot $w1\right) $k \)

$BR

\(\qquad = $ans \)

END_SOLUTION

ENDDOCUMENT();
