DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
Context("Vector");

#$a1=2;
#$a2=1;
#$b1=3;
#$b2=4;

$a1=random(1,5,1);
$a2=random(1,5,1);
$b1=random(1,4,1);
$b2=random(1,4,1);
$a=Vector($a1,$a2);
$b=Vector($b1,$b2);

$ans1 = $a + $b;

Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "12.1","9") \}
$PAR
Calculate: $BR
\($a + $b =\) \{ans_rule(10)\}$BR
END_TEXT

ANS($ans1->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
Using vector algebra we have \($a + $b = \langle $a1 + $b1 , $a2 + $b2\rangle = $ans1 \)
END_SOLUTION

ENDDOCUMENT();
