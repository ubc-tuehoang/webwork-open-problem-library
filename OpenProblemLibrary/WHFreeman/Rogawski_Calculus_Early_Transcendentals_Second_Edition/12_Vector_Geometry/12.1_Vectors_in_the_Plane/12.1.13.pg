## DBsubject(Geometry)
## DBchapter(Vector geometry)
## DBsection(Vectors and vector arithmetic)
## Institution(W.H.Freeman)
## Author(Danny Glin)
## MLT(va_lc_compute)
## Level(2)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('2')
## Section1('12.1')
## Problem1('13')
## KEYWORDS('vector')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
Context("Vector");
Context()->flags->set(reduceConstants=>0);
Context()->texStrings;

#$a1num=-1;
#$a2num=5;
#$b1=3;
#$b2num=10;

$a1num=random(-5,5,2);
$a1=Formula("$a1num/2");
$m=non_zero_random(-3,3,1);
$a2num=3*$m+2;
$a2=Formula("$a2num/3");
$b1=non_zero_random(-4,4,1);
$n=non_zero_random(-3,3,1);
$b2num=3*$n+1;
$b2=Formula("$b2num/3");
$a=Vector($a1,$a2);
$b=Vector($b1,$b2);
$ans11num=$a1num+2*$b1;
$ans11=Formula("$ans11num/2");
$ans12=$m+$n+1;
$ans1 = Vector($ans11,$ans12);

BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "12.1","13") \}
$PAR
Calculate: $BR
\($a + $b =\) \{ans_rule(10)\}$BR
END_TEXT

ANS($ans1->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
Using vector algebra we have \($a + $b = \langle $a1 + $b1 , $a2 + $b2\rangle = $ans1 \)
END_SOLUTION

ENDDOCUMENT();
