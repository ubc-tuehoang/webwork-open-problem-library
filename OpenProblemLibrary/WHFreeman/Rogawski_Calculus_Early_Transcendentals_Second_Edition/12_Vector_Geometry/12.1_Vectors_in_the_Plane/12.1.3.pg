DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
Context("Vector");

#$a1=1;
#$a2=3;
#$P1=2;
#$P2=2;

$a1=random(1,5,1);
$a2=random(1,5,1);
$pl1="";
$pl2="";
if($a1>1)
{
$pl1="s";
}
if($a2>1)
{
$pl2="s";
}
$P1=random(1,5,1);
$P2=random(1,5,1);

$a=Vector($a1,$a2);
$P=Point($P1,$P2);
$Q=Point($P+$a);

Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "12.1","3") \}
$PAR
What is the terminal point of the vector \(\mathbf{a}=$a\) based at \(P=$P\)?
$BR $BR
Answer: \{ans_rule(10)\}$BR
END_TEXT

ANS($Q->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
The terminal point \(Q\) of the vector \(\bf{a}\) is located $a1 unit$pl1 to the right and $a2 unit$pl2 up from \(P=$P\).  Therefore, \(Q=($P1 + $a1 ,$P2 + $a2)=$Q\)
END_SOLUTION

ENDDOCUMENT();
