## DBsubject(Geometry)
## DBchapter(Vector geometry)
## DBsection(Dot product, length, and unit vectors)
## Institution(W.H.Freeman)
## Author(Christopher Sira)
## MLT(FindMidPoint)
## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('2')
## Section1('12.2')
## Problem1('43')
## KEYWORDS('calculus', 'parametric', 'vector', '3D', 'three dimensions')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
$context = Context("Point");

$p0 = Real(random(1,10,1));
$p1 = Real(random(1,10,1));
$p2 = Real(random(1,10,1));


$q0 = Real(random(1,10,1));
$q1 = Real(random(1,10,1));
$q2 = Real(random(1,10,1));

$v0 = $q0 - $p0;
$v1 = $q1 - $p1;
$v2 = $q2 - $p2;

$m0 = $p0 + $v0 / 2;
$m1 = $p1 + $v1 / 2;
$m2 = $p2 + $v2 / 2;

$p = Point($p0, $p1, $p2);
$q = Point($q0, $q1, $q2);

$v = Vector($v0, $v1, $v2);

$m = Point($m0, $m1, $m2);

$ans = $m;


Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "12.2","43") \}
$PAR
\( P = $p \)
$PAR
\( Q = $q \)
$PAR
Find \( M \), the midpoint of \( \overline{PQ} \).
$PAR
\( M \)  = \{ans_rule()\}
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
\( \mathbf{v} = Q - P = $v \)
$PAR
\( M = P + \frac{1}{2} \mathbf{v} = $m \)
END_SOLUTION

ENDDOCUMENT();


