DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
$context = Context("Vector");

$a = Real(random(1,10,1));
$b = Real(random(1,10,1));
$c = Real(random(1,10,1));

$r = Point($a, $b, $c);

$vec = Vector($a, $b, $c);

$sq = $a**2 + $b**2 + $c**2;
$ans = sqrt($sq);


Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "12.2","9") \}
$PAR
Find the length of \( \overrightarrow{OR} \).
$PAR
\( R = $r \)
$PAR
\( \| \overrightarrow{OR} \| \)  = \{ans_rule()\}
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
\( \mathbf{v} = R - O = $r - (0, 0, 0) = $vec \)
$PAR
\( \| \mathbf{v} \| = \sqrt{\mathbf{v} \cdot \mathbf{v}} 
= \sqrt{$a \cdot $a + $b \cdot $b + $c \cdot $c}\) \(=\) \(\sqrt{$sq} \).
END_SOLUTION

ENDDOCUMENT();


