## DBsubject(Geometry)
## DBchapter(Vector geometry)
## DBsection(Dot product, length, and unit vectors)
## Institution(W.H.Freeman)
## Author(Christopher Sira)
## MLT(FindMidPoint)
## MLTleader(1)
## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('2')
## Section1('12.2')
## Problem1('45')
## KEYWORDS('calculus', 'parametric', 'vector', '3D', 'three dimensions')

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
$context = Context("Point");

$p0 = Real(random(1,10,1));
$p1 = Real(random(1,10,1));
$p2 = Real(random(1,10,1));

$m0 = Real(random(1,10,1));
$m1 = Real(random(1,10,1));
$m2 = Real(random(1,10,1));

$v0 = $m0 - $p0;
$v1 = $m1 - $p1;
$v2 = $m2 - $p2;

$q0 = $p0 + 2 * $v0;
$q1 = $p1 + 2 * $v1;
$q2 = $p2 + 2 * $v2;

$p = Point($p0, $p1, $p2);
$q = Point($q0, $q1, $q2);

$v = Vector($v0, $v1, $v2);

$m = Point($m0, $m1, $m2);

$ans = $q;


Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "12.2","45") \}
$PAR
\( P = $p \)
$PAR
\( R = $m \)
$PAR
Find the point \( Q \) such that \( R \) is the midpoint of \( \overline{PQ} \).
$PAR
\( Q \)  = \{ans_rule()\}
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
\( \mathbf{v} = R - P = $v \)
$PAR
\( Q = P + 2\mathbf{v} = $ans \)
END_SOLUTION

ENDDOCUMENT();


