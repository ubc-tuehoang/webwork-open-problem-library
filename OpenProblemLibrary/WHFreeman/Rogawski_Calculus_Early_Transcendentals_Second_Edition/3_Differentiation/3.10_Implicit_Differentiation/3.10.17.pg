## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Implicit differentiation)
## Institution(W.H.Freeman)
## Author(Emily Price)
## MLT(xy_powers_only_deriv)
## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Rogawski')
## EditionText1('2')
## Section1('3.10')
## Problem1('17')
## KEYWORDS('calculus', 'derivatives', 'implicit differentiation')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$a = random(1, 7, 2);
$b = random(1, 7, 2);
$c = random(1, 9);
$am2 = $a - 2;
$bp2 = $b + 2;

Context('Fraction');
$d = Fraction($a, $b)->reduce;
$coeff = ( $d == 1
	? ''
	: ( $d == -1 ? '-'
		: $d
	)
);
$ex = ($am2 == -1
	? '-(' . abs($am2) . '/2)'
	: "$am2/2"
);
$ey = "$bp2/2";

Context("Numeric")->variables->are(
	x => [ 'Real', limits => [1, 2] ],
	y => [ 'Real', limits => [1, 2] ]
);
Context()->flags->set(
	reduceConstants => 0
);

$dydx = Formula($coeff . "x^($ex) y^($ey)");

Context()->texStrings;
BEGIN_TEXT
Calculate the derivative of \( y \) with respect to \( x \),
if \( x^{$a/2} + y^{-$b/2} = $c \).
$BR $BR
\( \displaystyle \frac{dy}{dx} = \) \{ans_rule() \}
END_TEXT
Context()->normalStrings;

ANS($dydx->cmp);

Context()->texStrings;
BEGIN_SOLUTION
If \( x^{$a/2} + y^{-$b/2} = $c \), then
\[
{\textstyle
\frac{$a}{2} x^{$am2/2} - \frac{$b}{2} y^{-$bp2/2}}
\, \frac{dy}{dx} = 0,
\]
or
\[
{\textstyle \frac{$b}{2} y^{-$bp2/2}}
\, \frac{dy}{dx} =
\textstyle \frac{$a}{2} x^{$am2/2}.
\]
Hence,
\[
\frac{dy}{dx} = \textstyle $coeff x^{$am2/2} y^{$bp2/2}.
\]
END_SOLUTION

ENDDOCUMENT();
