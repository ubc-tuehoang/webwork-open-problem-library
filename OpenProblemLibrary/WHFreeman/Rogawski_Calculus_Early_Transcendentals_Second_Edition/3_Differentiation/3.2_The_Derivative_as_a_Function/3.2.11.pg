DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

#$a = 0.35;
$a = random(0.05,0.95,0.05);
$f = Formula("x^($a)")->with(limits=>[.1,2]);
$fp = $f->D('x');

Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "3.2","11") \}
$PAR
Use the Power Rule to compute the derivative.
\[ \frac{d}{dx}$f \]
$PAR
\( f'(x) = \) \{ans_rule()\}
END_TEXT
Context()->normalStrings;

ANS($fp->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
\[ \frac{d}{dx}$f = $a(x^{$a-1}) = $fp. \]
END_SOLUTION

ENDDOCUMENT();
