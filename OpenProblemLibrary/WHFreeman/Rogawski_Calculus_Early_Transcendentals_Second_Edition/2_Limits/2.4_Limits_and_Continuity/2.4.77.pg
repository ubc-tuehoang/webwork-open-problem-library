DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());

$showPartialCorrectAnswers = 0;
$solutionexits=1;

Context("Numeric");

$a = Real(random(2,5,1));
$b = Real(random(2,4,1));

Context()->texStrings;

BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "2.4","77") \}$BR
Evaluate the following limit: 
$BR $BR
\(\lim\limits_{x\rightarrow $a}10^{x^2-$b\cdot x}\) = \{ans_rule()\}
END_TEXT

$l=10**($a**2-$b*$a);
ANS($l->cmp);

BEGIN_SOLUTION

\(\lim\limits_{x\rightarrow $a}10^{x^2-$b\cdot x}=10^{$a^2-$b\cdot $a} = $l\).

END_SOLUTION

