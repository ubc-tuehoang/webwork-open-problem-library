#Problem 2.5.47

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 0;
$solutionexits=1;

Context("Numeric");
Context()->variables->are(t=>"Real",a=>"Real");

$a=Real(random(2,9,1));
$b=Real(random(2,9,1));
$c=Real(random(2,9,1));
$d=Real(non_zero_random(-4,4,1));

Context()->texStrings;

BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "2.5","47") \}$BR
Evaluate the limit in terms of the constants involved: $PAR
\( \lim\limits_{t \to $d} ($a t - $b a t + $c a )  = \)  \{ ans_rule(6) \}
END_TEXT

Context()->normalStrings;

$s=Compute("$a*$d +($c- $b*$d)*a")->reduce;

ANS( $s->cmp );

Context()->texStrings;

BEGIN_SOLUTION
\( \lim\limits_{t \to $d} ($a t - $b a t + $c a ) = ($a)($d) - $b a($d) + $c a= $s\).
END_SOLUTION

Context()->normalStrings;

ENDDOCUMENT();
