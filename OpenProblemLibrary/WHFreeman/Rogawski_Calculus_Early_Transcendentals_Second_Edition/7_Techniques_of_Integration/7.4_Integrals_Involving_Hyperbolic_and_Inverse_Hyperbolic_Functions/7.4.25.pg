DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "Parser.pl",
  "freemanMacros.pl",
  "PGcourse.pl"
);
$context = Context();

#($a, $b, $ans) = @{ list_random([],
#                                []
#) };

TEXT(beginproblem());

$a = Real(random(.5, 2, .1));

$int = Formula("1/sqrt(1 + x**2)")->reduce();

$ans = Formula("arcsinh($a)");

Context()->texStrings;
BEGIN_TEXT
\{ textbook_ref_exact("Rogawski ET 2e", "7.4","25") \}
$PAR
Calculate the integral \( \int^{$a}_{0} $int \, dx \).
$PAR
\{ans_rule()\}
$PAR
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR
$SOL
$PAR
\( \int^{$a}_{0} $int \, dx = \sinh^{-1}|^{$a}_{0} = \sinh^{-1}($a) - \sinh^{-1}(0) = $ans \).
$PAR
END_SOLUTION

ENDDOCUMENT();


