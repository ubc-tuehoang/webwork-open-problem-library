TEXT(beginproblem());

$a=random(1,10,1);
$a2=$a**2;
$a3=$a2+2;


Context("Vector");

$context = Context();
$context->variables->add(s=>'Real',t=>'Real');
Context()->flags->set(
  reduceConstants => 0,
  reduceConstantFunctions => 0,
);

#$t=Formula("ln(1+1/sqrt($a3)*s)")->reduce();
