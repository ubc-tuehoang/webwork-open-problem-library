DOCUMENT() ;        

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
#  "PGasu.pl",
#  "PGchoicemacros.pl",
#  "PGdiffeqmacros.pl",
#  "extraAnswerEvaluators.pl",
  "PGcourse.pl"
);
############

TEXT(beginproblem());
$showPartialCorrectAnswers = 1 ;

$alpha = non_zero_random(-6,6);
$a = non_zero_random(-6,6);
$gamma = random(-6,6);

$b11 = random(-3,3);
$b12 = random(-3,3);
$b22 = random(-3,3);
$b21 = ($alpha -1)*($b22+2*$b12)-$alpha*$gamma-2*$b11;

$c13 = $alpha -1;

Context("Matrix");

$A=Matrix([[x,2,1]]);

$B=Matrix([[$a     , -$gamma, -$a ],
           [-$gamma, $b11   , $b12],
           [-$a    , $b21   , $b22]]);

$C=Matrix([[x],[-1],[$c13]]);

Context()->texStrings;
BEGIN_TEXT
Determine the value(s) of  \(x \)  such that
$PAR
\($A $B $C = [0]\)
$PAR
\( x \) = \{ ans_rule(30) \}
$BR
$BBOLD Note: $EBOLD
If there is more than one value separate them by commas.
$BR

END_TEXT
Context()->normalStrings;

# the matrix equation says a*x^2-(a*alpha+gamma)x + alpha*gamma = 0

Context("Fraction");
$x1 = Compute("$gamma/$a");
$x2 = Compute("$alpha");
if ($x1 == $x2){
  $ans = List($x1);
}
else {
  $ans = List($x1,$x2);
}

ANS($ans->cmp());

ENDDOCUMENT() ;        
