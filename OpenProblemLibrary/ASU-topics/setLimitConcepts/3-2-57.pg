);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$b = random(-8,-2,1);
$c = random(1,8,1);

BEGIN_TEXT
Let \(f(x) = \sqrt{x} + $b\).$BR
$BR
Then \(\displaystyle \lim_{ h \rightarrow 0 } \frac{f($c + h) - f($c)}{h} = \) \{ans_rule(25) \}$BR
$BR
If the limit does not exist enter DNE.
END_TEXT

$ans = Compute("1/(2*sqrt($c))");
#$ans = ((1/2)*$c**(-1/2));
#ANS(num_cmp($ans, strings=>["DNE"]));
ANS($ans->cmp());

