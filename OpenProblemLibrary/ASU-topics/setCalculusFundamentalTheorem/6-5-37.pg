DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

sub str {
        my $x = shift;
        return ( $x > 0 ? '' : '-' )
        . ( ($x)**2 == 1 ? '' : abs($x) )
}

sub rs {
       my ($m, $n, $q) = @_;
       my $p = 1;
       foreach ( 1 .. int(sqrt($q)) ) {
               $p = $_ if ($q % $_**2 == 0)
       }
       my $context = Context()->copy;
       Context('Fraction');
       my $r = Fraction($m*$p, $n)->reduce;
       my $s = $q / $p**2;
       Context($context);
       return Formula(
		( $r > 0 ? '' : '-' )
		. ( ($r)**2 == 1 ? '' : abs($r) )
		. "sqrt($s)"
	);
}

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

do {
	$a = list_random(-1, 1) * random(2, 9);
	$b = non_zero_random(-9, 9);
	$c = random(1, 7);
} until (
	gcd($a, $b) == 1 and
	($a > 0 or $a * $b < 0)
	and (2*$c)**2 - (3*$a)**2
);
$y0 = random(1, 4);
$t0 = ($y0)**2;
do {
	$t1 = random($t0 + 1, 29);
} until (
	sqrt($t1) - int(sqrt($t1))
);

Context('Fraction');
$x0 = Fraction($t0 - $b, $a)->reduce;
$x1 = Fraction($t1 - $b, $a)->reduce;
$coeff = Fraction(2*$c, 3*$a)->reduce;
$dt_coeff = Fraction(1, $a)->reduce;
$It_coeff = Fraction($c, $a)->reduce;

$Ft0 = Fraction(2*$c*($y0)**3, 3*$a)->reduce;
$aFt0 = Fraction(abs(2*$c*($y0)**3), abs(3*$a))->reduce;

Context('Numeric')->flags->set(
	reduceConstants => 0,
	reduceConstantFunctions => 0
);
$l = Formula("$a*x + $b")->reduce;
$f = Formula("$c sqrt($l)")->reduce;

$Ft1 = rs(2*$c*$t1, 3*$a, $t1);
$aFt1 = rs(abs(2*$c*$t1), abs(3*$a), $t1);

($xl, $xr) = ( $x0 < $x1
	? ($x0, $x1)
	: ($x1, $x0)
);
($tl, $tr) = ( $x0 < $x1
	? ($t0, $t1)
	: ($t1, $t0)
);
($Ftl, $Ftr) = ( $x0 < $x1
	? ($Ft0, $Ft1)
	: ($Ft1, $Ft0)
);
($aFtl, $aFtr) = ( $x0 < $x1
	? ($aFt0, $aFt1)
	: ($aFt1, $aFt0)
);

$D = Formula(
	($Ftr > 0 ? '' : '-' )
	. $aFtr
	. ( $Ftl < 0 ? '+' : '-' )
	. $aFtl
);

Context()->texStrings;
BEGIN_TEXT
Evaluate the definite integral:
$BR $BR
\( \displaystyle \int_{$xl}^{$xr} $f \, dx = \)
\{ans_rule() \}
END_TEXT
Context()->normalStrings;

ANS($D->cmp);

Context()->texStrings;
BEGIN_SOLUTION
Let \( t = $l \); then \( dt = $a \, dx \),
or \( $dt_coeff \, dt = dx \). To change
the limits of integration, observe that if 
\( x = $xl \) then \( t = $tl \), and if
\( x = $xr \) then \( t = $tr \).
Hence
\[
\begin{aligned}
\int_{$xl}^{$xr} $f \, dx \>
&= \{ str($It_coeff) \}
\int_{$tl}^{$tr} \sqrt{t} \, dt
= $coeff\, t^{3/2} \; \Bigg \vert_{$tl}^{$tr} \\
&= $coeff \bigl \lbrace
$tr^{3/2} - $tl^{3/2} \bigr \rbrace \\
&= \textstyle $D.
\end{aligned}
\]
END_SOLUTION

ENDDOCUMENT();
