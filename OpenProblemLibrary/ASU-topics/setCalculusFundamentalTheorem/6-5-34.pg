DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

sub str {
        my $x = shift;
        return ( $x > 0 ? '' : '-' )
        . ( ($x)**2 == 1 ? '' : abs($x) )
}

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric')->flags->set(
	reduceConstants => 0,
	reduceConstantFunctions => 0,
	formatStudentAnswer => 'parsed'
);
$context = Context()->copy;

do {
	$a = random(1, 9);
	$b = non_zero_random(-9, 9);
	$l = random(ceil(-$b/$a) + 2, ceil(-$b/$a) + 10);
	$r = random($l + 1, $l + 9);
	$den = Formula("$a*x + $b")->reduce;
	$dl = $den->eval(x => $l);
	$dr = $den->eval(x => $r);
} until (
	gcd($a, $b) == 1
	and $dl < 50 and $dr < 50
);
$c = non_zero_random(-20, 20);

$f = Formula("$c/($den)");

Context('Fraction');
$coeff = Fraction($c, $a)->reduce;
$larg = Fraction($dr, $dl)->reduce;

Context($context);
$D = Formula(str($coeff) . "ln($larg)");

Context()->texStrings;
BEGIN_TEXT
Evaluate the following definite integral.
$BR $BR
\( \displaystyle \int_{$l}^{$r} $f \, dx = \)
\{ans_rule() \}
END_TEXT
Context()->normalStrings;

ANS($D->cmp);

Context()->texStrings;
BEGIN_SOLUTION
Integrating by inspection gives
\[
\begin{aligned}
\int_{$l}^{$r} $f \, dx \>
&= \{ str($coeff) \} \ln($den)
\; \Bigg|_{$l}^{$r} \\
&= \{ str($coeff) \} \bigl \lbrace
\ln($dr) - \ln($dl) \bigr \rbrace \\
&= \textstyle \{ str($coeff) \}
\ln \bigl( $larg \bigr).
\end{aligned}
\]
END_SOLUTION

ENDDOCUMENT();
