DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1, 3);
$b = random(2, 5);
$ab = $a * $b;

Context('Numeric')->flags->set(
	reduceConstants => 0,
	reduceConstantFunctions => 0
);
$f = Formula("e^($b*x)")->reduce;
$D = Formula("1/$b * (e^($ab) - 1)");

Context()->texStrings;
BEGIN_TEXT
Evaluate the definite integral:
$BR $BR
\( \displaystyle{ \int_{0}^{$a} $f \, dx}
= \) \{ans_rule() \} 
END_TEXT
Context()->normalStrings;

ANS($D->cmp);

Context()->texStrings;
BEGIN_SOLUTION
Integrating by inspection gives
\[
\int _ 0 ^ {$a} $f \, dx
= \textstyle
\frac1{$b} $f \; \Bigg| _ 0 ^ {$a}
= $D.
\]
END_SOLUTION

ENDDOCUMENT();
