DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
Context("Numeric");

$a1 = random(2,12,2);
$b1 = random(6,20,2);
$d = random(-5,-1,1);
$f = random(1,5,1);

BEGIN_TEXT
Suppose that
\( \displaystyle{f(x) = \frac{$a1 x + $b1}{x}}\).
Evaluate each of the following:
$BR
$BR
\( f'($d) \) = \{ans_rule(20) \}
$BR
END_TEXT

$ans = Compute("-$b1/(($d)**2)");
ANS($ans->cmp);

BEGIN_TEXT
\( f'($f) \) = \{ans_rule(20) \}
$BR
END_TEXT

$ans = Compute("-$b1/(($f)**2)");
ANS($ans->cmp);


