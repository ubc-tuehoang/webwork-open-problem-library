DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$an = random(2,8,1);
$as = random(-1,1,2);
$a  = $an * $as;

$bn = random(2,8,1);
$bs = random(-1,1,2);
$b  = $bn * $bs;

$m = random(4,6,1);
$n = random(2,3,1);


BEGIN_TEXT
Let \( \displaystyle f(x) =  $a x^{$m} \sqrt{x} + \frac{$b} {x^{$n} \sqrt{x} } \).
$BR
$BR
\( f'( x ) = \) \{ans_rule(30) \}
END_TEXT

$funct = Compute("$a*($m + 1/2)*x**($m - 1/2) - $b*($n + 1/2)/x**($n+3/2)");
$funct->{limits}=[1,10];

ANS($funct->cmp());

BEGIN_TEXT
$BR
[NOTE:  Your answer should be a function of the variable '\(x\)' and not a number!]
END_TEXT

