DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

do {
	$x0 = non_zero_random(-4, 4);
	$y0 = random(2, 5);
	$a = random(2, 6);
	$b = random(2, 4);
} until (
	3*$a*$x0**2*$y0 < 200
	and $a*$x0**3 - $b*$y0
	and ( 3*$a*$x0**2*$y0 )
	% ( 1 + $b*$y0 )
	
);
$c = $a*$x0**3 - $b*$y0;

Context('Numeric')->variables->are(
	x => 'Real',
	y => 'Real'
);
Context()->flags->set(
	reduceConstantFunctions => 0
);

$lhs = Formula("$a x^3 - $b y");
# Hack: format '+ $c' nicely but do not evaluate ln($y0).
$rhs = Formula("ln(y) + $c - ln(x)")->reduce->substitute(x => $y0);

Context('Fraction');
$deriv = Fraction(3*$a*$x0**2*$y0, 1 + $b*$y0)->reduce;

Context()->texStrings;
BEGIN_TEXT
For the equation given below, evaluate \( y' \)
at the point \( ($x0, $y0) \).
\[ $lhs = $rhs \]
$BR $BR
\(y'($x0) = \) \{ ans_rule(20) \}
END_TEXT
Context()->normalStrings;

ANS($deriv->cmp);

ENDDOCUMENT();
