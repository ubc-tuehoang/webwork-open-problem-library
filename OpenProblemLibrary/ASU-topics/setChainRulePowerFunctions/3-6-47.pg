DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
		   
Context('Numeric');

$a = random(2,6,1);
$b = random(1,5,1);
$c = random(-5,-2,1);
$dm = random(3,5,1);
$d = -$dm;
$x0 = random(1,2,1);
while ($b + $c*$x0 == 0)
{
$c = random(-5,-2,1);
}
$fcn = Formula("($a x)/($b + $c x)^($dm)") -> reduce;
$y0 = Compute("($a*$x0)*($b + $c*$x0)**($d)");
$m = Compute("($a*($c*$x0 + $b)**($d)) + ($a*$x0)*$d*$c*($b + $c*$x0)**($d-1)");

$answer = Compute("$m*(x-$x0) + $y0");

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;
Context()->texStrings;

##TEXT(EV2(<<EOT));
BEGIN_TEXT
