DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showpartialcorrectanswers = 1;

Context('Numeric');

$a = random(1, 4, 1);
$b = random(1,7,1);;
$c = random(2,7,1);

$f = Compute("($a x - $b)(x^2 - $c)")->reduce;
# Coefficients of f':
$x = 3*$a;
$y = -2*$b;
$z = -$c*$a;

# Roots of f':
$root1 = (-$y + (((($y)**2) - 4*$x*$z)**(.5)))/(2*$x);
$root2 = (-$y - (((($y)**2) - 4*$x*$z)**(.5)))/(2*$x);
$answer = Compute("$root1, $root2");

Context()->texStrings;
BEGIN_TEXT
Let \( f(x) = $f\).
Find all the values of \(x\) for which \( f'(x) = 0 \).
$BR $BR
Present your answer as a comma-separated list: \{ans_rule(40) \}
END_TEXT

ANS($answer->cmp);

ENDDOCUMENT();
