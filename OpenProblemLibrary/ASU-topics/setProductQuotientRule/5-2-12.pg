DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric');

$a = random(2,20,1);

BEGIN_TEXT
Suppose that \( f(x) = x^{$a} e^{x} \).  Find \(f'(1)\).

$BR $BR

\(f'(1)\) = \{ans_rule(30) \}
END_TEXT

$ans = Compute("exp(1)*($a+1)");
ANS($ans->cmp);

ENDDOCUMENT();
