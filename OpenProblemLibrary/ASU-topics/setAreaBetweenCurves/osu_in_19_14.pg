$gr = init_graph($l,$bot, $r,$t, axes=>[0,0], size=>[250,250]);
$gr->h_ticks(0,"black",0,-$a,$x1, $x2, $x3);
$gr->v_ticks(0,"black",0,$u,$v);
$gr->lb( new Label(-$a-0.5,-$t/60,-$a,
