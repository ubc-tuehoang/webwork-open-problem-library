$a = non_zero_random(-5,5);
$na = -$a;
$x1 = $a - 1 ;
$x2 = $a + 1 ;
$x3 = $a + 2 ;
$x4 = $a + 4 ;

TEXT(beginproblem());

BEGIN_TEXT

Let \[ f(x) = \frac{1}{x+$na} \]
$BR
$BR
Find
$BR $BR
(i) \(f'($x1)\) \{ans_rule(30)\}
$BR $BR
(ii) \(f'($x2)\) \{ans_rule(30)\}
$BR $BR
(iii) \(f'($x3)\) \{ans_rule(30)\}
$BR $BR
(iv) \(f'($x4)\) \{ans_rule(30)\}


END_TEXT

ANS(Compute("-1")->cmp);
ANS(Compute("-1")->cmp);
