DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "parserFormulaUpToConstant.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
sub str {
        my $x = shift;
        return ( $x > 0 ? '' : '-' )
        . ( ($x)**2 == 1 ? '' : abs($x) )
}

do {
	$a = list_random(-1, 1) * random(2, 9);
	$b = non_zero_random(-9, 9);
	$c = random(1, 9);
} until (
	gcd($a, $b) == 1 and
	($a > 0 or $a * $b < 0)
);

Context('Fraction');
$coeff = Fraction($c, $a)->reduce;

$ep1 = (3 - $b) / $a; $ep2 = (2.5 - $b) / $a;
$limits = [
	min($ep1, $ep2),
	max($ep1, $ep2)
];

Context('Numeric')->variables->are(
	y => [ 'Real', limits => $limits ]
);
Context()->flags->set(
	reduceConstants => 0
);
$l = Formula("$a*y + $b")->reduce;
$f = Formula("$c/($l)");
$F = FormulaUpToConstant(
	str($coeff) . "ln|$l|"
);
$F->{test_at} = [ [-($b + 3) / $a] ];

Context()->texStrings;
BEGIN_TEXT
Evaluate the following indefinite integral.
$BR $BR
\( \displaystyle \int $f \, dy = \)
\{ans_rule() \}
END_TEXT
Context()->normalStrings;

ANS($F->cmp);

Context()->texStrings;
BEGIN_SOLUTION
Since
\[
\frac{d}{dy} \! \Bigl \lbrace \ln(|$l|)
\Bigr \rbrace = \frac{$a}{$l},
\]
it follows that
\[
\int $f \, dy =
\textstyle  $F.
\]
END_SOLUTION

ENDDOCUMENT();
