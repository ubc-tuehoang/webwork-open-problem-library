DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "parserFormulaUpToConstant.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(3,9,1);
$tb = random(2, 9);
$a = 5; $tb = 7;
$b = "0.$tb";

Context('Fraction');
$coeff = Fraction(-10*$a, $tb);

Context('Numeric')->flags->set(
	reduceConstants => 0,
);
Context()->variables->are(
	t => 'Real'
);
$f = Formula("$a*e^(-$b*t)")->reduce;
$F = FormulaUpToConstant(
	"$coeff * e^(-$b*t)"
);

BEGIN_TEXT
Evaluate the indefinite integral.
$BR $BR
\( \displaystyle \int
$a e^{-$b t} \, dt = \)
\{ans_rule() \}
END_TEXT

ANS($F->cmp);

ENDDOCUMENT();
