DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "parserFormulaUpToConstant.pl",
  "PGcourse.pl"
);

sub str {
        my $x = shift;
        return ( $x > 0 ? '' : '-' )
        . ( ($x)**2 == 1 ? '' : abs($x) )
}

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2, 9);
$b = non_zero_random(-9, 9);
$k = random(3, 9);
$kp1 = $k + 1;

Context('Fraction');
$coeff = Fraction($a, $k + 1);

Context('Numeric')->flags->set(
	reduceConstants => 0
);
$l = Formula("x - $b")->reduce;
$f = Formula("$a * ($l)^($k)");
$F = FormulaUpToConstant(
	str($coeff) . "($l)^($kp1)"
);

Context()->texStrings;
BEGIN_TEXT
Evaluate the indefinite integral.
$BR $BR
\( \displaystyle \int $f \, dx = \)
\{ans_rule() \}
END_TEXT
Context()->normalStrings;

ANS($F->cmp);

$raw = ( gcd($a, $k + 1) == 1
	? ''
	: "= \frac{$a}{$kp1} $l^{$kp1} + C"
);

Context()->texStrings;
BEGIN_SOLUTION
Integrating by inspection gives
\[
\int $f \, dx
\textstyle $raw = $F.
\]
END_SOLUTION

ENDDOCUMENT();
