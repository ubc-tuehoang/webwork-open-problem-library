########################################################################

###########################
#  Initialization

DOCUMENT();      

loadMacros(
"PGstandard.pl",
"PGchoicemacros.pl",
"PGcourse.pl",
);

TEXT(beginproblem());

###########################
# Setup

$A = random(2,7,1);

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"Select all solutions of  
\( u_t = $A u_{x} \).  There may be more than
one correct answer.", 
"\( u = 0 \)$BR",
"\( u = e^{x+$A t} \)$BR",                
"\( u =  x + $A t \)$BR",
);
$mc -> extra(
"\( u = e^{$A x + t} \)$BR",
"\( u = $A e^{x} \)$BR",
"\( u = $A x - t \)$BR",
"\( u = $A x + t \)$BR",
);
$mc -> makeLast("None of the above");

###########################
# Main text

BEGIN_TEXT
\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}
END_TEXT

###########################
# Answer evaluation

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( checkbox_cmp( $mc->correct_ans() ) );


ENDDOCUMENT();        
