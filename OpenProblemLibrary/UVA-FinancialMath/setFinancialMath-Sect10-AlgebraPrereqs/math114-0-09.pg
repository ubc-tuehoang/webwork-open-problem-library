TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,6,.1);
$b=non_zero_random(-5,5,1);
$c=random(2,3,1);

BEGIN_TEXT
Find \( x \) if
\[  \frac{($a)^x ($a)^{($b)}}{($a)^2}=($a)^{$c} \]
$PAR
\(x = \)\{ans_rule(20)\}
END_TEXT

$ans = $c+2-$b;
ANS(num_cmp($ans) );

