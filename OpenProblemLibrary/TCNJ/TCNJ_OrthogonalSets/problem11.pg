TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-4,4,1);
$b = non_zero_random(-4,4,1);
$c = non_zero_random(-3,3,1);
$n = non_zero_random(-4,4,1);
$m = non_zero_random(-4,4,1);

$x1 = $a;
$x2 = $c;
$x3 = $b;
$x4 = 0;

$y1 = $b;
$y2 = 0;
$y3 = - $a;
$y4 = 1;

$z1 = $n * $c;
$z2 = - $m * $b - $n * $a;
$z3 = $m * $c;
$z4 = $a * $m * $c - $b * $n * $c;

