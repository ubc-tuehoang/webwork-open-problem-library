DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

sub cfr {
        my $fr = shift;
        $fr = [reduce($fr->[0], $fr->[1])];
        return ($fr->[1] == 1
            ? ($fr->[0] == 1 ? '' : ($fr->[0] == -1 ? '-' : $fr->[0]))
            : "$fr->[0]/$fr->[1]"
        );
}

Context('Numeric')->flags->set(
	reduceConstants => 0,
	formatStudentAnswer => 'parsed'
);
Context()->variables->are(
	s => 'Real'
);

$a = random(3,8,1);
$b = random(3,6,1);

$f = Formula("$a s^4 - $b s^5")->reduce;

$A = cfr [$a, 5];
$B = cfr [$b, 6];
$F = Formula("$A s^5 - $B s^6");

Context()->texStrings;
BEGIN_TEXT
Evaluate the indefinite integral:
$BR $BR $BCENTER
\(
\displaystyle \int \left( $f
\right) \, ds = \)
\{ans_rule(35) \} + \( C \).
$ECENTER
END_TEXT
Context()->normalStrings;

ANS($F->cmp(
	upToConstant => 1
	)
);

ENDDOCUMENT();
