DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "parserImplicitPlane.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
########################################
# Setup

Context("Numeric");
$showPartialCorrectAnswers = 1;

$a1 = random(2,5,1);
$b1 = random(2,3,1);

$x1 = random(4,5,1);

$f = Formula("$a1*x+$b1/x");
$fx = $f->eval(x=>$x1);

$df = $f->D;
$dfx = $df->eval(x=>$x1); 

$y_intercept = -$dfx*$x1+$fx;

Context("ImplicitPlane");
$h = ImplicitPlane("y = $dfx x + $y_intercept")->with(correct_ans=>"y = $dfx x + $y_intercept");
 
########################################
# Main Text

Context()->texStrings;
BEGIN_TEXT
If \(\displaystyle f(x) = $f \), 
$BR$BR
\( f'( $x1 ) = \) \{ans_rule(20) \}
$BR$BR
Use this to find the equation of the tangent line to the curve \(\displaystyle y = $f  \) at the point \( ( $x1 , $fx ) \). Write your answer in the form:
$BR$BR
\( y = mx+b \), where  \( m \)  is the slope and  \( b \)  is the y-intercept. 
$BR$BR
\{ ans_rule(40)  \}
 
END_TEXT
Context()->normalStrings;

########################################
# Answers

ANS($dfx->cmp);
ANS($h->cmp);

