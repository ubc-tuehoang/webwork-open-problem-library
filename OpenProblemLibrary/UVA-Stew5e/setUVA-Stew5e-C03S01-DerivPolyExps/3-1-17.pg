DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "AnswerFormatHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,7,1);
$b = random(2,12,1);
$c = random(1,40,1);

Context("Numeric");
Context()->noreduce('(-x)-y');
Context()->variables->set(x=>{limits=>[0,4]});


$f = Compute("( $a x^2 + $b x + $c)  / ( sqrt(x) )")->reduce;
$df = $f->D;


Context()->texStrings;

BEGIN_TEXT
If \(\displaystyle f(x) =  $f \), find \( f'( x ) \).
$BR
$BR
\( f'(x) \) = \{ans_rule(30) \}
END_TEXT


ANS($df->cmp());

ENDDOCUMENT();

