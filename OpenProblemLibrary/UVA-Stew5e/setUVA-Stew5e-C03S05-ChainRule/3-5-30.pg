DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


Context('Numeric');

$a = random(2,9,1);
$b_numb = random(2,9,1);
$b_sign = random(-1,1,2);
$b      = $b_numb * $b_sign;


BEGIN_TEXT
Let \[ y = \sqrt{$a + $b \tan{x}}  \]
\( \displaystyle \frac{dy}{dx} = \) \{ans_rule(80) \}
END_TEXT


$ans = "$b/2*(sec(x))^2*($a+$b*tan(x))^(-.5)";
ANS(fun_cmp($ans,limits=>[-0.2,0.2]));

$b2=$b/2;
BEGIN_SOLUTION
$PAR SOLUTION $PAR
\[ \frac{dy}{dx} = \frac{1}{2} ($a + $b \tan{x})^{-1/2} \frac{d}{dx} ($a + $b \tan{x} ) =  \frac{1}{2} ($a + $b \tan{x})^{-1/2} ($b \sec^2 x)
 =   \frac{$b2 \sec^2 x}{ \sqrt{$a + $b \tan{x}}}
\]
END_SOLUTION

