DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context("Numeric");
$a = random(2,5,1);
$b = random(2,8,1);
$c = random(-4,-1,1);
$x1 = random(1,5,1);
$deriv = (0.5*($a*$x1+$b)**(-0.5))*$a*exp(sqrt($a*$x1 +$b));
$funct = Compute("$a*0.5*e^(sqrt($a*x +$b))/sqrt($a*x+$b)")->reduce;

TEXT(EV2(<<EOT));
If \( f(x) = \displaystyle e^{\sqrt{$a x +$b}}\), find \( f'( x ) \).

$BR $BR \{ans_rule(50) \}
EOT

ANS($funct->cmp());

Context()->texStrings;
BEGIN_SOLUTION
$PAR SOLUTION $PAR 
\[ \begin{array}{rcl} f'(x) &=& e^{\sqrt{$a x +$b}} \frac{d}{dx} (\sqrt{$a x +$b}) 
\\
& =& e^{\sqrt{$a x +$b}} \frac{1}{2} ($a x +$b)^{-1/2} \frac{d}{dx} ($a x +$b)
\\ & =& e^{\sqrt{$a x +$b}} \frac{1}{2} ($a x +$b)^{-1/2} \cdot  $a
\\ &=& \displaystyle $funct 
\end{array} 
\]
END_SOLUTION

