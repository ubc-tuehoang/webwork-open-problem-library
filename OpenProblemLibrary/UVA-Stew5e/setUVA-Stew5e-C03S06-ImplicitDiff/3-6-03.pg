DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

do {
	$a = random(2, 9);
	$x = random(2, 9);
} until (
	abs($a*$x - 16) <  6
);
$b = $a*$x - 1;

Context('Fraction');
$y = Fraction($x, $b);
$deriv = Fraction(-1, $b**2)->reduce;

Context()->texStrings;
BEGIN_TEXT
If
\[ \frac{1}{x} + \frac{1}{y} = $a \]
and \( y($x) = $y \), find
\( y'($x) \) by implicit differentiation.
$BR $BR
\( y'($x) = \) \( \{ans_rule(10) \}
END_TEXT
Context()->normalStrings;

ANS($deriv->cmp);

ENDDOCUMENT();
