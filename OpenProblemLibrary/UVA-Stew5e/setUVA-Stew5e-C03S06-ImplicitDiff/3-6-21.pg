DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric')->variables->are(
	x => 'Real',
	f => [ 'Real', TeX => 'f(x)' ]
);

do {
	$a = random(1, 9);
	$b = random(1, 9);
	$p = random(3, 5);
	$q = random(2, 5);
	$xo = non_zero_random(-3, 3);
	$fo = non_zero_random(-3, 3);
	$F = Formula(
		"$a*x*f^($p) + $b*x^($q)*f"
	)->reduce;
	$Fxo = $F->D('x')->eval(
		x => $xo,
		f => $fo
	);
	$Ffo = $F->D('f')->eval(
		x => $xo,
		f => $fo
	);
	$k = $F->eval(
		x => $xo,
		f => $fo
	);
} until (
	$Fxo and $Ffo
	and abs($k) < 100
);

$Fs = ( $a == 1 ? '' : $a )
	. "x \left( f(x) \right)^{$p} + "
	. ( $b == 1 ? '' : $b )
	. "x^{$q} f(x)";

Context('Fraction');
$fpxo = Fraction(-$Fxo, $Ffo)->reduce;

Context()->texStrings;
BEGIN_TEXT
Find \( f'($xo) \) if \( $Fs = $k \)
and \( f($xo) = $fo \).
$BR $BR
\( f'($xo) = \) \{ ans_rule() \}
END_TEXT
Context()->normalStrings;

ANS($fpxo->cmp);

ENDDOCUMENT();
