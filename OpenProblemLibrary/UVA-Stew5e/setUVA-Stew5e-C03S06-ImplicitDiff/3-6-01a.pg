DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric')->variables->are(
	x => 'Real',
	y => 'Real'
);
Context()->flags->set(
	reduceConstants => 0
);

do {
	$a = random(1, 9);
	$b = random(1, 9);
	$p = random(3, 9);
	$xo = random(1, 9);
	$yo = random(1, 4);
	$F = Formula(
		"$a*x*y^($p) + $b*x*y"
	)->reduce;
} until (
	gcd($a, $b) == 1 and
	abs( $F->D('x')->eval(
		x => $xo, y => $yo
	) ) < 100 and
	abs( $F->D('y')->eval(
		x => $xo, y => $yo
	) ) < 100
);
$k = $F->eval(x => $xo, y => $yo);

$ap = $a * $p; $pm1 = $p - 1;
$Fx = Formula("$a*y^($p) + $b*y")->reduce;
$Fy = Formula("$ap*x*y^($pm1) + $b*x")->reduce;
$Fxo_s = $Fx->substitute(x => $xo, y => $yo);
$Fyo_s = $Fy->substitute(x => $xo, y => $yo);
$Fxo = $Fx->eval(x => $xo, y => $yo);
$Fyo = $Fy->eval(x => $xo, y => $yo);

Context('Fraction');
$slope = Fraction(-$Fxo, $Fyo)->reduce;

Context()->texStrings;
BEGIN_TEXT
Use implicit differentiation to find the
slope of the tangent line to the curve
defined by \( $F = $k \)
at the point \( ($xo, $yo) \).
$BR $BR
The slope of the tangent line to the
curve at the given point is
\{ ans_rule(5) \}.
END_TEXT
Context()->normalStrings;

ANS($slope->cmp);

Context()->texStrings;
$simp = ( gcd($Fxo, $Fyo) == 1
	? ''
	: "=" . $slope
);
$as = ( $a == 1 ? '' : $a );

BEGIN_SOLUTION
Differentiating implicitly with respect
to \( x \) gives
\[
$as y^{$p} + $ap x y^{$pm1} \, \frac{dy}{dx}
+ $b y + $b x \, \frac{dy}{dx},
\]
or
\[
($Fy) \frac{dy}{dx} = -($Fx),
\]
and so
\[
\frac{dy}{dx} = - \frac{$Fx}{$Fy}.
\]
Therefore, the slope of the tangent
line to the curve at the point
\( ($xo, $yo) \) is equal to
\[
\frac{dy}{dx} \bigg \vert _
{(x, y) = ($xo, $yo)}
= - \frac{$Fxo_s}{$Fyo_s}
\textstyle
= - \frac{$Fxo}{$Fyo} $simp.
\]
END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
