# DESCRIPTION
# Convert the set {x | x != 0,-b,b} to interval notation.
# ENDDESCRIPTION

## DBsubject(Algebra)
## DBchapter(Algebra of real numbers and simplifying expressions)
## DBsection(Inequalities and intervals)
## Institution(University of Missouri-Columbia)
## Author(Rick Lynch)
## MLT(intervals_with_exceptions)
## MLTleader(1)
## Level(2)
## KEYWORDS('interval notation', 'sets')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Interval");
Context()->operators->undefine("-");
$b = random(1,19);
$answer = Interval("(-inf,-$b)U(-$b,0)U(0,$b)U($b,inf)");
$set = "\lbrace x \,|\,x \neq 0, \pm $b \rbrace";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Write the set
$PAR \[ $set \] $PAR
using interval notation.
$PAR
Answer: \{ans_rule(35)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp());

Context()->texStrings;
BEGIN_TEXT
$PAR
${BBOLD}Help:${EBOLD}  \{ helpLink("intervals", "Click here for help entering an interval as an answer.") \} 
$BR
END_TEXT
Context()->normalStrings;

COMMENT('Desc: Convert the set {x | x != 0,-b,b} to interval notation.');
ENDDOCUMENT();
