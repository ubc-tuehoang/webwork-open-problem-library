ANS(Compute($pmt)->with(tolerance=>.05, tolType => absolute)->cmp);
ANS(Compute($int1)->with(tolerance=>.05, tolType => absolute)->cmp);
ANS(Compute($bal1)->with(tolerance=>.05, tolType => absolute)->cmp);

