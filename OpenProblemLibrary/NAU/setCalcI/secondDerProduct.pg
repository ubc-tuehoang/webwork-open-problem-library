##DESCRIPTION
## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Product rule (without trigonometric functions))
## Institution(NAU)
## Author(Jim Swift)
## Updated December 2014 at OPL Workshop by JDA
## MLT(prodruleNoTrigexpoPoly)
## Level(2)
## MO(1)
## KEYWORDS('derivatives')

##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

Context('Numeric');
Context()->noreduce('(-x)-y','(-x)+y');

$a = non_zero_random(-5,5);
$b = random(-5,5);
$c = random(-5,5);
$poly = Compute("$a*x^2 + $b*x + $c")->reduce;
$fp = Compute("($a*x**2+(2*$a+$b)*x + $b+$c)*e^(x)");
$fpp = Compute("($a*x**2 + (4*$a+$b)*x + 2*$a + 2*$b+$c)*e^(x)");

Context()->texStrings;
BEGIN_TEXT
Let
\( f(x) = ($poly) e^x  \).  Compute the derivative.
$BR
\(f'(x) = \) \{ans_rule(30) \} .
$BR
$BR
Simplify this before finding the second derivative.
$BR
\( f''(x) = \)  \{ans_rule(30) \} .
END_TEXT

ANS($fp->cmp);
ANS($fpp->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.
