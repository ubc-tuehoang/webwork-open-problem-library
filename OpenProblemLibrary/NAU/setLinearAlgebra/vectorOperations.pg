# Please please please DO NOT change the variables to bold and (,,) to <,,>

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(-10, 10);
$b = random(-10, 10);
$c = random(-10, 10);
$d = random(-10, 10);
$e = random(-10, 10);
$f = random(-10, 10);

{ $g = non_zero_random(-10, 10);
redo if ($g==1 || $g==-1);
}
$h = random(2, 10);

BEGIN_TEXT
Let \( x =( $a, $b, $c ) \) and \( y = ( $d, $e, $f ) \) be in \( \mathbb R^3 \).  Compute the following:
$BR$BR
\( x +  y \) = (\{ ans_rule(6) \}, \{ ans_rule(6) \},
\{ ans_rule(6) \})
END_TEXT
ANS(num_cmp($a+$d));
ANS(num_cmp($b+$e));
ANS(num_cmp($c+$f));

BEGIN_TEXT
$BR$BR
\($g x= \) (\{ ans_rule(6) \}, \{ ans_rule(6) \}, \{
ans_rule(6) \})
END_TEXT
ANS(num_cmp($g*$a));
ANS(num_cmp($g*$b));
ANS(num_cmp($g*$c));

BEGIN_TEXT
$BR$BR
\( x  - y = \) (\{ ans_rule(6) \}, \{ ans_rule(6) \}, \{
ans_rule(6) \})
END_TEXT
ANS(num_cmp($a-$d));
ANS(num_cmp($b-$e));
ANS(num_cmp($c-$f));

BEGIN_TEXT
$BR$BR
$g \(  x  + $h  y \)= (\{ ans_rule(6) \}, \{ ans_rule(6) \}, \{
ans_rule(6) \})
END_TEXT

ANS(num_cmp($g*$a+$h*$d));
ANS(num_cmp($g*$b+$h*$e));
ANS(num_cmp($g*$c+$h*$f));


ENDDOCUMENT(); 
