DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedComplex.pl",
  "PGcourse.pl"
);

########################################################################

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;

########################################################################

Context("Complex");

$a = random(2,8,1);
$b = random(3,10,1);

$c = Compute("($b)^2");
$d = Compute("$a*$b");

Context("LimitedComplex-cartesian-strict");

$ans = Compute("$d i");

########################################################################

Context()->texStrings;
BEGIN_TEXT
Write the following expression in terms of \(i\) and simplify
\[
$a \sqrt{-$c}.
\]
$PAR
Answer: \{ans_rule(30)\}
END_TEXT
Context()->normalStrings;

########################################################################

Context("LimitedComplex-cartesian");
ANS( $ans->cmp );

ENDDOCUMENT();
