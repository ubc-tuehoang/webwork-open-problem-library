DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "MatrixReduce.pl",
  "PGcourse.pl"
);
 

## Do NOT show partial correct answers
$showPartialCorrectAnswers = 1;

do {
  $a1 = random(-5,5);
  $a2 = random(-5,5);
  $a3 = random(-5,5);
  $b1 = random(-5,5);
  $b2 = random(-5,5);
  $b3 = random(-5,5);
  $M = Matrix([[$a1,$a2,$a3],[$b1,$b2,$b3]]);
} until ( !(rref($M)->row(2)->isZero));

$a = Vector($a1,$a2,$a3);
$b = Vector($b1,$b2,$b3);

$s = Real(random(-4,-1));
$t = Real(random(1,5));

$c = $s*$a + $t*$b;

$c1 = $s*$a1 + $t*$b1;
$c2 = $s*$a2 + $t*$b2;
$c3 = $s*$a3 + $t*$b3;

## Ok, we are ready to begin the problem...
##
TEXT(beginproblem());


BEGIN_TEXT
Let \( \mathbf a = $a\) and 
\( \mathbf b = $b \).  

Show that there are scalars s and t so that
\( s \mathbf a + t \mathbf b = $c \). 
$BR
You might want to sketch the vectors to get some intuition.
$BR
$BR
\(s = \)\{ans_rule()\}$BR
\( t = \) \{ans_rule()\}
END_TEXT
    ANS(num_cmp( $s ));
    ANS(num_cmp( $t ));
 
ENDDOCUMENT();

