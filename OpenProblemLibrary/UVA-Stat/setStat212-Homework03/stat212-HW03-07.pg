$a = random(.15,.35,.01);
$b = random(.59,.89,.01);
$banda = random(.26,.44,.01);

BEGIN_TEXT
$PAR 
Suppose that \(A\) and \(B\) are two events for which
\(P(A) = $a\), \(P(B) = $b\), and \(P(A\;\mathrm{and}\;B) = $banda\)  Find 
\(P(A|B)\).
$PAR
\(P(A|B) = \) \{ans_rule(15)\}
$BR


END_TEXT

ANS(num_cmp($banda/$b)); 

