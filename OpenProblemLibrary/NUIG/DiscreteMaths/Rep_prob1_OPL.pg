DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl"
);

#####################################################################

$showPartialCorrectAnswers = 1; 
TEXT(beginproblem());

Context("Numeric");

### 3 Letter rivers
$n3 = random(1,3);

if ( $n3 == 1 )
{
  $Q3 = "LEE";
  $ans3 = Compute("(3!)/(2!)");
}
elsif ( $n3 == 2) {
  $Q3 = "MOY";
  $ans3 = Compute("(3!)");
}
else {
  $Q3 = "DEE";
  $ans3 = Compute("(3!)/(2!)");
}

### 4 Letter rivers
$n4 = random(1,4);

if ( $n4 == 1 )
{
  $Q4 = "SUIR";
  $ans4 = Compute("(4!)");
}
elsif ( $n4 == 2) {
  $Q4 = "BANN";
  $ans4 = Compute("(4!)/(2!)");
}
elsif ( $n4 == 3)  {
  $Q4 = "SUCK";
  $ans4 = Compute("(4!)");
}
else {
  $Q4 = "NORE";
  $ans4 = Compute("(4!)");
}



### Longer rivers
$n5 = random(1,5);

if ( $n5 == 1 )
{
  $Q5 = "SHANNON";
  $ans5 = Compute("(7!)/(3!)");
}
elsif ( $n5 == 2) {
  $Q5 = "BARROW";
  $ans5 = Compute("(6!)/(2!)");
}
elsif  ( $n5 == 3) {
  $Q5 = "BLACKWATER";
  $ans5 = Compute("(10!)/(2!)");
}
elsif  ( $n5 == 4) {
  $Q5 = "CARRYDUFF";
  $ans5 = Compute("(9!)/(2!*2!)");
}
else {
  $Q5 = "CORRIB";
  $ans5 = Compute("(6!)/(2!)");
}



#####################################################################

Context()->texStrings;
BEGIN_PGML
How many "words" can you make from the letters [$Q3]?
END_PGML
BEGIN_TEXT
$PAR
Answer: \{ans_rule(20)\}
$PAR
END_TEXT
#####################################################################

ANS(($ans3)->cmp());

