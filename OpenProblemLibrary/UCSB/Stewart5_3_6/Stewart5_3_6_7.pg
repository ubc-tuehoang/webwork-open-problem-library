## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Implicit differentiation)
## Institution(UCSB)
## MLT(xy_poly_deriv)
## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('3.6')
## Problem1('7')
## KEYWORDS('Differentiation','Product','Quotient')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context()->variables->are(
	x => [ 'Real', limits => [1, 2] ],
	y => [ 'Real', limits => [1, 2] ]
);

do {
	$a = random(1, 9);
	$b = random(1, 9);
	$c = random(1, 9);
	$p = random(2, 7);
	$q = random(2, 7);
	$r = random(2, 7);
	$s = random(2, 7);
} until (
	gcd($a * $p, $b * $q) *
	gcd($b* $r, $c * $s) == 1
	and ($p - $s) * ($q - $r)
);
$k = random(1, 9);

$F = Formula("$a x^($p) + $b x^($q) y^($r)
	+ $c y^($s)")->reduce;

$ap = $a * $p;
$pm1 = $p - 1;
$bq = $b * $q;
$qm1 = $q - 1;
$br = $b * $r;
$rm1 = $r - 1;
$cs = $c * $s;
$sm1 = $s - 1;

$Fx = Formula("$ap x^($pm1)
	+ $bq x^($qm1) y^($r)")->reduce;
$Fy = Formula("$br x^($q) y^($rm1)
	+ $cs y^($sm1)")->reduce;

$dydx = -($Fx/$Fy);

Context()->texStrings;
BEGIN_TEXT
Find \( \displaystyle \frac{dy}{dx} \)
by implicit differentiation, where
\( $F = $k \).
$BR $BR
\( \displaystyle \frac{dy}{dx} = \)
\{ ans_rule(50) \}
END_TEXT
Context()->normalStrings;

ANS($dydx->cmp);

$pm1s = ($p == 2 ? '' : $pm1);
$qm1s = ($q == 2 ? '' : $qm1);
$rm1s = ($r == 2 ? '' : $rm1);
$sm1s = ($s == 2 ? '' : $sm1);

Context()->texStrings;
BEGIN_SOLUTION
Differentiating with respect to \( x \) gives
\[
$ap x^{$pm1s} + $bq x^{$qm1s} y^{$r}
+ $br x^{$q} y^{$rm1s} \, \frac{dy}{dx}
+ $cs y^{$sm1s} \, \frac{dy}{dx}
= 0,
\]
or
\[
($Fy) \, \frac{dy}{dx} = -($Fx).
\]
Therefore,
\[
\frac{dy}{dx} = $dydx.
\]
END_SOLUTION

ENDDOCUMENT();
