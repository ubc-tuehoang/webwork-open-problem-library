## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Implicit differentiation)
## Institution(UCSB)
## MLT(xy_poly_tangent_equation)
## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('3.6')
## Problem1('33')
## KEYWORDS('Differentiation','Product','Quotient')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "parserImplicitPlane.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

do {
	$a = random(1, 2);
	$b = random($a + 1, 5);
} until (
	gcd($a, $b) == 1
);

Context('Numeric')->variables->are(
	x => 'Real',
	y => 'Real'
);

$f = Formula(
	"x*(x - $a)*(x - $b)"
)->reduce;
$f_expanded = Formula(
	"x^3 - ($a + $b)*x^2 + $a*$b*x"
)->reduce;
$df = Formula(
	"3*x^2 - (2*$a + 2*$b)*x + $a*$b"
)->reduce;

$g = Formula(
	"y*(y^2 - $a**2)*(y - $b)"
)->reduce;
$g_expanded = Formula(
	"y^4 - $b*y^3 - $a**2*y^2 + $a**2*$b*y"
)->reduce;
$dg = Formula(
	"4*y^3 - 3*$b*y^2 - 2*$a**2*y + $a**2*$b"
)->reduce;

$x0 = 0;
$y0 = list_random(-$a, $a, $b);
$P0 = Point($x0, $y0);
$df0 = $df->eval(x => $x0);
$dg0 = $dg->eval(y => $y0);
$n0 = Vector( (reduce($dg0, -$df0))[1, 0] );

$x1 = list_random($a, $b);
$y1 = list_random(0, -$a, $a, $b);
$P1 = Point($x1, $y1);
$df1 = $df->eval(x => $x1);
$dg1 = $dg->eval(y => $y1);
$n1 = Vector( (reduce($dg1, -$df1))[1, 0] );

$delta_y0 = Formula("y - $y0")->reduce;
$delta_x1 = Formula("x - $x1")->reduce;
$delta_y1 = Formula("y - $y1")->reduce;

Context('Fraction');
$m0 = Fraction($df0, $dg0)->reduce;
$m1 = Fraction($df1, $dg1)->reduce;

Context('ImplicitPlane')->variables->are(
	x => 'Real',
	y => 'Real'
);
$tan_line0 = ImplicitPlane(
	Point($P0),
	Vector($n0)
);
$tan_line1 = ImplicitPlane(
	Point($P1),
	Vector($n1)
);

@answers = (
	$tan_line0->cmp,
	$tan_line1->cmp
);

Context()->texStrings;
BEGIN_TEXT
Given the curve with equation
\( $g = $f \), find equations of
the tangent lines at the points
\( $P0 \) and \( $P1 \).
$BR$BR
\{ ans_rule(15) \}
is an \{ helpLink(equation) \}
of the tangent line to the curve
at the point \( $P0 \).
$BR$BR
\{ ans_rule(15) \} is an equation
of the tangent line to the curve
at the point \( $P1 \).
END_TEXT
Context()->normalStrings;

ANS(@answers);

Context()->texStrings;
BEGIN_SOLUTION
Writing the equation of the curve
as \[ $g_expanded = $f_expanded, \]
and then differentiating implicitly
with respect to \( x \), gives
\[
($dg) \, \frac{dy}{dx} = $df,
\]
and so
\[
\frac{dy}{dx} = \frac{$df}{$dg}.
\]
If \( x = $x0 \) and \( y = $y0 \)
then
\[
\frac{dy}{dx} = $m0,
\]
so the tangent line to the curve at
the point \( $P0 \) has equation
\( $delta_y0 = $m0 x \),
or \( $tan_line0 \).
$BR $BR
If \( x = $x1 \) and \( y = $y1 \)
then
\[
\frac{dy}{dx} = $m1,
\]
so the tangent line to the curve at
the point \( $P1 \) has equation
\( $delta_y1 = $m1 ($delta_x1) \),
or \( $tan_line1 \).
END_SOLUTION

ENDDOCUMENT();
