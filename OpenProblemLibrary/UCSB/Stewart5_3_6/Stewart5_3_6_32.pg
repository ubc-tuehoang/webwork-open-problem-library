## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Implicit differentiation)
## Institution(UCSB)
## MLT(xy_poly_tangent_equation)
## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('3.6')
## Problem1('32')
## KEYWORDS('Differentiation','Product','Quotient')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "parserImplicitPlane.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

do {
	$a = random(1, 9);
	$b = random(3, 49);
	$to = list_random(-1, 1)
		* random(2, 4);
	$nxo = $a*(3*$to**2 - $b);
	$nyo = -2*$a*$to;
	$npo = ($to**2 - $b)**2;
	($nxo, $nyo, $npo) = map {
		$_ / (
			( $nxo > 0 ? 1 : -1) *
			gcd($nxo, gcd($nyo, $npo))
		)
	} ($nxo, $nyo, $npo);
} until (
	$a != $b
	and $to**2 - $b
	and abs($nxo) < 100
	and abs($npo) < 100
	and $nxo % $nyo
);

Context('Fraction');
$xo = Fraction($to**2 - $b, $a)->reduce;
$yo = ($to * $xo)->reduce;
$mFyo = (2*$yo)->reduce;
$mFyoinv = (1/$mFyo)->reduce;
$Fxo = (3*$a*$xo**2 + 2*$b*$xo)->reduce;
$mo = ($Fxo/$mFyo)->reduce;
$Po = Point($xo, $yo);

Context('Numeric')->flags->set(
	reduceConstants => 0,
	reduceConstantFunctions => 0,
);
Context()->variables->are(
	x => 'Real',
	y => 'Real'
);
Context()->noreduce('(-x)-y', '(-x)+y');
$F = Formula("$a*x^3 + $b*x^2")->reduce;
$Fx = Formula("3*$a*x^2 + 2*$b*x")->reduce;
$mFy = Formula("2*y")->reduce;

$delta_x = Formula('x'
	. ( $xo > 0 ? '-' : '+' )
	. abs($xo)
);
$delta_y = Formula('y'
	. ($yo > 0 ? '-' : '+' )
	.abs($yo)
);
$nxo_delta_x = Formula("$nxo($delta_x)");
$mnyo = -$nyo;
$mnyo_delta_y = Formula("$mnyo*($delta_y)");

Context('ImplicitPlane')->variables->are(
	x => 'Real',
	y => 'Real'
);
$tan_line = ImplicitPlane(
	"$nxo*x + $nyo*y = $npo"
)->reduce;

Context()->texStrings;
BEGIN_TEXT
The curve with equation \(y^2 = $F \) is
called a ${BBOLD}Tschirnhausen cubic${EBOLD}.
Find the equation of the tangent line to
this curve at the point \( $Po \).
$BR $BR
An \{ helpLink(equation) \} of the tangent
line to the curve at the point \( $Po \) is
\{ ans_rule(15) \}.
END_TEXT
Context()->normalStrings;

ANS($tan_line->cmp);

Context()->texStrings;
BEGIN_SOLUTION
Differentiating implicitly
with respect to \( x \) gives
\[ $mFy \, \frac{dy}{dx} = $Fx. \]
If \( x = $xo \) and \( y = $yo \),
then the last equation becomes
\[ $mFyo \, \frac{dy}{dx} = $Fxo,
\qquad \text{and so} \qquad
\dfrac{dy}{dx} = \left( $Fxo \right)
\left( $mFyoinv \right) = $mo. \]
If \( (x, y) \) is any point on the
tangent line besides \( $Po \), then
\[ $mo = \frac{$delta_y}{$delta_x},
\qquad \text{or} \qquad \textstyle
$nxo_delta_x = $mnyo_delta_y.  \]
Hence, the tangent line to the curve
at the point \( $Po \)
is defined by \( $tan_line \).
END_SOLUTION

ENDDOCUMENT();
