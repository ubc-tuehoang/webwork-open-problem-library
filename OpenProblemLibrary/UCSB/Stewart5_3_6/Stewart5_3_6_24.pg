## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Implicit differentiation)
## Institution(UCSB)
## MLT(xy_poly_deriv)
## Level(3)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('3.6')
## Problem1('24')
## KEYWORDS('Differentiation','Product','Quotient')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;
$a = random(1, 10);

Context('Numeric')->variables->are(
	x => [ 'Real', limits => [1, 2] ],
	y => [ 'Real', limits => [-2, -1] ]
);
$lhs = Formula("(x^2 + y^2)^2")->reduce;
$rhs = Formula("$a*x^2*y")->reduce;

$d = gcd($a, 4);

$mFy = Formula("($a/$d)x^2 - (4/$d)*y*(x^2 + y^2)")->reduce;
$Fx = Formula("(4/$d)*x*(x^2 + y^2) - (2*$a/$d)*x*y")->reduce;

$dxdy = ($mFy/$Fx)->reduce;

Context()->texStrings;
BEGIN_TEXT
Given \( $lhs = $rhs \), find
\( \displaystyle \frac{dx}{dy} \) using
implicit differentiation by regarding
\( x \) as a function of \( y \).
$BR $BR
\(\displaystyle \frac{dx}{dy} = \)
\{ ans_rule(50) \}
END_TEXT
Context()->normalStrings;

ANS($dxdy->cmp);

ENDDOCUMENT();
