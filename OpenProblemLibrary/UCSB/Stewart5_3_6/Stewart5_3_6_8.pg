## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Implicit differentiation)
## Institution(UCSB)
## MLT(xy_poly_deriv)
## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('3.6')
## Problem1('8')
## KEYWORDS('Differentiation','Product','Quotient')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric')->variables->are(
	x => [ 'Real', limits => [.5, 1] ],
	y => [ 'Real', limits => [2, 3] ]
);

$a = random(2, 9);
do {
	$p = random(2, 9);
	$q = random(3, 9);
} until (
	gcd($p, $q) == 1
);
$F = Formula("x^($p) - $a xy + y^($q)")->reduce;

$pm1 = $p - 1;
$qm1 = $q - 1;

$mFx = Formula("$a y - $p x^($pm1)")->reduce;
$Fy = Formula("$q y^($qm1) - $a x")->reduce;

$dydx = $mFx/$Fy;

Context()->texStrings;
BEGIN_TEXT
Find \( \displaystyle \frac{dy}{dx} \)
by implicit differentiation if
\( $F = c \), where \( c \) is a
constant.
$BR $BR
\(\displaystyle \frac{dy}{dx} = \)
\{ ans_rule(20) \}
END_TEXT
Context()->normalStrings;

ANS($dydx->cmp);

$pm1s = ($p == 2 ? '' : $pm1);

Context()->texStrings;
BEGIN_SOLUTION
Differentiating implicitly with respect
to \( x \) gives
\[
$p x^{$pm1s} - $a y - $a x \, \frac{dy}{dx}
+ $q y^{$qm1} \, \frac{dy}{dx} = 0,
\]
or
\[
($Fy) \, \frac{dy}{dx} = $mFx.
\]
Therefore,
\[
\frac{dy}{dx} = $dydx.
\]
END_SOLUTION

ENDDOCUMENT();
