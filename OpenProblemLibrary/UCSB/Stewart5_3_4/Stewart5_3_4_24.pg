$a = non_zero_random(-10,10,1);

BEGIN_TEXT
Find the equation of the tangent line to the curve \(\displaystyle y=\frac{$a}{\sin{x}+\cos{x}}\) at the point \((0,$a)\).
$BR $BR
\(y =\) \{ans_rule(50)\}
END_TEXT

$ans = Compute("(-$a)*x+$a")->reduce;
ANS($ans->cmp);

