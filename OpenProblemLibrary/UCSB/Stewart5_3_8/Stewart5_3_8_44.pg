  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Numeric");

$a=random(2,10,1)*random(-1,1,2);
$c = 2*$a;
$df = Compute("$c*ln(x)*x^($a*ln(x) - 1)");

BEGIN_TEXT

Use logarithmic differentiation to find the derivative of the function
\[y= x^{$a \ln{x}} \]

$BR$BR

\(y' =\) \{ans_rule(50)\}

END_TEXT

ANS($df -> cmp);

