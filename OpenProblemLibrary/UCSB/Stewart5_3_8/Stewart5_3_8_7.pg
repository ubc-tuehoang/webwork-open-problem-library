DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context("Numeric");
Context()->variables->set(x=>{limits=>[0, 4]});

$b=random(1,4,1);
$a=2*($b)+1;
$c = random(1, 8);

$ans = Compute("(ln(x+$c))^((1/$a)-1)/($a*(x+$c))");

BEGIN_TEXT

Differentiate \(\displaystyle f(x)=\sqrt[$a]{\ln(x+$c)}\).

$BR $BR

\(f'(x) =\) \{ans_rule(30)\}

END_TEXT

ANS($ans->cmp());

ENDDOCUMENT();
