## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Implicit differentiation)
## Institution(UCSB)
## Level(3)
## MLT(xy_poly_log_deriv)
## MLTleader(1)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('3.8')
## Problem1('47')
## KEYWORDS('Differentiation','Product','Quotient')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

do {
	$a = random(1, 9);
	$b = random(1, 9);
} until ( $a - $b );
Context('Numeric')->variables->are(
	x => 'Real',
	y => 'Real'
);
$P = Formula("$a*x^2 + $b*y^2")->reduce;
$L = Formula("ln($P)")->reduce;
@ys = map { random(6, 9, 0.1) } (0 .. 5);
$test_points = [
	map {
		[ sqrt( (exp($_) - $b*($_)**2) / $a ), $_ ]
	} (@ys)
];
$dydx = Formula(
	"2*$a*x / (e^y - 2*$b*y)"
)->with(
	test_points => $test_points
)->reduce;

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context()->texStrings;
BEGIN_TEXT
Find \(\displaystyle \frac{dy}{dx} \),
if \( y = $L \).
$BR $BR
\(\displaystyle \frac{dy}{dx} = \)
\{ans_rule()\}
END_TEXT
Context()->normalStrings;

ANS($dydx->cmp);

$ta = 2*$a; $tb = 2*$b;

Context()->texStrings;
BEGIN_SOLUTION
Writing the given equation as
\( e^y = $P \), and then differentiating
implicitly with respect to \( x \), gives
\[
e^y \, \frac{dy}{dx} =
$ta x + $tb y \, \frac{dy}{dx},
\]
or
\[
(e^y - $tb y) \, \frac{dy}{dx} = $ta x.
\]
Therefore,
\[
\frac{dy}{dx} = $dydx.
\]
$BR ${BBOLD}Note:${EBOLD}$SPACE
Were the equation not revised before
differentiating, the answer
\[
\frac{dy}{dx} = \frac{$ta x}{$P - $tb y}
\]
would result.
END_SOLUTION

ENDDOCUMENT();
