DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
Context('Numeric');
Context()->variables->are('a'=>"Real");

$a=random(1,10,1);
$b=random(1,10,1);
$c=random(1,10,1);
do { $d = random(0,10,1); } until ( $d != $c );
do {$e=random(-10,-1,1);} until ($e != -$b);



BEGIN_TEXT
Let \(y=\displaystyle \frac{$a}{x+$b}\).  Find the slope of the tangent line for each value of \(x\).
$BR$BR


\(x=a\):  \{ans_rule(20)\} $BR$BR
\(x=$c\):  \{ans_rule(20)\} $BR$BR
\(x=$d\):  \{ans_rule(20)\} $BR$BR
\(x=$e\):  \{ans_rule(20)\}

END_TEXT

$ans = Formula(" -$a/(a+$b)^2 ");
$ans2 = Compute("-$a/($c+$b)^2");
$ans3 = Compute("-$a/($d+$b)^2");
$ans4 = Compute("-$a/($e+$b)^2");
ANS($ans->cmp);
ANS($ans2->cmp);
ANS($ans3->cmp);
ANS($ans4->cmp);



ENDDOCUMENT();
