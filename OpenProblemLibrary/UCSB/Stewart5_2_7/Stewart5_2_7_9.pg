DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "parserImplicitPlane.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
Context('Numeric');

$a = random(2, 13, 1);
$b = random(2,7,1);

do {$x0 = random(1,12,1);} until ($x0 != $b);
$y0 = ($x0-$a)/($x0-$b);
$y0frac = new Fraction($x0-$a,$x0-$b);
$y0frac->reduce();

$m = ($a-$b)/($x0-$b)**2;



BEGIN_TEXT


Find the equation of the tangent line to the curve at the given point. $BR$BR

\[\displaystyle y=\frac{x-$a}{x-$b},\ \ ($x0,\{$y0frac->print\})\]

$BR $BR

\(y=\) \{ans_rule(20)\}

END_TEXT

$ans = Compute("$m*x - $m*$x0 + $y0");
ANS($ans->cmp);



ENDDOCUMENT();
