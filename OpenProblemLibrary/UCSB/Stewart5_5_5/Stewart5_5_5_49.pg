## DBsubject(Calculus - single variable)
## DBchapter(Techniques of integration)
## DBsection(Substitution (without trigonometric functions))
## Institution(UCSB)
## MLT(affine_definite)
## MO(1)
## Level(2)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('5.5')
## Problem1('49')
## KEYWORDS('integration', 'substitution')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

do {
	$a = random(1, 9);
	$b = random(1, 9);
} until (
	gcd($a, $b) == 1
);
$c = non_zero_random(-9, 9);
$p = random(7, 29, 2);

$zero = random(0, 1);

Context('Fraction');
$r = Fraction(2*$b, $a);

Context('Numeric');
$power = Formula("($a*x - $b)^($p)")->reduce;
$f = Formula(
	( $zero
		? "$c * $power"
		: "$c / ($power)"
	)
);
$D = Compute(
	( $zero
		? "0"
		: "DNE"
	)
);

Context()->texStrings;
BEGIN_TEXT
Evaluate the definite integral
\[ \int_0^{$r} $f \, dx \]
if it is defined.
(If the integral in undefined, enter
'DNE' as your answer.)
$BR $BR
${BBOLD}Answer:${EBOLD}$SPACE
\{ans_rule()\}
END_TEXT
Context()->normalStrings;

ANS($D->cmp);

COMMENT('The integral is either zero or undefined.');

ENDDOCUMENT();
