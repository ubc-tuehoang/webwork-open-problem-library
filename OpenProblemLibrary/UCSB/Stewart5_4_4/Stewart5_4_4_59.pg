## DBchapter(Applications of differentiation)
## DBsection(Indeterminate forms and L'Hopital's rule)
## Institution(UCSB)
## MLT(Indeterminate-RationalToX)
## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('4.4')
## Problem1('59')
## KEYWORDS('L'Hospital','Indeterminate','Limit')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

Context('Numeric');

do {
	$a = non_zero_random(-3, 3);
	$b = non_zero_random(-3, 3);
} until ($b - $a and ($a**2 - 1)*($b**2 - 1));
$p = - $a*$b;

$f = Formula("(x/(x + $a))^($b*x)")->reduce;
$limit = Compute("e^($p)");

Context()->texStrings;
BEGIN_TEXT
Find the \{ helpLink(limit) \}.
Use l'Hospital's Rule if appropriate.
$BR $BR
\(\displaystyle \lim_{x \to \infty} $f = \)
\{ ans_rule(5)\}
END_TEXT
Context()->normalStrings;

ANS($limit->cmp);

ENDDOCUMENT();
