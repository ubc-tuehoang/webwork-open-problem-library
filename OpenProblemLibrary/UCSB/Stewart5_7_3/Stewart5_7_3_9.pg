$gr = init_graph($l,$bot, $r,$t, axes=>[0,0], size=>[250,250]);
$gr->moveTo(3, 2);
$gr->lineTo(6, 2, 'black', 2 );
$gr->moveTo(3, 2);
$gr->lineTo(6, 6, 'black', 2 );
$gr->moveTo(6, 6);
$gr->lineTo(6, 2, 'black', 2 );
$gr->moveTo(5.7, 2);
$gr->lineTo(5.7, 2.35, 'black', 1 );
