DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;
Context('Numeric');
$a=random(3,10,1);
# Depending on the parity of $a, negative values of x might be invalid:
Context()->variables->set(x=>{limits=>[0.01,6]});


BEGIN_TEXT
Differentiate:
\[
g(x)= \displaystyle \sqrt[$a]{x} e^x 
\]
$BR $BR

\(g'(x) =\) \{ans_rule(50)\}

END_TEXT

$ans=Compute("e^x (x^{1/$a}+ (1/$a)x^{(1/$a)-1})");
ANS($ans->cmp);

ENDDOCUMENT();

