## MLT(prodruleNoTrigpolyFracExp)
## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('3.2')
## Problem1('18')
## KEYWORDS('Product','Quotient','Differentiation')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

Context('Numeric');
Context()->variables->are(w => 'Real', c => 'Real');
Context()->variables->set(w=>{limits=>[0.01,6]});

$a=random(3,9,2);
$b=random(2,8,1)*random(-1,1,2);


Context()->texStrings;
BEGIN_TEXT
Differentiate:
\[
z= w^{$a/2} ($b w+ce^w)
\]
with respect to \( w \), where \( c \) is a constant.
$BR $BR

\(z' =\) \{ans_rule(50)\}
END_TEXT

$ans = Compute("w^($a/2) ($b+ce^w)+ ($a/2)w^(($a-2)/2) ($b w+ce^w)");

ANS($ans->cmp);

ENDDOCUMENT();

