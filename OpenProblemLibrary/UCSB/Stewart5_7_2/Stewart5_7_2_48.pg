## DBsubject(Calculus - single variable)
## DBchapter(Techniques of integration)
## DBsection(Trigonometric integrals)
## Institution(UCSB)
## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('7.2')
## Problem1('48')
## KEYWORDS('integration, trigonometric integrals')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1, 4);
$n = random(2, 5);
$d = list_random(3, 4, 6);

$ad = $a * $d;

Context('Fraction');
$Icoeff = Fraction(2*$n + 1, 2*($n + 1))->reduce;
$Is = "$Icoeff * I";
if ( $d == 3 ) {
	$Ccoeff = Fraction( 3**($n),
		$a * ($n + 1)
	)->reduce;
} elsif ($d == 4 ) {
	$Ccoeff = Fraction( 1,
		2 * $a * ($n + 1)
	)->reduce;
} else {
	$Ccoeff = Fraction( 1,
		3**($n + 1) * $a * ($n + 1)
	)->reduce;
}

Context('Numeric')->variables->are(
	x => 'Real'
);
$tn = 2 * $n;
$tnp2 = 2 * $n + 2;
$f = Formula("tan^($tn)($a*x) sec ($a*x)")->reduce;;
$g = Formula("tan^($tnp2) ($a*x) sec($a*x)")->reduce;;

Context('Numeric')->variables->are(
	I => 'Real'
);
Context()->flags->set(
	reduceConstants => 0,
	reduceConstantFunctions => 0
);
if ( $d == 3 ) {
	$ans = Formula(
		( $Ccoeff == 1 ? '' : $Ccoeff )
		. "sqrt(3) - $Is"
	);
} elsif ( $d == 4 ) {
	$ans = Formula("$Ccoeff * sqrt(2) - $Is");
} else {
	$ans = Formula("$Ccoeff - $Is");
}

Context()->texStrings;
BEGIN_TEXT
Let
\[
I =
\int_ 0 ^ {\pi/$ad} $f \, dx.
\]
Express the value of
\[
\int_ 0 ^ {\pi/$ad} $g \, dx
\]
in terms of \( I. \)
$BR $BR
\( \displaystyle
\int_ 0 ^ {\pi/$ad} $g \, dx
= \) \{ ans_rule() \}.
END_TEXT
Context()->normalStrings;

ANS($ans->cmp);

$tnp1 = 2 * $n + 1;

Context('Numeric')->flags->set(
	reduceConstants => 0,
	reduceConstantFunctions => 0
);
$context = Context()->copy;

if ( $d == 3 ) {
	$tan = Formula("sqrt(3)");
	$sec = Formula("2");
	Context('Fraction');
	$coeff = Fraction(2 * 3**($n), $a);
	Context($context);
	$term = Formula("($coeff) * sqrt(3)");
} elsif ( $d == 4 ) {
	$tan = Formula("1");
	$sec = Formula("sqrt(2)");
	Context('Fraction');
	$coeff = Fraction(1, $a);
	Context($context);
	$term = Formula("($coeff) * sqrt(2)");
} else {
	$tan = Formula("(1/3) * sqrt(3)");
	$sec = Formula("(2/3) * sqrt(3)");
	Context('Fraction');
	$coeff = Fraction(2, 3**($n + 1) * $a);
	Context($context);
	$term = Formula("$coeff");
}
$J = '\mathscr{J}';

Context()->texStrings;
BEGIN_SOLUTION
Let
\[
$J = \int _ 0 ^ {\pi/$ad} $g \, dx.
\]
Factorizing the integrand as
displayed below, and then
integrating by parts, gives
\[
\begin{aligned}
$J \> & = \int _ 0 ^ {\pi/$ad} \tan^{$tnp1} ($a x)
\sec ($a x) \tan ($a x) \, dx \\
& = { \textstyle \frac{1}{$a} } \tan^{$tnp1} ($a x)
\sec ($a x) \; \Bigg| _ 0 ^ {\pi/$ad}
- $tnp1 \int _ 0 ^ {\pi/$ad}
\tan^{$tn} ($a x) \sec ^ 3 ($a x) \, dx.
\end{aligned}
\]
Now
\[
\begin{aligned}
{ \textstyle \frac{1}{$a} } \tan^{$tnp1} ($a x)
\sec($a x) \; \Bigg| _ 0 ^ {\pi/$ad}
\> & = \textstyle \frac{1}{$a}
\tan^{$tnp1} \bigl( \frac{1}{$d} \pi \bigr)
\sec \bigl( \frac{1}{$d} \pi \bigr)
= \textstyle \frac{1}{$a}
\bigl( $tan \bigr)^{$tnp1} \bigl( $sec \bigr) \\
&= \textstyle $term,
\end{aligned}
\]
and from
\( \sec ^ 3 ($a x) =  \sec ^ 2 ($a x) \sec ($a x)
= \bigl( \tan ^ 2 ($a x) + 1 \bigr) \sec ($a x) \),
it follows that
\[
\begin{aligned}
\int _ 0 ^ {\pi/$ad}
\tan^{$tn} ($a x) \sec^3 ($a x) \, dx
\> & = \int _ 0 ^ {\pi/$ad}
\tan ^ {$tn} ($a x) \bigl( \tan ^ 2 ($a x) + 1
\bigr) \sec ($a x) \, dx \\
&= $J + I.
\end{aligned}
\]
Therefore,
\[ \textstyle
$J = $term - $tnp1 $J - $tnp1 I
, \qquad \text{or} \qquad
$tnp2 $J = $term - $tnp1 I,
\]
and so
\[
\int _ 0 ^ {\pi/$ad} $g \, dx
= $J = \textstyle $ans.
\]
END_SOLUTION

ENDDOCUMENT();
