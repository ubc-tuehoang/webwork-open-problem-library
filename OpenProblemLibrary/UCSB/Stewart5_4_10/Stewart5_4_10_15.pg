## DBsubject(Calculus - single variable)
## DBchapter(Integrals)
## DBsection(Antiderivatives (with trigonometric functions))
## Institution(UCSB)
## Level(2)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('4.10')
## Problem1('15')
## KEYWORDS('antiderivatives')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserFormulaUpToConstant.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-10, 10);
$b = non_zero_random(-10, 10);

$as = ($a > 0 ? '' : '-' )
	. ( $a**2 == 1 ? '' : abs($a) );
$bs = ($b > 0 ? '+' : '-' )
	. ( $b**2 == 1 ? '' : abs($b) );

($qn, $qd) = reduce($a, 2);
$qs = ( $qn > 0 ? '' : '-' )
	. ( $qd == 1
		? ( $qn**2 == 1 ? '' : abs($qn) )
		: '(' . abs($qn) . "/ ($qd) )"
	);

Context('Numeric')->variables->set(
	x => { limits => [-.5, .5] }
);
Context()->flags->set(
	reduceConstants => 0,
	formatsStudentAnswer => parsed
);
Context()->functions->set(
	asin => { TeX => '\operatorname{arcsin}' },
	acos => { TeX => '\operatorname{arccos}' }
);
$F = FormulaUpToConstant(
	 "$qs x^2 $bs asin(x) + C"
);

BEGIN_TEXT
Find the most general antiderivative of
\( f(x) = $as x $bs (1-x^2)^{-1/2}, \)
where \( -1 < x < 1. \)  
$BR $BR
\( F(x) = \) \{ ans_rule(20) \}
END_TEXT

ANS($F->cmp);

ENDDOCUMENT();
