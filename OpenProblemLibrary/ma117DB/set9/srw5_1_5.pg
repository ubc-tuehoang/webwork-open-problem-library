loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
$a = random(4,15,1);
$b = $a+random(1,3,1);
BEGIN_TEXT
If the point \( P(\frac{$a}{$b},y) \) is on the unit circle in quadrant IV,
then \( y= \) \{ans_rule(15) \}. 
END_TEXT

$ans1 = -sqrt(1-($a/$b)**2);

ANS(num_cmp($ans1));

