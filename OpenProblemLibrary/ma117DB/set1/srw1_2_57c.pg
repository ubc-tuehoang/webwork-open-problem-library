## EditionText2('3')
## Section2('1.3')
## Problem2('57')
## KEYWORDS('algebra', 'powers')
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Numeric"); 

$a = Real(random(1,4));
$b = Real(list_random(5..7,10,11));

$ans1 = $a*$b;
$ans2 = $b;

Context()->texStrings;
BEGIN_TEXT
Rationalize the denominator of expression 
\(\displaystyle \sqrt{\frac{$a}{$b}}\), 
$BR i.e., write it in the form
\(\displaystyle \frac{\sqrt{a}}{b}\). 
$PAR
Your answer for \(a\) is : \{ans_rule(5)\}
$BR
Your answer for \(b\) is : \{ans_rule(5)\}
END_TEXT

Context()->normalStrings;
ANS($ans1->cmp);
ANS($ans2->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.
