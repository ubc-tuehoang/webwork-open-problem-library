## Level(3)
## KEYWORDS('integer','negative','operation','add','subtract','evaluate')


##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl",
);

##############################################

Context("LimitedNumeric");

do {
   $a = random(1,10,1);
   $a2 = $a*$a;
   do {$b = random(1,10,1);} until ($b!=$a);
   $top = $a+$b;
   $bottom = $a-$b;
   $ans = $top/$bottom;
} until (int($ans)==$ans);


##############################################

TEXT(beginproblem());

BEGIN_PGML

Simplify this expression:

    [`` \frac{\sqrt{[$a2]}+[$b]}{\sqrt{[$a2]}-[$b]}= ``][________]{$ans}  

END_PGML

##############################################

BEGIN_PGML_SOLUTION

    [``
\begin{aligned}[t] 
   \frac{\sqrt{[$a2]}+[$b]}{\sqrt{[$a2]}-[$b]} & = \frac{[$a]+[$b]}{[$a]-[$b]} \\
   & = \frac{[$top]}{[$bottom]} \\
   & = [$ans]
\end{aligned}
    ``]

END_PGML_SOLUTION

ENDDOCUMENT();


