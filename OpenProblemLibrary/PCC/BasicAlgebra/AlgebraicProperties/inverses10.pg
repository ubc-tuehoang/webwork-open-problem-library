## Level(3)
## KEYWORDS('distributive','expression','linear','negative')




##############################################

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl",
  "PGcourse.pl",
);

##############################################


Context("Numeric");
Context()->noreduce('(-x)-y','(-x)+y');

$a = non_zero_random(-10,10,1);
$ans = -$a;



##############################################

TEXT(beginproblem());

BEGIN_PGML

The additive inverse of [`[$a]`] is [_____]{$ans} 

END_PGML

##############################################

BEGIN_PGML_SOLUTION

The additive inverse of [`[$a]`] is [`[$ans]`] because [`[$a]+[$ans]=0`].

END_PGML_SOLUTION

ENDDOCUMENT();


