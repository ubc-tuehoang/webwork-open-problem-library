DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context('Numeric');

$a1 = random(2,7,1);
$b1 = random(2,8,1);
$c1 = random(2,7,1);
$d1 = random(2,6,1);
$n1 = random(3,7,1);
$x1 = random(1,5,1);

$deriv1 = -$a1*$x1**(-2)+4*$b1*$x1**(-5);
$funct1 = Formula("-$a1*x**(-2)+4*$b1*x**(-5)");

BEGIN_TEXT
If 
\[ f(x) =  \frac {$a1 x^3- $b1} {x^4}\]
find \( f'( x ) \).
$BR $BR \( f'( x ) \) = \{ans_rule(48) \}
END_TEXT


ANS($funct1->cmp);


BEGIN_TEXT
$BR $BR
Find \( f'( $x1 ) \).
$BR $BR \( f'( $x1 ) \) = \{ans_rule(48) \}
END_TEXT

$ans2 = Compute("$deriv1");
ANS($ans2->cmp);


ENDDOCUMENT();        # This should be the last executable line in the problem.
