DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

# create random variables
$a = non_zero_random( 2, 3, 1 );
$b = non_zero_random( 20, 100, 1 );
$c = non_zero_random( -100, -20, 1);

BEGIN_TEXT
Calculate the following:$BR
(a) \(i^$a\ =\) \{ans_rule(15)\}, $BR
(b) \(i^\{$a+1\}\ =\) \{ans_rule(15)\}, $BR
(c) \(i^\{$a+2\}\ =\) \{ans_rule(15)\}, $BR
(d) \(i^\{$a+3\}\ =\) \{ans_rule(15)\}, $BR 
(e) \(i^{$b}\ =\) \{ans_rule(15)\},$BR
(f) \(i^{0}\ =\) \{ans_rule(15)\},$BR
(g) \(i^{-1}\ =\) \{ans_rule(15)\},$BR
(h) \(i^{-2}\ =\) \{ans_rule(15)\},$BR
(i) \(i^{-3}\ =\) \{ans_rule(15)\},$BR
(j) \(i^{$c}\ =\) \{ans_rule(15)\}.$BR
END_TEXT

Context('Complex');

$bmod = $b%4; # to fix bug 3897
$cmod = $c%4; # ditto 

$a1=Compute("i^$a");
$a2=$a1*i;
$a3=$a2*i;
$a4=$a3*i;
#$a5=Compute("i^$b");
$a5=Compute("i^$bmod");
$a6=Compute("1");
#$a7=Compute("i^$c");
$a7=Compute("i^$cmod");
Context('LimitedComplex');
ANS(Compute("$a1")->cmp );
ANS(Compute("$a2")->cmp );
ANS(Compute("$a3")->cmp );
ANS(Compute("$a4")->cmp );
ANS(Compute("$a5")->cmp );
ANS(Compute("$a6")->cmp );
ANS(Compute("-i" )->cmp );
ANS(Compute("-1" )->cmp );
ANS(Compute("i" )->cmp );
ANS(Compute("$a7" )->cmp );

ENDDOCUMENT();        # This should be the last executable line in the problem.

