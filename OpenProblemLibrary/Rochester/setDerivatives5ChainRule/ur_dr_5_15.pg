DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric');

$a_numb = random(2,5,1);
$a_sign = random(-1,1,2);
$a      = $a_numb * $a_sign;

$b = random(2,9,1);

$gen = random(0,1,1);

$am = -$a;

if ($gen == 0) {
  $trig = "\sec";
  $ans  = "$a*$b*(tan($b*x)/cos($b*x))";
  }
if ($gen == 1) {
  $trig = "\csc";
  $ans  = "$am*$b/(tan($b*x)*sin($b*x))";
  }

BEGIN_TEXT
Let \[ f(x) =  $a $trig ($b x) \]
$BR$BR
\( f'( x ) = \) \{ ans_rule(30) \}
END_TEXT

ANS(Compute($ans)->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.

