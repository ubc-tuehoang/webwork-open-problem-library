## DESCRIPTION
##   The Chain Rule
## ENDDESCRIPTION

## Tagged by nhamblet

## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Chain rule (with trigonometric functions))
## Institution(ASU)
## MLT(diff_chr_trig_fn_trig_of_trig)
## Level(2)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('6')
## Section1('3.4')
## Problem1('3 27 32')
## KEYWORDS('Derivative', 'Chain Rule', 'Trigonometry','derivatives','Chain Rule', 'Derivative')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a_gen  = random(2,9,1);
$a_sign = random(-1,1,2);
$a      = $a_gen * $a_sign;

$gen = random(0,3,1);

if ($gen == 0) {
  $trig1 = "\sin";
  $trig2 = "\sin";
  $ans  = "$a*cos(sin(x))*cos(x)";
  }
if ($gen == 1) {
  $trig1 = "\sin";
  $trig2 = "\cos";
  $ans  = "-$a*cos(cos(x))*sin(x)";
  }
if ($gen == 2) {
  $trig1 = "\cos";
  $trig2 = "\sin";
  $ans  = "-$a*sin(sin(x))*cos(x)";
  }
if ($gen == 3) {
  $trig1 = "\cos";
  $trig2 = "\cos";
  $ans  = "$a*sin(cos(x))*sin(x)";
  }

TEXT(EV2(<<EOT));
Let \[ f(x) = $a $trig1 ($trig2 x) \]
$PAR
\( f'( x ) = \) \{ans_rule(30) \}
$BR
EOT

ANS(fun_cmp($ans));

if($gen==0) {
BEGIN_SOLUTION
$PAR SOLUTION $PAR 
By the chain rule:
\[ f'(x) = $a \cos(\sin x) \frac{d}{dx}(\sin x) = 
$a \cos(\sin x))\cdot  \cos x \]
END_SOLUTION
}
elsif ($gen ==1) {
BEGIN_SOLUTION
$PAR SOLUTION $PAR 
By the chain rule:
\[ \begin{array}{rcl}  f'(x) &=& $a \cos(\cos x) \frac{d}{dx}(\cos x) 
\\ &=& 
$a \cos(\cos  x))\cdot  (- \sin x ) \\ &=& -$a \cos (\cos x) \cdot \sin x
\end{array}\]
END_SOLUTION
}
elsif ($gen ==2) {
BEGIN_SOLUTION
$PAR SOLUTION $PAR
By the chain rule:
\[ \begin{array}{rcl}f'(x)& =& -$a \sin(\sin x) \frac{d}{dx}(\sin x) 
\\ &=& 
-$a \sin(\sin x))\cdot  \cos x 
\end{array}\]
END_SOLUTION
}
else {
BEGIN_SOLUTION
$PAR SOLUTION $PAR
By the chain rule:
\[ \begin{array}{rcl} f'(x) &=& \displaystyle  -$a \sin(\cos x)) \frac{d}{dx}(\cos x)  \\ & =& 
-$a \sin(\cos x)\cdot  (- \sin x) = $a \sin(\cos x) \sin x
\end{array} \]
END_SOLUTION
};

ENDDOCUMENT();        # This should be the last executable line in the problem.
