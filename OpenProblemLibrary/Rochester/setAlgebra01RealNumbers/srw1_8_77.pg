DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a = random(100,500,1);
$b = random(100,500,1);

TEXT(EV2(<<EOT));
Find the distance betweem \($b\) and \($a\).
$BR $BR \{ans_rule(10) \}
$BR $BR
[NOTE:  Your answer can be an algebraic expression]
EOT

$ans = abs($a-$b);
ANS(num_cmp($ans, mode=>"arith"));

