DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

# No partial credit on this problem, so we say:
install_problem_grader(~~&std_problem_grader);

TEXT(beginproblem());
$showPartialCorrectAnswers = 0;

$a1 = random(2,7,1);
$b1 = random(2,7,1);

$a2 = random(2,7,1);
$b2 = random(3,7,1);
$c2 = random(2,7,1);
$radical = $b2 == $c2 ? "n" : "\sqrt[$b2]{n^{$c2}}";

$a3 = random(2,10,1);
$b3 = random(2,10,1);

$a4 = random(1,10,1);
$b4 = random(2,10,1);
$c4 = random(2,10,1);
$d4 = random(1,10,1);

$a5 = $a3**2;
$start = int($a5**(1/$b3))+1;

$dc = new_pop_up_select_list();
$dc->ra_pop_up_list([
	No_answer => '',
	Convergent => 'Convergent',
	Divergent => 'Divergent'
]);
$dc->qa(
	"\( \displaystyle \sum_{n = 1}^\infty
		\frac{$a1}{n(n + $b1)} \)",
		'Convergent',
	"\( \displaystyle \sum_{n = 1}^\infty
		\frac{1}{$a2 + $radical} \)",
		( $c2 > $b2 ? 'Convergent' : 'Divergent' ),
	"\( \displaystyle \sum_{n = 1}^\infty
		\frac{\ln(n)}{$b3 n} \)",
		'Divergent',
	"\( \displaystyle \sum_{n = 1}^\infty
		\frac{$a4 + $b4 ^n}{$d4 + $c4 ^n} \)",
		( $c4 > $b4 ? 'Convergent' : 'Divergent' ),
	"\( \displaystyle \sum_{n = $start}^\infty
		\frac{$a1}{n^{$b3} - $a5} \)",
		'Convergent'
);
$dc->choose(5);

BEGIN_TEXT
Mark each series as convergent or divergent.
\{ $dc->print_q \}
END_TEXT

ANS(str_cmp($dc->ra_correct_ans));

ENDDOCUMENT();
