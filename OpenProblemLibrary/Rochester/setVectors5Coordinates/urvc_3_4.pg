DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Fraction");

$a = random(1,5);
$b = non_zero_random(-4,4); 
$c = random(-4,4);
$f= Fraction($b,6)->reduce;
$g= Fraction($c,6)->reduce;

Context()->texStrings;
BEGIN_TEXT
What are the rectangular coordinates of the point whose spherical coordinates
 are $BR \( \left( $a , $f \pi, $g \pi \right) \) ?
$BR
$BR
\(x =\) \{ans_rule(40)\} $BR
\(y = \)\{ans_rule(40)\} $BR
\(z = \)\{ans_rule(40)\} $BR
END_TEXT
Context()->normalStrings;

Context("Numeric");

$ans0 =  Compute("$a*cos($f*pi)*sin($g*pi)") ;
$ans1 =  Compute("$a*sin($f*pi)*sin($g*pi)") ;
$ans2 =  Compute("$a*cos($g*pi)") ;


ANS($ans0->cmp());
ANS($ans1->cmp());
ANS($ans2->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.
