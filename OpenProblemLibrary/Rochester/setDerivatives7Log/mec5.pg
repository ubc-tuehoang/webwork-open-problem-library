DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric');
$an = random(2,5,1);
$as = random(-1,1,2);
$a  = $an * $as;
$b  = random(2,9,1);
$x  = random(1,9,1);

$deriv1 = "$a/(ln($b)*x)";
$deriv2 = $a/(ln($b)*$x);

BEGIN_TEXT
Let \( f(x) = $a \log_{$b}(x) \)
$BR$BR
\( f'( x ) = \) \{ans_rule(40) \}
$BR$BR
\( f'( $x ) = \) \{ans_rule(40) \}
END_TEXT

ANS(Formula($deriv1)->cmp);
ANS(Real($deriv2)->cmp);

ENDDOCUMENT();        # This should be the last executable line in the problem.
