DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "parserFormulaUpToConstant.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,9,1);
$b = random(2,7,1);
$c = non_zero_random(-13, 13);

$am1 = $a - 1;

Context('Fraction');
$coeff = Fraction(-$b, $am1)->reduce;

Context('Numeric')->variables->are(
	t => [ 'Real', limits => [ -$c-0.1, -$c + 0.1 ] ]
);
Context()->flags->set(
	reduceConstants => 0
);
$l = Formula("t + $c")->reduce;
$f = Formula("$b / ($l)^($a)")->reduce;
$F = FormulaUpToConstant(
	( $coeff > 0 ? '' : '-' )
	. ( ($coeff)**2 == 1 ? '' : abs($coeff) )
	.  "($l)^(-$am1)"
);

Context()->texStrings;
BEGIN_TEXT
Evaluate the following indefinite integral.
$BR $BR
\( \displaystyle \int $f \, dt = \)
\{ans_rule() \}
END_TEXT
Context()->normalStrings;

ANS($F->cmp);

Context()->texStrings;
BEGIN_SOLUTION
Integrating by inspection gives
\[
\int $f \, dt
= \frac{$b}{-$am1} ($l)^{-$am1} + C
\textstyle = $F.
\]
END_SOLUTION

ENDDOCUMENT();
