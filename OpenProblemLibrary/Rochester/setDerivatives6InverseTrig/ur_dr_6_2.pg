DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(2,8,1);
$b1 = random(2,8,1);
$x1 = random(1,5,1);
$aa1=$a1**2;
$ab1=$b1*$a1;
$deriv1 =  $b1*$a1/(1+$a1**2*$x1**2);
$funct1 = "$ab1/(1+$aa1*x^2)";

TEXT(EV2(<<EOT));
If \( f(x) = $b1 \arctan($a1 x) \), find \( f'( x ) \).
$BR  \{ans_rule(30) \}
$BR $BR
EOT

$ans = $funct1;
ANS(fun_cmp($ans));

TEXT(EV2(<<EOT));
Find \( f'( $x1 ) \).
$BR  \{ans_rule(30) \}
$BR
EOT

$ans = $deriv1;
ANS(num_cmp($ans));

$ab1= $a1*$b1;
$aa1= $a1*$a1;
Context("Fraction");
$A= Compute("$ab1/(1+$aa1*$x1*$x1)");
Context()->texStrings;
BEGIN_SOLUTION
$PAR SOLUTION $PAR 
\( f'(x) = \displaystyle \frac{$b1}{1+($a1 x)^2} \frac{d}{dx} ($a1 x) 
=  \displaystyle \frac{$ab1}{1+$aa1 x^2}   \)
$PAR
\( f'($x1) = \displaystyle  \frac{$ab1}{1+$aa1 \cdot  $x1^2}  = $A  \)
END_SOLUTION

ENDDOCUMENT();        # This should be the last executable line in the problem.
