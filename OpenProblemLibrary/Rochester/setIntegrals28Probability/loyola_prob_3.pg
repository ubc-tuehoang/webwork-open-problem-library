DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Fraction");

$a=random(1,3,1);
$b=random(1,5,1);
$C=random(4,10,1);
$D=random(12,20,1);

$p = Fraction("2/($C*$D)");
$q = Fraction("2/($D-$C)");
$r = Fraction("2/(($D-$C)*$D)");

$g=$C - $a;
$h=$C + $b;

Context()->texStrings;
BEGIN_TEXT
Suppose that a density function is given by the formula
\[ f(x) = \begin{cases}
 $p x & \text{if}  \;\; 0 \leq x \leq $C\\
 $q - $r x & \text{if} \;\; $C \leq x \leq $D \\
 0 & \text{otherwise.}
\end{cases}
\]
Find the probability that \( x\) is between \( $g\) and \( $h\).

$PAR

 \{ans_rule(30)\}
$PAR
END_TEXT

Context()->normalStrings;

# $H = minimum{$h,$D}

if ($h < $D) {$H=$h;}  
else {$H=$D;}

$ans = Compute("1 - ($g**2)/($C*$D)-(($D-$H)**2)/(($D-$C)*$D)")->reduce;


ANS($ans->cmp());

