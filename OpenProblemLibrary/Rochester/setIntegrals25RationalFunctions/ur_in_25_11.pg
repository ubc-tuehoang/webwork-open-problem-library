DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserFormulaUpToConstant.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = non_zero_random(-9, 9);
$b = non_zero_random(-9, 9);

Context('Numeric')->variables->are(
	x => [ 'Real', limits => [$a + 1, $a + 2] ]
);

$den = Formula("x^2 - 2*$a*x + ($a)**2")->reduce;
$f = Formula("$b/($den)");
$factor = Formula("x - $a")->reduce;
$F = FormulaUpToConstant(
	"-$b/($factor)"
)->reduce;

Context()->texStrings;
BEGIN_TEXT
Evaluate the indefinite integral.
$BR $BR
\( \displaystyle \int $f \, dx = \)
\{ ans_rule() \}
END_TEXT
Context()->normalStrings;

ANS($F->cmp);

Context()->texStrings;
BEGIN_SOLUTION
Factorizing the denominator and then
integrating by inspection gives
\[
\int $f \, dx =
\int \frac{$b}{($factor)^2} \, dx
= $F.
\]
END_SOLUTION

ENDDOCUMENT();
