DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1;

$a = random(2,7,1);
$a2 = 2*$a;
$answ = "3*$a^3";

TEXT(beginproblem());
BEGIN_TEXT
The base of a certain solid is the triangle with vertices at \((-$a2,$a)\),
\(($a,$a)\), and the origin. Cross-sections perpendicular to the \(y\)-axis
are squares.
$BR$BR
The volume of this solid is \{ ans_rule()\}.
END_TEXT

ANS(num_cmp($answ));
ENDDOCUMENT();
