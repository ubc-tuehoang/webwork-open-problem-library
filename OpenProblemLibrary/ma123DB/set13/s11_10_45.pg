);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$b = random(2,15) ;
$a = $b*3;

BEGIN_TEXT
Evaluate $BR
\[ \lim_{x \to 0} \frac{\ln (1-x) + x + \frac{x^2}{2}}{$b x^3} \]
$BR 
$BBOLD Hint:$EBOLD Use power series. 
$BR
$BR
Answer: \{ans_rule(30)\}
END_TEXT

ANS(num_cmp("-1/$a"));

