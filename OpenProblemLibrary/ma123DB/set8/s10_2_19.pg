## MLTleader(1)
## Level(2)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('6')
## Section1('10.2')
## Problem1('19')
## KEYWORDS('parametric equation', 'tangent line')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,9,1);
$a2 = 3*$a**2;
$b = random(2,9,1);


BEGIN_TEXT
Consider the curve given by the parametric equations $BR$BR
\[x = t (t^2-$a2) , \quad y = $b (t^2-$a2) \] 
$BR

$BBOLD a.) $EBOLD Determine the point on the curve where the tangent is horizontal. $BR
\(t=\)\{ans_rule( 5) \}
$BR$BR
$BBOLD b.) $EBOLD Determine the points \(t_1\), \(t_2\) where the tangent is vertical and \(t_1 < t_2 \) . $BR$BR
\(t_1=\)\{ans_rule( 5) \} $BR
\(t_2=\)\{ans_rule( 5) \} $BR
END_TEXT

$ans1 = 0;
$ans2 =-$a;
$ans3 = $a;

ANS(num_cmp($ans1));
ANS(num_cmp($ans2));
ANS(num_cmp($ans3));

ENDDOCUMENT();        # This should be the last executable line in the problem.
