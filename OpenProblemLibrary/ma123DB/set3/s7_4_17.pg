['- $au $x' ,cellcss=>'border-bottom:solid 1px;',]],
[['',texpre=>'\cline{3-5}',],'','',' $bb$x2','+ $cd$x','$const0'],
['','','',['$bb$x2',cellcss=>'border-bottom:solid 1px;',],
