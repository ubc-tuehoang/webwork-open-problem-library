DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1;

$a = random(4,9);
do {$b = random(5,9)} until ($b != $a);


TEXT(beginproblem());

BEGIN_TEXT
Evaluate the definite integral. $BR
\[ \int_0^1 x^2\sqrt{$a x + $b}\,dx\]
$BR
Answer: \{ ans_rule(20)\}
END_TEXT

$ab = $a+$b;
$c = 15*$a*$a - 12*$a*$b + 8*$b*$b;
ANS(num_cmp("2/105*(-8*$b^(7/2) + $ab^(3/2) *$c)/($a^3)"));

ENDDOCUMENT();

