DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,15,1);
$b = random(10,20,1);
$p = random(2,9,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
\( y = $a \cdot $b^x - x^$p \).

$BR $BR
\( {dy\over dx} = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "$a*ln($b)*$b^x - $p*x^($p-1)" )->cmp() );

$xp = ( $p == 2 ) ? 'x' : 'x^{' . ($p-1) . '}';

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));

\[ {dy\over dx} = $a \ln($b) $b^x - $p $xp \]
END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
