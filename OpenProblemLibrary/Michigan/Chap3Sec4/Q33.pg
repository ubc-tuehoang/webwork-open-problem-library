DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,8,1);
$b = $a + 1;
$r = random(2,9,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
 
\(\displaystyle y=\left({x^2+$a\over $b}\right)^{$r} \)

$PAR
\( \displaystyle {dy\over dx} = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "(1/$b)^($r)*2*$r*x*(x^2 + $a)^($r-1)" )->cmp() );

$twor = 2*$r;
$br = $b**$r;
$cr = ( $r == 2 ) ? '' : '^' . ($r-1);

Context()->texStrings;
BEGIN_SOLUTION

Note that 
\( \displaystyle y=\left({x^2+$a\over $b}\right)^{$r} = \frac{1}{$b^$r}(x^2+$a)^$r \), so
$BR $BR 
\( \displaystyle \frac{dy}{dx} = \left(\frac{1}{$br}\right) $twor x (x^2 + $a)$cr \)

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
