DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");
Context()->flags->set( limits=>[0.1,5] );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$p = random(3,9,1);
$b = random(2,7,1);
$a = random(1,9,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of
$BR
\( \displaystyle z(x) = \sqrt[$p]{$b^{x} + $a} \)

$BR $BR
\( z'(x) = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "(1/$p)*($b^(x)+$a)^((1-$p)/$p)*(ln($b)*$b^(x))" )->cmp() );

$p1 = ($p - 1) . "/$p";

Context()->texStrings;
BEGIN_SOLUTION

\( 
\displaystyle 
z'(x) = \frac{1}{$p} ($b^x + $a)^{-$p1} (\ln($b) $b^{x}) 
\)

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
