DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = 3;
$b = 9;
$a2 = 2*$a;
$solution = Compute($a2);

Context()->texStrings;
BEGIN_TEXT

Use algebra to evalute the following limit.

$PAR

\(\lim\limits_{h \rightarrow 0} \frac{($a+h)^2- $b  }{h} = \)
\{ans_rule(35)\}

END_TEXT
Context()->normalStrings;

ANS($solution->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\( \frac{($a+h)^2- $b}{h} =
     \frac{$a^2+$a2 h + h^2- $b}{h} =
	\frac{$a2 h + h^2}{h}=$a2+h \)

$PAR
Thus, as \(h\to 0\) we have
\(\frac{($a+h)^2- $b}{h} \to $a2 \).

END_SOLUTION
Context()->normalStrings;


;
