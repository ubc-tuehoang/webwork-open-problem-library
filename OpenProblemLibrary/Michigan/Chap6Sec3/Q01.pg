DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "parserFormulaUpToConstant.pl",
  "PGcourse.pl"
);

Context("Numeric");
$showPartialCorrectAnswers = 1;

$r = random(2,5,1);
$b = random(1,8,1);

TEXT(beginproblem());
Context()->texStrings;
BEGIN_TEXT

Find the general solution of the differential equation
\( \displaystyle {dy\over dx}=x^{$r} + $b \)

$PAR
\(y = \) \{ ans_rule(35) \}

END_TEXT
Context()->normalStrings;

$ans = FormulaUpToConstant("(1/($r+1))*x^($r+1) + $b*x + C");
ANS($ans->cmp() );

$r1 = $r + 1;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\( y=\int (x^{$r} + $b)\,dx = \frac{x^{$r1}}{$r1} + $b x + C\)

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
