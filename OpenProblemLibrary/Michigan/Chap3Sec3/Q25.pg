DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
Context("Numeric");
Context()->variables->add( r=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,9,1);
$a = random(2,15,1);
$b = random(1,15,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of the function \( h(r) \), below.  It may be to your
advantage to simplify  first.
$BR
\[\displaystyle h(r) = \frac{r^$r}{$a r + $b} \]

$PAR
\( h'(r) = \) \{ ans_rule(55) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "($r*r^($r-1)*($a*r + $b) - $a*r^$r)/($a*r+$b)^2" )->cmp() );

$r1 = ( $r == 2 ) ? 'r' : 'r^{' . ($r-1) . '}';

Context()->texStrings;
BEGIN_SOLUTION
$PAR SOLUTION $PAR

\[ h'(r) = \frac{$r $r1 ($a r + $b) - $a r^$r}{($a r+$b)^2}. \]

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
