DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);
 
Context("Numeric");
Context()->variables->add( w=>'Real' );

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$r = random(2,9,1);

Context()->texStrings;
BEGIN_TEXT

Find the derivative of 

\( y = \cos^{$r}w + \cos(w^{$r}) \)

$PAR
\( {dy\over dw} = \) \{ ans_rule(65) \}

END_TEXT
Context()->normalStrings;


ANS(Compute( "$r*cos(w)^($r-1)*(-1*sin(w)) - $r*w^($r-1)*sin(w^($r))" )->cmp() );

$r1 = $r-1;
if ( $r1 == 1 ) {
    $cr1 = '\cos(w)';
    $wr1 = 'w';
} else {
    $cr1 = "\cos^{$r1}(w)";
    $wr1 = "w^{$r1}";
}

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\( {dy\over dw} = $r $cr1 (-\sin(w)) - $r $wr1 \sin(w^{$r}) \)
$BR
\( \phantom{dy\over dw} = -$r $cr1 \sin(w) - $r $wr1 \sin(w^{$r}) \).

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
