DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "hhAdditionalMacros.pl",
  "parserFormulaUpToConstant.pl",
  "PGcourse.pl"
);
 
$showPartialCorrectAnswers = 1;
Context("Numeric");
Context()->flags->set(reduceConstants=>0);

$a = random(2,8,1);
$twoa = $a*2;
$asq = $a*$a;
$dfdx = Compute("1/(x^2 + $twoa x + $asq)");
$f = FormulaUpToConstant("-1/(x + $a) + C");

TEXT(beginproblem());
Context()->texStrings;
BEGIN_TEXT

Antidifferentiate using the
table of integrals. You may need to transform the integrand
first. $BR
\( \displaystyle \int $dfdx\,dx = \)
\{ ans_rule(55) \}

END_TEXT
Context()->normalStrings;

ANS($f->cmp() );

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

\[\displaystyle\int $dfdx\,dx=\int
  \frac{1}{(x+$a)^2}\,dx=$f.\]
You need not use the table in this case.

END_SOLUTION
Context()->normalStrings;


;
ENDDOCUMENT();
