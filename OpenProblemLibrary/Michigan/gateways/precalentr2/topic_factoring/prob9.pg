## DESCRIPTION
## Michigan precalculus gateway problem: topic factoring
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

@chars = qw(a b c h m n p q r s t u v w z);
$x = $chars[ random(0,scalar(@chars)-1,1) ];

Context()->variables->are( $x => 'Real' );

## the problem is to factor into a product of monomials
##    1/(x - a) = x/(x + b)
## which gives
##    x^2 - (a + 1)x - b = (x - r1)(x + r2) = 0
## we take r1 > r2
$a  = random(2,4,1);
$r2 = random(1,3,1);
$r1 = $a + 1 + $r2;
$b = $r1*$r2;

## distractors are obtained by:
## 1. sign error: = (x - r2)(x + r1) = 0
## 2. random error: = (x - a)(x + b) = 0
## 3. random error: = x (x - a) = b
## 4. sort of sign error: = (x + r1)(x + r2) = 0

$ans = "\(($x - $r1)($x + $r2) = 0\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\(\displaystyle \frac{1}{$x - $a} = \frac{$x}{$x + $b}\)?",
	     $ans );
$gwprob->extra( "\(($x - $r2)($x + $r1) = 0\)",
		"\(($x - $a)($x + $b) = 0\)",
		"\($x($x - $a) - $b = 0\)",
		"\(($x + $r1)($x + $r2) = 0\)" );


Context()->texStrings;
BEGIN_TEXT

\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

$ap1 = $a + 1;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Note that by clearing the denominators, we have that
\(\displaystyle \frac{1}{$x - $a} = \frac{$x}{$x + $b} \)
is the same as
\( $x + $b = $x($x - $a)\),
so that
\($x^2 - $a $x - $x - $b = 0\),
or
\( $x^2 - $ap1 $x - $b = 0\).
This is the same as
\[ ($x - $r1)($x + $r2) = 0. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
