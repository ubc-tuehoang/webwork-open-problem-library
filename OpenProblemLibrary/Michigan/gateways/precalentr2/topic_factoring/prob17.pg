## DESCRIPTION
## Michigan precalculus gateway problem: topic factoring
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

@chars = qw(a b c h m n p q r s t u v w z);
$x = $chars[ random(0,scalar(@chars)-1,1) ];

Context()->variables->are( $x => 'Real' );

## the problem is to factor into a product of monomials
##    -a x + (x + b)^2 = (x - r)^2

$r = random(1,4,1);
$a = 4*$r;
$b = $r;

## distractors are obtained by
## 1. sign error: = (x + b)^2
## 2. different sign error: = -(x + b)^2
## 3. addition and factoring error: = x^2 - a x + b^2 = (x - b)(x + 2)
## 4. addition and factoring error: = b^2 x^2 - a x = 4 x (x - b)


$ans = "\(($x - $r)^2\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\(-$a $x + ($x + $b)^2\)?",
	     $ans);
$gwprob->extra( "\(($x + $b)^2\)",
		"\(-($x + $b)^2\)",
		"\(($x - $b)($x + 2)\)",
		"\(4 $x ($x - $b)\)" );

Context()->texStrings;
BEGIN_TEXT

\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

$twob = 2*$b;
$bsq = $b*$b;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Note that
\[\begin{aligned}
    -$a $x + ($x + $b)^2 &= -$a $x + $x^2 + $twob $x + $bsq \\
                         &= $x^2 - $twob $x + $bsq \\
                         &= ($x - $r)^2.
\end{aligned}\]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
