## DESCRIPTION
## Michigan precalculus gateway problem: topic factoring
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

@chars = qw(a b c h m n p q r s t u v w z);
$x = $chars[ random(0,scalar(@chars)-1,1) ];

Context()->variables->are( $x => 'Real' );

## the problem is to factor into a product of monomials
##    x (x + a) - b = (x - r1)(x + r2)

$r1 = random(1,3,1);
$r2 = $r1 + random(1,3,1);
$a = $r2 - $r1;
$b = $r1*$r2;

## distrators are obtained by
## 1. factoring error: = (x + a)(x - b)
## 2. expansion & factoring error: = x^2 + a x + (a - b)x = (x - a)(x - r1-1)
## 3. random error: = (x + r1)(x + r2)
## 4. sign error: = (x + r1)(x - r2)

$r1m1 = $r1 - 1;
$mr1m1 = ( $r1m1 ) ? " - $r1m1" : "";

$s = ( $a - $b < 0 ) ? '+' : '-';
$absamb = abs($a - $b);

$ans = "\(($x - $r1)($x + $r2)\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to \($x\,($x + $a) - $b\)?",
	     $ans );
$gwprob->extra( "\(($x + $a)($x - $b)\)",
		"\(($x - $a)($x $mr1m1)\)",
		"\(($x + $r1)($x + $r2)\)",
		"\(($x + $r1)($x - $r2)\)" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Note that
\[\begin{aligned}
    $x($x + $a) - $b &= $x^2 + $a $x - $b\\
                     &= ($x - $r1)($x + $r2).
\end{aligned}\]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
