## DESCRIPTION
## Michigan precalculus gateway problem: topic factoring
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

## the problem is to factor into a product of monomials
##    (x - a)^2 + (x - b)
## which factors as
##    (x - 1)(x - r2)

## pick r2
$i = random(1,5,1);
$r2 = 2*$i;
## then
$a = ($r2 + 2)/2;      # = $i + 1
$b = ($r2*$r2 + 4)/4;  # = $i^2 + 1

@chars = qw(A B F G L R S T U V W);
$x = $chars[ random(0,scalar(@chars)-1,1) ];

Context()->variables->are( $x => 'Real' );

## distractors are obtained by:
## 1. = x^2 - 2ax - a^2 - b = x^2 - 2ax - (a^2 - b) = (x - r2)(x + 1)
## 2. general bogosity: = x^2 - a^2 + x - b = (x + r3)(x - r4)
## 3. sign error: = (x + 1)(x + r2)
## 4. sign error from (2)

($r3, $r4) = @{( [ ], [ 3, 2 ], [ 5, 2 ], [ 6, 3 ], [ 7, 4 ], [ 37, 1 ] )[$i]};

$ans = "\(($x - 1)($x - $r2)\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\(($x - $a)^2 + ($x - $b)\)?",
	     $ans );

$ap1 = $a + 1;
$gwprob->extra( "\(($x - $r2)($x + 1)\)",
		"\(($x + $r3)($x - $r4)\)",
		"\(($x + 1)($x + $r2)\)",
		"\(($x - $r3)($x + $r4)\)" );

Context()->texStrings;
BEGIN_TEXT

\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));


$twoa = 2*$a;
$asq  = $a*$a;
$twoam1 = $twoa - 1;
$asqmb = $asq - $b;

# ($x - $a)^2 + ($x - $b) = ($x - ($i + 1))^2 + ($x - ($i^2 + 1))

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Note that
\[\begin{aligned}
    ($x - $a)^2 + ($x - $b) &= $x^2 - $twoa $x + $asq + $x - $b\\
                            &= $x^2 - $twoam1 $x + $asqmb\\
                            &= ($x - 1)($x - $r2).
\end{aligned}\]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
