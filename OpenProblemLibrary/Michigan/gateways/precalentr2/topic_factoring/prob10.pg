## DESCRIPTION
## Michigan precalculus gateway problem: topic factoring
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

@chars = qw(a b c h m n p q r s t u v w z);
$x = $chars[ random(0,scalar(@chars)-1,1) ];

Context()->variables->are( $x => 'Real' );

## the problem is to factor into a product of monomials
##    x (a - x) + b = (r1 - x)(x - r2)

$r2 = random(1,3,1);
$r1 = $r2 + random(1,3,1);
$a = $r1 - $r2;
$b = $r1*$r2;

## distrators are obtained by
## 1. factoring error: = (a - x)(x + b)
## 2. sign and factoring error: = (x + r1)(x + r2)
## 3. sign error: = (x - r1)(x + r2)
## 4. random error based on 1: = (x - a)(x - b))

$s = ( $a - $b < 0 ) ? '+' : '-';
$absamb = abs($a - $b);

$ans = "\(($r1 - $x)($x + $r2)\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to \($x\,($a - $x) + $b\)?",
	     $ans );
$gwprob->extra( "\(($a - $x)($x + $b)\)",
		"\(($x + $r1)($x + $r2)\)",
		"\(($x - $r1)($x + $r2)\)",
		"\(($x - $a)($x - $b)\)" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

$ad = ( $a == 1 ) ? "" : $a;

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Note that
\[\begin{aligned}
    $x($a - $x) + $b &= -$x^2 + $ad $x + $b\\
                     &= (-$x + $r1)($x + $r2).
\end{aligned}\]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
