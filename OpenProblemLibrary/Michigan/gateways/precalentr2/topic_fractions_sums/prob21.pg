## DESCRIPTION
## Michigan precalculus gateway problem: topic sums of fractions
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$x = (qw( w x y z ))[random(0,3,1)];
$a = random(2,6,1);
$asq = $a*$a;
$twoa = 2*$a;
$twoasq = 2*$asq;
$asqma = $asq - $a;

$ans = "\(\frac{-$x($x + $twoa)}{$x + $a}\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\(\frac{$asq}{$x + $a} - ($x + $a)\)?", $ans );
$gwprob->extra( "\(\frac{-$x^2}{$x + $a}\)",
		"\(\frac{-$x^2 + $twoa $x + $twoasq}{$x + $a}\)",
		"\(\frac{$asqma - $x}{$x + $a}\)",
		"\(\frac{$x^2 - $twoa}{$x + $a}\)" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

We note that
\[\begin{aligned}
 \frac{$asq}{$x + $a} - ($x + $a) &=
   \frac{$asq}{$x + $a} - \frac{($x+$a)^2}{$x + $a} \\ &=
   \frac{$asq}{$x + $a} - \frac{$x^2 + $twoa $x + $asq}{$x + $a} \\ &=
   \frac{$asq - $x^2 - $twoa $x - $asq}{$x + $a} \\ &=
   \frac{-$x($x + $twoa)}{$x + $a}.
\end{aligned} \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
