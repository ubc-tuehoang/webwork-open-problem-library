## DESCRIPTION
## Michigan precalculus gateway problem: topic sums of fractions
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$a = random(2,4,1);
$b = random(5,9,2);
$b++ if ( $a == 3 && ($b == 9 || $b == 6) );
$c = $b + 1;

$ac = $a*$c;
$bc = $b*$c;
$ap1 = $a + 1;
$twob = 2*$b;

$ans = "\frac{$ac a^2 + $b a + $b}{$bc a}";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to \(\frac{$a a}{$b} + \frac{1+a}{$c a}\)?",
	     "\($ans\)" );
$gwprob->extra( "\(\frac{$ap1 a + 1}{$b + $c a}\)",
		"\(\frac{$ac a^2}{$b + $b a}\)",
		"\(\frac{$ac a + $twob}{$bc}\)",
		"\(\frac{$ap1 a + 1}{$bc a}\)" );

Context()->texStrings;
BEGIN_TEXT

\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

A common denominator is \($bc a\), so we have
\[\begin{aligned}
    \frac{$a a}{$b} + \frac{1+a}{$c a} &=
	\left(\frac{$a a}{$b}\right)\left(\frac{$c a}{$c a}\right) +
	\left(\frac{1+a}{$c a}\right)\left(\frac{$b}{$b}\right)\\
    &= \frac{$ac a^2}{$bc a} + \frac{$b + $b a}{$bc a} = $ans.
\end{aligned}
\]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
