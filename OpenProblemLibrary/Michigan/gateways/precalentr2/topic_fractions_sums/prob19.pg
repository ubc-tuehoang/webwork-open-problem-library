## DESCRIPTION
## Michigan precalculus gateway problem: topic sums of fractions
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$a = random(2,5,1);
$x = (qw( w x y z ))[random(0,3,1)];

$ap1 = $a + 1;
$ap2 = $a + 2;
$asq = $a*$a;
$aap1 = $a*$ap1;

$ans = "\(\frac{$asq - $x}{$ap1 $x}\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\(\frac{$a}{$x} - \frac{$a + $x}{$ap1 $x}\)?", $ans );
$gwprob->extra( "\(-\frac{$x}{$ap2 $x}\)",
		"\(-\frac{$x}{$ap1 $x}\)",
		"\(\frac{1}{$ap1}\)",
		"\(\frac{$asq + $x}{$ap1 $x}\)" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

We note that
\[ \frac{$a}{$x} - \frac{$a + $x}{$ap1 $x} =
   \frac{$aap1}{$ap1 $x} - \frac{$a + $x}{$ap1 $x} =
   \frac{$asq - $x}{$ap1 $x}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
