## DESCRIPTION
## Michigan precalculus gateway problem: topic sums of fractions
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$x = (qw( w x y z ))[random(0,3,1)];
$a = random(2,9,1);
$asq = $a*$a;
$twoa = 2*$a;

$ans = "\(\frac{$asq}{$x^2 + $a $x}\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\(\frac{$x}{$x + $a} - \frac{$x - $a}{$x}\)?", $ans );
$gwprob->extra( "\(1\)",
		"\(\frac{$a}{$x^2 + $a $x}\)",
		"\(-\frac{$asq}{$x^2 + $a $x}\)",
		"\(\frac{$twoa x + $asq}{$x^2 + $a $x}\)" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

We note that
\[ \frac{$x}{$x + $a} - \frac{$x - $a}{$x} =
   \frac{$x^2}{$x($x + $a)} - \frac{($x-$a)($x+$a)}{$x($x + $a)} =
   \frac{$x^2 - ($x^2 - $asq)}{$x^2 + $a $x} = \frac{$asq}{$x^2 + $a $x}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
