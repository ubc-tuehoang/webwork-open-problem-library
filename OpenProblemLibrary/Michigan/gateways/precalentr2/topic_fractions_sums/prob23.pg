## DESCRIPTION
## Michigan precalculus gateway problem: topic sums of fractions
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$x = (qw( w x y z ))[random(0,3,1)];
$a = random(3,7,1);
$b = $a + non_zero_random(-1,2,1);
($n,$d) = reduce($a,$b);
$a = ( $n == 1 ) ? $n+1 : $n;
$b = ( $d == 1 ) ? $a+1 : $d;

$asq = $a*$a;
$twoa = 2*$a;

$ans = "\(\frac{$a $x^2 - $b}{$b $x}\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\(\frac{$a $x}{$b} - \frac{1}{$x}\)?", $ans );
$gwprob->extra( "\(\frac{$a $x - $b}{$b $x}\)",
		"\(\frac{$a $x - 1}{$b - $x}\)",
		"\(-\frac{$a $x^2 - 1}{$b $x}\)",
		"\(\frac{$a $x^2}{$b}\)" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

We note that
\[ \frac{$a $x}{$b} - \frac{1}{$x} =
   \frac{($a $x)($x)}{$b $x} - \frac{$b}{$b $x} =
   \frac{$a x^2 - $b}{$b $x}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
