## DESCRIPTION
## Michigan precalculus gateway problem: topic sums of fractions
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$x = (qw( w x y z ))[random(0,3,1)];
$a = random(2,9,1);
$asq = $a*$a;
$twoa = 2*$a;

$ans = "\(\frac{2$x}{$x^2 - $asq}\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\(\frac{1}{$x + $a} - \frac{1}{$a - $x}\)?", $ans );
$gwprob->extra( "\(\frac{-2$x}{$x^2 - $asq}\)",
		"\(\frac{-$twoa}{$x^2 - $asq}\)",
		"\(0\)",
		"\(\frac{2$x - $twoa}{$x^2 - $asq}\)" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

We note that
\[ \frac{1}{$x + $a} - \frac{1}{$a - $x} =
   \frac{$a - $x}{($x + $a)($a - $x)} - \frac{$x + $a}{($x + $a)($a - $x)} =
   \frac{-2$x}{$asq - $x^2} = \frac{2$x}{$x^2 - $asq}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
