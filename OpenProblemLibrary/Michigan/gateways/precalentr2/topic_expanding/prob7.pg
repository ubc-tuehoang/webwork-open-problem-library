## DESCRIPTION
## Michigan precalculus gateway problem: topic expanding
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$a = random(2,4,1);
$b = $a + 1;
$i = list_random(0,1);
$a = ($a, $b)[$i];
$b = ($a, $b)[$i-1];

$ab = $a*$b;
$abma = $a*($b - 1);
$asq = $a*$a;
$abmb = $b*($a - 1);
$asqma = $asq - $a;

$ans = "\($b x^2 - $abma x - $asq\) ";
$gwprob = new_multiple_choice();
$gwprob->qa("Which of the following is equivalent to \(($a - x)(-$b x - $a)\)?",
	    $ans);
$gwprob->extra("\($b x^2 + $abma x - $asq\)",
	" \(-$b x^2 + $abma x + $asq\) ",
	" \(-$abmb x - $asqma\) ");

$gwprob->makeLast("None of these expressions are equivalent.");

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

We expand the multiplied terms by distributing:
\[\begin{aligned}
($a - x)(-$b x - $a) &= $a(-$b x - $a) - x(-$b x - $a)\\
  &= -$ab x - $asq + $b x^2 + $a x\\
  &= $b x^2 - $abma x - $asq.
\end{aligned}\]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
