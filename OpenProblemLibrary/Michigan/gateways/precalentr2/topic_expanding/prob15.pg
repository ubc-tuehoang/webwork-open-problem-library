## DESCRIPTION
## Michigan precalculus gateway problem: topic expanding
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

($a,$b,$c) = (2,3,4,5)[NchooseK(4,3)];

$ab = $a*$b;
$ac = $a*$c;
$acpb = $a*$c + $b;
$abpb = $b*($a + 1);
$acmc = $c*($a - 1);
$abmacpc = $a*($b - $c) + $c;
if ( $abmacpc == 0 ) {
    $lterm = '';
} elsif ( $abmacpc > 0 ) {
    $lterm = "$abmacpc x + ";
} else {
    $lterm = " - " . abs($abmacpc) . " x + ";
}

$ans = "\($ab x^2 - $acpb x + $c\)";
$gwprob = new_multiple_choice();
$gwprob->qa("Which of the following is equivalent to \((1-$a x)(-$b x+$c)\)?",
	    $ans);
$gwprob->extra("\($ab x^2 + $c x + $c\)",
	"\($abpb x - $acmc\)",
	"\($lterm $c\)",
	"\(-$ab x^2 + $acpb x - $c\)");

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

We expand the multiplied terms by distributing:
\[\begin{aligned}
(1-$a x)(-$b x+$c) &= 1(-$b x + $c) - $a x(-$b x + $c)\\
  &= -$b x + $c + $ab x^2 - $ac x\\
  &= $ab x^2 - $acpb x + $c.
\end{aligned}\]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
