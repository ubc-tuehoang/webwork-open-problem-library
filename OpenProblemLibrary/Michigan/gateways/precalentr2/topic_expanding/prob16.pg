## DESCRIPTION
## Michigan precalculus gateway problem: topic expanding
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

($a,$b,$c) = (2,3,4,5)[NchooseK(4,3)];

$ac = $a*$c;
$bc = $b*$c;
$acpb = $a*$c + $b;
$acam1 = $a*$c - 1;
$abpbc = $b*($a + $c);
$bcma = $b*$c - $a;
$apbc = $a + $bc;

$ans = "\($bc x^2 - $acpb x + $a\)";
$gwprob = new_multiple_choice();
$gwprob->qa("Which of the following is equivalent to \((-$a + $b x)($c x - 1)\)?",
	    $ans);
$gwprob->extra("\($bc x^2 + $acm1 x + $b\)",
	"\(-$ac x^2 + $acpb x - $a\)",
	"\($apbc + $abpbc x\)");

$gwprob->makeLast("None of these expressions are equivalent.");

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

We expand the multiplied terms by distributing:
\[\begin{aligned}
(-$a + $b x)($c x - 1) &= -$a($c x - 1) + $b x($c x - 1)\\
  &= -$ac x + $a + $bc x^2 - $b x\\
  &= $bc x^2 - $acpb x + $a.
\end{aligned}\]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
