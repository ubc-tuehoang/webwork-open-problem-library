## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$A = (qw( A B C D ))[random(0,3,1)];
$n = random(3,5,2);
$m = random(2,4,2);
$nsq = $n*$n;
$nsqpm = $nsq + $m;

$ans = "\($A^{$nsqpm/$nsq}\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\(($A) ($A^{$m/$nsq})\)?", $ans);
$gwprob->extra( "\($A^{$nsq/$m}\)",
		"\($A^{$m/$nsq}\)",
		"\($A^{$m}\)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When multiplying we add exponents.  Here,
\[ 1 + \frac{$m}{$nsq} = \frac{$nsq}{$nsq} + \frac{$m}{$nsq} =
   \frac{$nsqpm}{$nsq}, \]
so that
\[ ($A) ($A^{$m/$nsq}) = $A^{$nsqpm/$nsq}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
