## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$m = (qw( m n p q ))[random(0,3,1)];
$n = random(5,9,2);
$np2 = $n + 2;
$threenp2 = 3*$n + 2;
$twonp2 = 2*($n + 2);
$np4 = $n + 4;
$twon = 2*$n;

$ans = "\( $m^{$threenp2/$n} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( $m^{$np2/$n}\, $m^{2} \)?", $ans );

$gwprob->extra( "\( $m^{$twonp2/$n} \)",
		"\( $m^{$np4/$n} \)",
		"\( $m^{$twon/$np2} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When multiplying we add exponents.  Here,
\[ \frac{$np2}{$n} + 2 = \frac{$np2}{$n} + \frac{$twon}{$n} =
   \frac{$threenp2}{$n}, \]
so that
\[  $m^{$np2/$n}\, $m^{2}  =  $m^{$threenp2/$n} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
