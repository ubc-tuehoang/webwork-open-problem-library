## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$B = (qw( A B C D ))[random(0,3,1)];
$n = random(3,5,1);
$np1 = $n + 1;
$twon = 2*$n;
$twonsq = $twon*$n;
$twonsqpnp1 = $twonsq + $n + 1;
$threenp1 = $twon + $n + 1;
$nnp1 = $n*$np1;

$ans = "\( $B^{$twonsqpnp1/$n} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( $B^{$twon}\, $B^{$np1/$n} \)?", $ans );
$gwprob->extra( "\( $B^{$nnp1} \)",
		"\( $B^{$threenp1/$n} \)",
		"\( $B^{$np1/$twonsq} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When multiplying we add exponents.  Here,
\[ $twon + \frac{$np1}{$n} = \frac{$twonsq}{$n} + \frac{$np1}{$n} =
   \frac{$twonsqpnp1}{$n}, \]
so that
\[  $B^{$twon}\, $B^{$np1/$n}  =  $B^{$twonsqpnp1/$n} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
