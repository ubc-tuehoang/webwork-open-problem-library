## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$y = (qw( w x y z ))[random(0,3,1)];
$n = random(3,5,2);
$twon = 2*$n;
$twonp2 = $twon + 2;
$nsq = $n*$n;
$twonsq = 2*$nsq;
$twonsqp2np2 = $twonsq + $twon + 2;
$twotwonp2 = 2*$twonp2;
$fournp2 = 4*$n + 2;
$twonp4 = $twon + 4;

$ans = "\( $y^{$twonsqp2np2/$n} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( $y^{$twonp2/$n}\, $y^{$twon} \)?", $ans );

$gwprob->extra( "\( $y^{$twotwonp2} \)",
		"\( $y^{$fournp2/$n} \)",
		"\( $y^{$twonp4/$n} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When multiplying we add exponents.  Here,
\[ \frac{$twonp2}{$n} + $twon = \frac{$twonp2}{$n} + \frac{$twonsq}{$n} =
   \frac{$twonsqp2np2}{$n}, \]
so that
\[  y^{$twonp2/$n}\, y^{$twon}  =  $y^{$twonsqp2np2/$n} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
