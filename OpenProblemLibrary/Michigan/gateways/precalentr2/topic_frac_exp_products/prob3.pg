## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$W = (qw( W X Y Z ))[random(0,3,1)];
$n = random(2,4,1);
$np1 = $n + 1;
$nsq = $n*$n;
$np1sq = $np1*$np1;
$nnp1 = $n*$np1;
$nsqpnp1sq = $nsq + $np1sq;

$ans = "\($W^{$nsqpnp1sq/$nnp1}\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\($W^{$n/$np1}\,$W^{$np1/$n}\)?", $ans );
$gwprob->extra( "\($W\)",
		"\(1\)",
		"\($W^{$nsq/$np1sq}\)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When multiplying we add exponents.  Here,
\[ \frac{$n}{$np1} + \frac{$np1}{$n} =
   \frac{$nsq}{$nnp1} + \frac{$np1sq}{$nnp1} =
   \frac{$nsqpnp1sq}{$nnp1}, \]
so that
\[ $W^{$n/$np1}\,$W^{$np1/$n} = $W^{$nsqpnp1sq/$nnp1}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
