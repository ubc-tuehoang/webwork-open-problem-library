## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$C = (qw( A B C D ))[random(0,3,1)];
$n = random(2,6,2);
$np1 = $n + 1;
$twon = 2*$n;
$twonsq = $twon*$n;
$twonsqpnp1 = $twonsq + $n + 1;
$threenp1 = $twon + $n + 1;
$nnp1 = $n*$np1;

$ans = "\($C^{$twonsqpnp1/$n}\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\($C^{$np1/$n}\, $C^{$twon}\)?", $ans );

$gwprob->extra( "\($C^{$nnp1}\)",
		"\($C^{$threenp1/$n}\)",
		"\($C^{$np1/$twonsq}\)" );
$gwprob->makeLast( "None of these expressions are equivalent" );


Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When multiplying we add exponents.  Here,
\[ \frac{$np1}{$n} + $twon = \frac{$np1}{$n} + \frac{$twonsq}{$n} =
   \frac{$twonsqpnp1}{$n}, \]
so that
\[ $C^{$np1/$n}\, $C^{$twon} = $C^{$twonsqpnp1/$n}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
