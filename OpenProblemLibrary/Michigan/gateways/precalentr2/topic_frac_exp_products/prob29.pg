## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$O = (qw( N O P Q ))[random(0,3,1)];
$n = random(2,4,1);
$np1 = $n + 1;
$np2 = $n + 2;
$np3 = $n + 3;
$twonp3 = 2*$n + 3;
$nnp2 = $n*$np2;
$np1np2 = $np1*$np2;
$nnp3 = $n*$np3;
$np1np3 = $np1*$np3;

($a,$b) = reduce( $twonp3, $nnp3 );
if ( $b == 1 ) {
    $e1 = $a;
    $e1d = $a;
    $w1 = "-\frac{$twonp3}{$nnp3} = -$a";
} else {
    $e1 = "$a/$b";
    $e1d = "\frac{$a}{$b}";
    $w1 = ( $e1 eq "$twonp3/$nnp3" ) ? "-\frac{$twonp3}{$nnp3}" :
        "-\frac{$twonp3}{$nnp3}= -$e1d";
}
($a,$b) = reduce( $np1np2, $nnp3 );
$e2 = ( $b == 1 ) ? $a : "$a/$b";
($a,$b) = reduce( $n*$np2, $np1*$np3 );
$e3 = ( $b == 1 ) ? $a : "$a/$b";

if ( $e1 eq $e2 || $e1 eq $e3 || $e2 eq $e3 ) {
    $n = 3; $np1 = 4;  $np2 = 5;  $np3 = 6;
    $e1 = "1/3";
    $e1d = "\frac13";
    $e2 = "10/9";
    $e3 = "5/8";
}

$ans = "\( $O^{-$e1} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( \frac{$O^{$np2/$np3}}{$O^{$np1/$n}} \)?", $ans );

$gwprob->extra( "\( $O^{-$e2} \)",
		"\( $O^{-$e3} \)",
		"\( $O^{$e1} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When dividing we subtract exponents.  Here,
\[ \frac{$np2}{$np3} - \frac{$np1}{$n} =
   \frac{$nnp2}{$nnp3} - \frac{$np1np3}{$nnp3} =
   $w1, \]
so that
\[  \frac{$O^{$np2/$np3}}{$O^{$np1/$n}}  =  $O^{-$e1} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
