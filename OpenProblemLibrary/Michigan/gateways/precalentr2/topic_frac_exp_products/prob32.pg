## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$u = (qw( t u v w ))[random(0,3,1)];
$n = random(5,7,1);
$m = random(2,4,1);
$mmn = $m - $n;
$np1 = $n + 1;
$mnp1 = $m*$np1;
$mn = $m*$n;
$mnp1mn = $mnp1 - $n;

($a,$b) = reduce($mn, $np1);
$e1 = ( $b == 1 ) ? $a : "$a/$b";

$ans = "\( $u^{$mnp1mn/$np1} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( \frac{$u^{$m}}{$u^{$n/$np1}} \)?", $ans );

$gwprob->extra( "\( $u^{$mnp1/$n} \)",
		"\( $u^{$e1} \)",
		"\( $u^{$mmn/$np1} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When dividing we subtract exponents.  Here,
\[ $m - \frac{$n}{$np1} = \frac{$mnp1}{$np1} - \frac{$n}{$np1} =
   \frac{$mnp1mn}{$np1}, \]
so that
\[  \frac{$u^{$m}}{$u^{$n/$np1}}  =  $u^{$mnp1mn/$np1} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
