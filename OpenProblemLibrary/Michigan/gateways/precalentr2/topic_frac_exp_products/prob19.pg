## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$y = (qw( w x y z ))[random(0,3,1)];
$n = random(3,7,2);
$np4 = $n + 4;
$nsq = $n*$n;
$nsqp3n = $nsq + 3*$n;
$nnp4 = $n*$np4;

$ans = "\( $y^{$nsqp3n/$np4} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( \frac{$y^{$n}}{$y^{$n/$np4}} \)?", $ans );

$gwprob->extra( "\( $y^{-$np4} \)",
		"\( $y^{$nsq/$np4} \)",
		"\( $y^{-1/$np4} \) " );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When dividing we subtract exponents.  Here,
\[ $n - \frac{$n}{$np4} = \frac{$nnp4}{$n} - \frac{$n}{$np4} =
   \frac{$nsqp3n}{$np4}, \]
so that
\[  \frac{$y^{$n}}{$y^{$n/$np4}}  =  $y^{$nsqp3n/$np4} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
