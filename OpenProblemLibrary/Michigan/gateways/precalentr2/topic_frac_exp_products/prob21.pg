## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$d = (qw( a b c d ))[random(0,3,1)];
$n = random(3,7,2);
$np2 = $n + 2;
$nnp2 = $n*$np2;
$nnp2m1 = $nnp2 - 1;

$ans = "\( $d^{$nnp2m1/$n} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( \frac{$d^{$np2}}{$d^{1/$n}} \)?", $ans );

$gwprob->extra( "\( $d^{-$nnp2} \)",
		"\( $d^{$nnp2} \)",
		"\( $d^{$np2/$n} \)",
		"\( $d^{-$np2/$n} \)");

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When dividing we subtract exponents.  Here,
\[ $np2 - \frac{1}{$n} = \frac{$nnp2}{$n} - \frac{1}{$n} =
   \frac{$nnp2m1}{$n}, \]
so that
\[  \frac{$d^{$np2}}{$d^{1/$n}}  =  $d^{$nnp2m1/$n} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
