## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$z = (qw( w x y z ))[random(0,3,1)];
$n = random(2,4,1);
$np1 = $n + 1;

$np1 = $n + 1;
$nsq = $n*$n;
$np1sq = $np1*$np1;
$nnp1 = $n*$np1;
$npnp1 = $n + $np1;
$nsqpnp1sq = $nsq + $np1sq;

$ans = "\( $z^{$nsqpnp1sq/$nnp1} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( $z^{$np1/$n}\, $z^{$n/$np1} \)?", $ans);
$gwprob->extra( "\( $z^{$npnp1/$nnp1} \)",
		"\( $z \)",
		"\( 1 \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When multiplying we add exponents.  Here,
\[ \frac{$np1}{$n} + \frac{$n}{$np1} =
   \frac{$np1sq}{$nnp1} + \frac{$nsq}{$nnp1} =
   \frac{$nsqpnp1sq}{$nnp1}, \]
so that
\[  $z^{$np1/$n}\, $z^{$n/$np1}  =  $z^{$nsqpnp1sq/$nnp1} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
