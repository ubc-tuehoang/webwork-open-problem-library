## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$z = (qw( w x y z ))[random(0,3,1)];
$n = random(5,9,2);
$nsq = $n*$n;
$twomnsq = 2 - $nsq;
$twomn = 2 - $n;

$ans = "\( $z^{$twomnsq/$n} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( \frac{$z^{2/$n}}{$z^{$n}} \)?", $ans );

$gwprob->extra( "\( $z^{2} \)",
		"\( $z^{-2} \)",
		"\( $z^{$twomn/$n} \)",
		"\( $z^{2/$nsq} \)" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When dividing we subtract exponents.  Here,
\[ \frac{2}{$n} - $n = \frac{2}{$n} - \frac{$nsq}{$n} =
   \frac{$twomnsq}{$n}, \]
so that
\[  \frac{$z^{2/$n}}{$z^{$n}}  =  z^{$twomnsq/$n} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
