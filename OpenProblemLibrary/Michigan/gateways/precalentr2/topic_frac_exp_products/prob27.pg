## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$S = (qw( Q R S T ))[random(0,3,1)];
$n = random(5,7,2);
$m = 3;
$twon = 2*$n;
$threen = 3*$n;
$fiven = 5*$n;
$threem = 3*$m;
$twonsq = 2*$n*$n;
$threemsq = 3*$m*$m;

$ans = "\( $S^{$fiven/$threem} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( $S^{$twon/$threem}\, $S^{$n/$m} \)?", $ans );

$gwprob->extra( "\( $S^{$twonsq/$threemsq} \)",
		"\( $S^{2/3} \)",
		"\( $S^{-$n/$threem} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When multiplying we add exponents.  Here,
\[ \frac{$twon}{$threem} + \frac{$n}{$m} =
   \frac{$twon}{$threem} + \frac{$threen}{$threem} =
   \frac{$fiven}{$threem}, \]
so that
\[  $S^{$twon/$threem}\, $S^{$n/$m}  =  $S^{$fiven/$threem} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
