## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$u = (qw( u v w z ))[random(0,3,1)];
$n = list_random(2,3,4,6);
$m = 5;
$twon = 2*$n;
$threen = 3*$n;

$ans = "\( $u^{$twon/$m} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\(\frac{$u^{$threen/$m}}{$u^{$n/$m}} \)?", $ans );

$gwprob->extra( "\( $u^{3} \)",
		"\( $u^{-3} \)",
		"\( $u^{$twon} \)",
		"\( $u^{3/$m} \)" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When dividing we subtract exponents.  Here,
\[ \frac{$threen}{$m} - \frac{$n}{$m} = \frac{$twon}{$m}, \]
so that
\[ \frac{$u^{$threen/$m}}{$u^{$n/$m}} =  u^{$twon/$m} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
