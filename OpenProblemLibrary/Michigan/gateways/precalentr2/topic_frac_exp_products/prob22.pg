## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$z = (qw( w x y z ))[random(0,3,1)];
$n = random(2,5,1);
$threen = 3*$n;
$threenm3 = $threen - 3;

$ans = "\( $z^{$threenm3} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( \frac{$z^{$threen}}{$z^{$threen/$n}} \)?", $ans );

$gwprob->extra( "\( $z^{$n} \)",
		"\( $z^{-$n} \)",
		"\( $z^{-1/$n} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When dividing we subtract exponents.  Here,
\[ $threen - \frac{$threen}{$n} = $threen - 3 = $threenm3, \]
so that
\[  \frac{$z^{$threen}}{$z^{$threen/$n}}  =  $z^{$threenm3} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
