## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$I = (qw( H I J K ))[random(0,3,1)];
$n = random(3,7,2);
$np2 = $n + 2;
$twonp2 = 2*$n + 2;
$twon = 2*$n;

$ans = "\( $I^{$twonp2/$np2} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( $I^{$n/$np2}\, $I \)?", $ans );

$gwprob->extra( "\( $I^{$n/$np2} \)",
		"\( $I^{$np2/$n} \)",
		"\( $I^{$twon/$np2} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When multiplying we add exponents.  Here,
\[ \frac{$n}{$np2} + 1 = \frac{$n}{$np2} + \frac{$np2}{$np2} =
   \frac{$twonp2}{$np2}, \]
so that
\[  $I^{$n/$np2}\, $I  =  $I^{$twonp2/$np2} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
