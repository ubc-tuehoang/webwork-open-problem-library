## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$I = (qw( I J K L ))[random(0,3,1)];
$n = random(2,4,1);
$twon = 2*$n;
$twonm1 = $twon - 1;
$twonsq = $twon*$n;
$twonp1 = $twon + 1;

$ans = "\($I^{$twonp1/$twon}\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\($I^{$twonm1/$twon}\, $I^{1/$n}\)?", $ans );
$gwprob->extra( "\($I^{$twonm1/2}\)",
		"\($I^{2/$twonm1}\)",
		"\($I^{$twonm1/$twonsq}\)" );
$gwprob->makeLast( "None of these expressions are equivalent" );


Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When multiplying we add exponents.  Here,
\[ \frac{$twonm1}{$twon} + \frac{1}{$n} =
   \frac{$twonm1}{$twon} + \frac{2}{$twon} =
   \frac{$twonp1}{$twon}, \]
so that
\[ $I^{$twonm1/$twon}\, $I^{1/$n} = $I^{$twonp1/$twon}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
