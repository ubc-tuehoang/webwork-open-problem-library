## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$r = (qw( q r s t ))[random(0,3,1)];
$n = random(5,9,2);
$np2 = $n + 2;
$nm2 = $n - 2;
$fourn = 4*$n;
$nsq = $n*$n;
$nsqm4 = $nsq - 4;
$nnm2 = $n*$nm2;
$nnp2 = $n*$np2;

$ans = "\( $r^{-$fourn/$nsqm4} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( \frac{$r^{$n/$np2}}{$r^{$n/$nm2}} \)?", $ans );

$gwprob->extra( "\( $r^{-$np2/$nm2} \)",
		"\( $r^{$nm2/$nnp2} \)",
		"\( $r^{-2} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When dividing we subtract exponents.  Here,
\[ \frac{$n}{$np2} - \frac{$n}{$nm2} =
   \frac{$nnm2}{$nsqm4} - \frac{$nnp2}{$nsqm4} =
   \frac{-$fourn}{$nsqm4}, \]
so that
\[  \frac{$r^{$n/$np2}}{$r^{$n/$nm2}}  =  $r^{-$fourn/$nsqm4} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
