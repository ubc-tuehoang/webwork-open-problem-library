## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$q = (qw( p q r s ))[random(0,3,1)];
$n = random(2,4,1);
$np2 = $n + 2;
$m = 2*$np2 - 1;
$nnp2 = $n*$np2;
$mmnnp2 = $m - $nnp2;
$mn = $m*$n;
$mmn = $m - $n;
$mp2 = $m + 2;

($a,$b) = reduce( $mn, $np2 );
$e1 = ( $b = 1 ) ? $a : "$a/$b";

$ans = "\( $q^{$mmnnp2/$np2} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( \frac{$q^{$m/$np2}}{$q^{$n}} \)?", $ans );

$gwprob->extra( "\( $q^{$m/$nnp2} \)",
		"\( $q^{-$e1} \)",
		"\( $q^{-$m/$nnp2} \)",
		"\( $q^{$mmn/$mp2} \)");

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When dividing we subtract exponents.  Here,
\[ \frac{$m}{$np2} - $n = \frac{$m}{$np2} - \frac{$nnp2}{$np2} =
   \frac{$mmnnp2}{$np2}, \]
so that
\[  \frac{$q^{$m/$np2}}{$q^{$n}}  =  $q^{$mmnnp2/$np2} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
