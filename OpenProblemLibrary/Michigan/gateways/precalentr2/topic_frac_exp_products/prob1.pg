## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$a = (qw( a b c d ))[random(0,3,1)];
$n = random(2,4,1);
$nsq = $n*$n;
$ncu = $nsq*$n;
$ncup1 = $ncu + 1;
$ncum1 = $ncu - 1;

$ans = "\($a^{$ncup1/$n}\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\($a^{$nsq}\,$a^{1/$n}\)?", $ans );
$gwprob->extra(	"\($a^{$n}\)",
		"\($a^{$ncum1/$ncu}\)",
		"\($a^{$ncu}\)");
$gwprob->makeLast("None of these expressions are equivalent");

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When multiplying we add exponents.  Here,
\[ $nsq + \frac1{$n} = \frac{$ncu}{$n} + \frac1{$n} = \frac{$ncup1}{$n}, \]
so that
\[ $a^{$nsq}\,$a^{1/$n} = $a^{$ncup1/$n}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
