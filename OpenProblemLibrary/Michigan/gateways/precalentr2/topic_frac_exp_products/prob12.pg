## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$K = (qw( J K L M ))[random(0,3,1)];
$n = random(3,7,2);
$np2 = $n + 2;
$twon = 2*$n;
$nsq = $n*$n;
$nsqptwonp1 = $nsq + $twon + 1;
$np1 = $n + 1;
$nnp2 = $n*$np2;

$ans = "\( $K^{$nsqptwonp1/$np2} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( $K^{1/$np2}\, $K^{$n} \)?", $ans );

$gwprob->extra( "\( $K^{$n/$np2} \)",
		"\( $K^{$nnp2} \)",
		"\( $K^{1/2} \)",
		"\( $K^{$np1/$np2} \)" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When multiplying we add exponents.  Here,
\[ \frac{1}{$np2} + $n = \frac{1}{$np2} + \frac{$nnp2}{$np2} =
   \frac{$nsqptwonp1}{$np2}, \]
so that
\[  $K^{1/$np2}\, $K^{$n}  =  $K^{$nsqptwonp1/$np2} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
