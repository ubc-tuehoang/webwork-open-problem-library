## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$z = (qw( w x y z ))[random(0,3,1)];
$n = random(2,4,1);
$np1 = $n + 1;
$np1sq = $np1*$np1;
$nsq = $n*$n;
$np1sqmnsq = $np1sq - $nsq;
$nnp1 = $n*$np1;

$ans = "\($z^{$np1sqmnsq/$nnp1}\)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\(\frac{$z^{$np1/$n}}{$z^{$n/$np1}}\)?", $ans );

$gwprob->extra( "\($z^{-$np1sq/$nsq}\)",
		"\($z\)",
		"\($z^{-$np1sqmnsq/$nnp1}\)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When dividing we subtract exponents.  Here,
\[ \frac{$np1}{$n} - \frac{$n}{$np1} =
   \frac{$np1sq}{$nnp1} - \frac{$nsq}{$nnp1} =
   \frac{$np1sqmnsq}{$nnp1}, \]
so that
\[ \frac{$z^{$np1/$n}}{$z^{$n/$np1}} = $z^{$np1sqmnsq/$nnp1}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
