## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$C = (qw( A B C D ))[random(0,3,1)];
$n = random(2,4,1);
$np1 = $n + 1;
$np2 = $n + 2;
$nsq = $n*$n;
$nsqpnm1 = $nsq + $n - 1;
$nnp2 = $n*$np2;

$ans = "\( $C^{$nsqpnm1/$n} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( \frac{$C^{$np2}}{$C^{$np1/$n}} \)?", $ans );

$gwprob->extra( "\( $C^{-$nsqpnm1/$n} \)",
		"\( $C^{-$nnp2/$np1} \)",
		"\( $C^{-1/3} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When dividing we subtract exponents.  Here,
\[ $np2 - \frac{$np1}{$n} = \frac{$nnp2}{$n} - \frac{$np1}{$n} =
   \frac{$nsqpnm1}{$n}, \]
so that
\[  \frac{$C^{$np2}}{$C^{$np1/$n}}  =  $C^{$nsqpnm1/$n} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
