## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$l = (qw( j k m n ))[random(0,3,1)];
$n = random(3,7,2);
$np2 = $n + 2;

$ans = "\( $l^{2/$np2} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( \frac{$l}{$l^{$n/$np2}} \)?", $ans );

$gwprob->extra( "\( $l^{-2/$np2} \)",
		"\( $l^{$n/$np2} \)",
		"\( $l^{-$np2/$n} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When dividing we subtract exponents.  Here,
\[ 1 - \frac{$n}{$np2} = \frac{$np2}{$np2} - \frac{$n}{$np2} =
   \frac{2}{$np2}, \]
so that
\[  \frac{$l}{$l^{$n/$np2}}  =  $l^{2/$np2} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
