## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$x = (qw( w x y z ))[random(0,3,1)];
$n = random(2,5,1);
$twon = 2*$n;
$twonm1 = $twon - 1;
$np1 = $n + 1;
$nm1 = $n - 1;

$ans = "\( $x^{-$nm1/$n} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( \frac{$x}{$x^{$twonm1/$n}} \)?", $ans );

$gwprob->extra( "\( $x^{-$n/$twonm1} \)",
		"\( $x^{-2} \)",
		"\( $x^{$n/$twonm1} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When dividing we subtract exponents.  Here,
\[ 1 - \frac{$twonm1}{$n} = \frac{$n}{$n} - \frac{$twonm1}{$n} =
   \frac{-$nm1}{$n}, \]
so that
\[  \frac{$x}{$x^{$twonm1/$n}}  =  $x^{-$nm1/$n} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
