## DESCRIPTION
## Michigan precalculus gateway problem: topic products of fractional exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$L = (qw( J K L M ))[random(0,3,1)];
$n = random(4,8,2);
$np1 = $n + 1;
$twon = 2*$n;
$threenp2 = 3*$n + 2;
$no2 = $n/2;
$np2 = $n + 2;
$twonp1 = 2*$np1;

$ans = "\( $L^{$threenp2/$np1} \)";
$gwprob = new_multiple_choice();
$gwprob->qa( "Which of the following is equivalent to " .
	     "\( $L^{2}\, $L^{$n/$np1} \)?", $ans );
$gwprob->extra("\( $L^{$twon/$np1} \)",
	       "\( $L^{$np1/$no2} \)",
	       "\( $L^{$np2/$np1} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

When multiplying we add exponents.  Here,
\[ 2 + \frac{$n}{$np1} = \frac{$twonp1}{$np1} + \frac{$n}{$np1} =
   \frac{$threenp2}{$np1}, \]
so that
\[  $L^{2}\, $L^{$n/$np1}  =  $L^{$threenp2/$np1} . \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
