## DESCRIPTION
## Michigan precalculus gateway problem: topic exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$k = random(2,6,1);
$p = list_random(qw( p q r s ) );
$r = random(2,4,1);
$s = $r + 1;

$ksq = $k*$k;

$ans = "\( \frac{1}{$k} $p^{-1} \)";
$gwprob = new_multiple_choice();
$gwprob->qa("Which of the following is equivalent to \( \displaystyle\frac{$p^$r}{$k $p^$s} \)?",
	    $ans);
$gwprob->extra("\( $k $p^{-1} \)",
	"\( \frac{1}{$k}\, $p^{$r/$s} \)",
	"\( \frac{2}{$ksq} \)" );
$gwprob->makeLast("None of these expressions are equivalent");

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Simplifying by dividing, we have
\[ \frac{$p^$r}{$k $p^$s} = \frac{1}{$k $p} = \frac{1}{$k}\,$p^{-1}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
