## DESCRIPTION
## Michigan precalculus gateway problem: topic exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$k = random(3,5,1);
$r = random(2,3,1);
$a = list_random(qw( a b c d ));
$x = list_random(qw( w x y z ));

$ans = "\( \frac{$k}{$x^{$r} ($a + 1)} \)";
$gwprob = new_multiple_choice();
$gwprob->qa("Which of the following is equivalent to \(\displaystyle\left(\frac{$a + 1}{$k $x^{-$r}}\right)^{-1}\)?",
	    $ans);
$gwprob->extra("\( \frac{1}{$k $x^{$r}($a + 1)} \)",
	"\( $k $x^{$r}(\frac{1}{$a} + 1) \)",
	"\( $k $x^{$r} ($a + 1) \)" );
$gwprob->makeLast("None of these expressions are equivalent ");

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Inverting because of the negative exponents, we have
\[ \left(\frac{$a + 1}{$k $x^{-$r}}\right)^{-1} =
   \frac{$k x^{-$r}}{$a + 1} =
   \frac{$k}{$x^{$r}($a + 1)}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
