## DESCRIPTION
## Michigan precalculus gateway problem: topic exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$i = random(0,6,2);
($a, $b) = (qw( a b c d p q x y ))[$i, $i+1];
$r = random(2,3,1);

$ro2 = ( $r == 2 ) ? '' : "^{3/2}";

$ans = "\( \frac{1}{$a^{$r} + $b^{$r}} \)";
$gwprob = new_multiple_choice();
$gwprob->qa("Which of the following is equivalent to \( ($a^{$r} + $b^{$r})^{-1} \)?",
	    $ans);
$gwprob->extra("\( $a^{-$r} + $b^{-$r} \)",
	"\( $a$ro2 + $b$ro2 \)",
	"\( \frac{1}{$a$ro2 + $b$ro2} \)" );
$gwprob->makeLast( "None of these expressions are equivalent" );



Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Note that exponentiation does not distribute over sums, so we have
\[ ($a^{$r} + $b^{$r})^{-1} = \frac{1}{$a^{$r} + $b^{$r}}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
