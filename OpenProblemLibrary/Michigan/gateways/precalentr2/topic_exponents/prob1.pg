## DESCRIPTION
## Michigan precalculus gateway problem: topic exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$a = random(2,4,1);
$b = $a + 1;
$k = list_random(qw( a b c d ));

$ab = $a*$b;

$ans = "\($a($b^x $k^x)\)";
$gwprob = new_multiple_choice();
$gwprob->qa("Which of the following is equivalent to \($a($b $k)^x\)?",
	    $ans);
$gwprob->extra("\($ab^x $a^x\)",
	"\($ab $a^x\)",
	"\($ab^x $a\)");
$gwprob->makeLast("None of these expressions are equivalent");

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Exponents distribute across the enclosed terms, so we have
\[ $a($b $k)^x = $a\, ($b^x\, $k^x). \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
