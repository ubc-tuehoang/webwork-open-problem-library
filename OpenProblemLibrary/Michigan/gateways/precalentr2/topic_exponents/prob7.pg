## DESCRIPTION
## Michigan precalculus gateway problem: topic exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$m = random(4,8,1);
$n = $m + 1;
$b = list_random(qw( a b d f ));
$c = list_random(qw( c k p q ));

$ans = "\( $m^{$b}\, $n^{$c $b} \)";
$gwprob = new_multiple_choice();
$gwprob->qa("Which of the following is equivalent to \( ( $m ($n^{$c}) )^{$b} \)?",
	    $ans);
$gwprob->extra("\( $m^{$b}\, $n^{$c + $b} \)",
	"\( $m\, ($n^{$c $b}) \)",
	"\( $m^{1+$b}\, ($n^{$c + $b}) \)" );
$gwprob->makeLast(" None of these expressions are equivalent");

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Exponentiation distributes over multiplication, so we have
\[ ( $m ($n^{$c}) )^{$b} =
   $m^{$b} $n^{$c $b}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
