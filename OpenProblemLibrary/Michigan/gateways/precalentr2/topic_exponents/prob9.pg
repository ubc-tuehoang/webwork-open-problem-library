## DESCRIPTION
## Michigan precalculus gateway problem: topic exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$b = list_random(qw( a b c d ));
$r = random(4,10,2);

$rm2 = $r - 2;
$twor = 2*$r;
$ro2 = $r/2;

$ans = "\($b^{$rm2}\)";
$gwprob = new_multiple_choice();
$gwprob->qa("Which of the following is equivalent to \(\displaystyle\frac{(-$b)^{$r}}{$b^2}\)?",
	    $ans);
$gwprob->extra("\($b^{$twor}\)",
	"\(-b^{$rm2}\)",
	"\(-b^{$ro2}\)" );
$gwprob->makeLast("None of these expressions are equivalent");

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Noting that \((-$b)^{$r} = $b^{$r}\), we have
\[ \frac{(-$b)^{$r}}{$b^2} = \frac{$b^{$r}}{$b^2} = $b^{$rm2}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
