## DESCRIPTION
## Michigan precalculus gateway problem: topic exponents
## ENDDESCRIPTION

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");

$a = random(2,5,1);
$asq = $a*$a;
$k = list_random(qw( a b c d ));

$twoa = 2*$a;

$ans = "\($asq^x $k^{2x}\)";
$gwprob = new_multiple_choice();
$gwprob->qa("Which of the following is equivalent to \((-$a $k)^{2x}\)?",
	    $ans);
$gwprob->extra("\(-$a^{2x} $k^{2x}\)",
	"\(-$twoa $k^{x}\)",
	"\(-$asq^{x} $k^{2x}\)" );
$gwprob->makeLast("None of these expressions are equivalent");

Context()->texStrings;
BEGIN_TEXT
\{ $gwprob->print_q() \}
\{ $gwprob->print_a() \}

END_TEXT
Context()->normalStrings;

ANS(radio_cmp( $gwprob->correct_ans() ));

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Exponents distribute across the enclosed terms, so we have
\[(-$a $k)^{2x} = (-$a)^{2x} $k^{2x} = $asq^x $k^{2x}. \]

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
