DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

do {
	$a = random(2,9,1);
	$b = random(3,7,1);
	$c = random(2,5,1);
	$xo = random(2,9,1);
	$yo = random(2,9,1);
	$m = random(2,5,1);
	$n = random($m+1,2*$m,1);
	$p = random($m,$n+1,1);
} until (
	$p*$c*$yo**($p-1) - $b*$xo**$n
	and abs($p*$c*$yo**($p-1) - $b*$xo**$n) < 100
	and abs($m*$a*$xo**($m-1)+$n*$b*$xo**($n-1)*$yo) < 100
	and ( $m*$a*$xo**($m-1)+$n*$b*$xo**($n-1)*$yo ) %
 	( $p*$c*$yo**($p-1) - $b*$xo**$n )
);

$f = $a*$xo**$m + $b*$xo**$n*$yo - $c*$yo**$p;

Context('Numeric')->variables->are(
	x => [ 'Real', limits => [0, .5] ],
	y => [ 'Real', limits => [1, 2] ]
);

$dydx = Compute(
	"($m*$a*x^($m-1)+$n*$b*x^($n-1)*y)/($p*$c*y^($p-1)-$b*x^$n)"
)->reduce;

Context('Fraction');
$slope = Fraction(
	$m*$a*$xo**($m-1)+$n*$b*$xo**($n-1)*$yo,
	$p*$c*$yo**($p-1)-$b*$xo**$n
)->reduce;
$tan_line_string = $yo
	. ( $slope > 0 ? '+' : '-' )
	. abs($slope)
	. "(x - $xo)";

Context('Numeric')->flags->set(
	reduceConstants => 0
);

$tan_line = Compute($tan_line_string);

@answers = (
	$dydx->cmp,
	$slope->cmp,
	$tan_line->cmp
);

BEGIN_TEXT
Find \( \displaystyle \frac{dy}{dx} \) when
\( $a x^{$m}+ $b x^{$n}y - $c y^{$p} = $f \).
$BR $BR
\( \displaystyle \frac{dy}{dx} = \)
\{ ans_rule(30) \}
$BR $BR
The slope of the tangent line to this curve
at the point \( ($xo, $yo) \) is
\{ ans_rule(5) \}.
$BR $BR
The equation of the tangent line to this curve at this point is
$BR $BR
\( y = \) \{ ans_rule(15) \}
END_TEXT

ANS(@answers);

ENDDOCUMENT();
