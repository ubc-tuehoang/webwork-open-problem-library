DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,6,1);
$a2 = $a**2;
$b = random($a+1,9,1);
$c = $a+$b;
$ab = $a*$b;
$d = random(2,9,1);
$f = random(3,7,1);
$g = $d*$f**2-$f**2;
#$ans1 = (2*$a)/($a-$b);
$ans1num = 2*$a;
$ans1denom = $a-$b;
$ans1 = Compute("$ans1num/$ans1denom");


BEGIN_TEXT
Evaluate the following limits:$BR
\( \displaystyle\lim_{x\to - $a}\frac{x^2 - $a2}{x^2 + $c x + $ab} =\) 
\{ans_rule(20)\}$BR
$BR
\( \displaystyle\lim_{x\to -\infty}\frac{x^2 - $a2}{x^2 + $c x + $ab} =\) 
\{ans_rule(20)\}$BR
$BR
\( \displaystyle\lim_{x\to -$f}\frac{\sqrt{$d x^2 - $g}- $f}{x + $f} =\)
\{ans_rule(20)\}
END_TEXT

ANS($ans1->cmp());
ANS(Compute(1)->cmp());
ANS(Compute(- $d)->cmp());

ENDDOCUMENT();        # This should be the last executable line in the problem.

