DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "parserFormulaUpToConstant.pl",
  "PGcourse.pl"
);

sub str {
        my $x = shift;
        return ( $x > 0 ? '' : '-' )
        . ( ($x)**2 == 1 ? '' : abs($x) )
}

TEXT(beginproblem());

do {
	$n = non_zero_random(-9, 9);
	$d = random(3, 9);
} until (
	gcd($n, $d) == 1
);

$ns = str($n);

Context('Fraction');
$coeff = Fraction($d, $n)->reduce;
$exp = (1/$coeff)->reduce;

Context('Numeric')->flags->set(
	reduceConstants => 0
);

$f = Formula('e^(' . str($exp) . 'x)');

$F = FormulaUpToConstant(
	str($coeff) . $f
);

BEGIN_TEXT
Evaluate the indefinite integral.
$BR $BR
\( \displaystyle \int
\sqrt[$d]{e^{$ns x}} \, dx = \)
=  \{ ans_rule()\}
END_TEXT

ANS($F->cmp);

Context()->texStrings;
BEGIN_SOLUTION
Revising the integrand and then
integrating by inspection gives
\[
\int \sqrt[$d]{e^{$ns x}} \, dx
= \int $f \, dx
\textstyle = $F.
\]
END_SOLUTION

ENDDOCUMENT();
