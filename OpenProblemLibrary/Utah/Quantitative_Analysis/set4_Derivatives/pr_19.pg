DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context("Numeric");

$an = random(2,7,1);
$as = random(-1,1,2);
$a  = $an * $as;
$n = random(2,4,1);
$c = random(-1,1,2) * random(2,5,1);

$ans = Compute("$a*e^($n)");

BEGIN_TEXT
Let \( f(x) =  $a e^{x + $n} + e^{$c} \).
$BR $BR
\( f'( 0 ) = \) \{ans_rule(30) \}
END_TEXT

ANS($ans->cmp());

