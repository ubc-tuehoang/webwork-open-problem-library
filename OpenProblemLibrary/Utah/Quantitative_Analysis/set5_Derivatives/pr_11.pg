TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context("Numeric");

$a1 = random(17,24,1);

$funct1 = Compute("sqrt($a1)/(2*sqrt(x))")->with(limits=>[.1,3]);

BEGIN_TEXT
