DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$u1=non_zero_random(-4,4);
$u2=non_zero_random(-3,3);
$v1=non_zero_random(-2,2);
$v2=random(5,6);


TEXT(EV2(<<EOT));
Let 
\(u = \langle $u1, $u2 \rangle \) and \( v = \langle $v1,$v2 \rangle.\)
Then
$BR $BR
\(u+v=<\)  \{ans_rule(4) \},
EOT
ANS(num_cmp($u1+$v1));

TEXT(EV2(<<EOT));
 \{ans_rule(4) \} \(>\),
EOT
ANS(num_cmp($u2+$v2));

TEXT(EV2(<<EOT));
$BR
\(u-v=<\)  \{ans_rule(4) \},
EOT
ANS(num_cmp($u1-$v1));

TEXT(EV2(<<EOT));
 \{ans_rule(4) \} \(>\),
EOT
ANS(num_cmp($u2-$v2));

TEXT(EV2(<<EOT));
$BR
\(-3v=<\)  \{ans_rule(4) \},
EOT
ANS(num_cmp(-3*$v1));

TEXT(EV2(<<EOT));
 \{ans_rule(4) \} \(>\),
EOT
ANS(num_cmp(-3*$v2));

TEXT(EV2(<<EOT));
$BR
\(u\cdot v=\)  \{ans_rule(4) \}, and
EOT
ANS(num_cmp($v1*$u1+$v2*$u2));

TEXT(EV2(<<EOT));
$BR
\(\|v\|=\)  \{ans_rule(12) \}.
EOT
ANS(num_cmp(sqrt($v1**2+$v2**2)));


ENDDOCUMENT();        # This should be the last executable line in the problem.
