## Level(3)
## TitleText1('Calculus I')
## AuthorText1('Jerrold Marsden and Alan Weinstein')
## EditionText1('2')
## Section1('Exponentials and Logarithms')
## Problem1('')
## KEYWORDS('calculus')
DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context('Numeric');

$r = random(2,4,1);
$a = random(2,9,1);
$s = $r - 1;
$b = $a*$a;

$funct1 = "$r*x**($r-1)*arctan($a*x) +
    x**$r*$a/(1+$a*$a*x**2)";

Context()->texStrings;
BEGIN_TEXT

Let \( f(x) = x^{$r}\tan^{-1}($a x) \)
$BR$BR
\( f'( x ) = \) \{ans_rule(40) \}

END_TEXT
Context()->normalStrings;

ANS(Formula($funct1)->cmp);

BEGIN_SOLUTION
$BBOLD Solution:$EBOLD Using the product and chain rules, we see \(
f'(x) = $r x^$s \tan^{-1}($a x) + x^$r \displaystyle\frac{$a}{1 + $b
x^2} \)
END_SOLUTION

ENDDOCUMENT();        # This should be the last executable line in the problem.
