DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2, 9);
$b = random(2, 9);
Context('Fraction');
$xa = Fraction($b**2, $a)->reduce;
$ya = Fraction($b, 1)->reduce;
$ma = Fraction($a, 2*$b)->reduce;

Context()->texStrings;
BEGIN_TEXT
Find the slope of the tangent line to: $BR $BR
${BBOLD}a.${EBOLD}
the parabola \( y^2 = $a x \) at the point
\( \bigl( $xa, $ya \bigr) \);
$BR $BR \( m = \) \{ans_rule(10)\}
END_TEXT
Context()->normalStrings;
ANS($ma->cmp);

sub rs {
	my ($m, $n, $q) = @_;
	my $p = 1;
	foreach ( 1 .. int(sqrt($q)) ) {
		$p = $_ if ($q % $_**2 == 0)
	}
	my $context = Context()->copy;
	Context('Fraction');
	my $r = Fraction($m*$p, $n)->reduce;
	my $s = $q / $p**2;
	my $rs = ( $r == 1
		? ''
		: $r
	) . ( $s == 1
		? ''
		: "sqrt($s)"
	);
	Context($context);
	return Formula( $rs
		? $rs
		: '1'
	);
}

$c = random(2, 9);

Context('Numeric')->flags->set(
	reduceConstants => 0,
	reduceConstantFunctions => 0,
	formatStudentAnswer => 'parsed'
);
$yb = Real("1");
$xb = rs(1, $c, $c*($c - 1));
$mmb = rs(1, 1, $c*($c - 1));

Context()->texStrings;
BEGIN_TEXT
$BR $BR $BR
${BBOLD}b.${EBOLD}
the ellipse
\( x^2 + \frac{1}{$c} y^2 = 1 \)
at the point \( \bigl( $xb, $yb \bigr) \);
$BR $BR \( m = \) \{ans_rule(10)\}
END_TEXT
Context()->normalStrings;
ANS((-$mmb)->cmp(
	correct_ans_latex_string
		 => '-' . $mmb->TeX
	)
);

$d = random(3, 10);
$xc = rs(1, 1, $d);
$yc = rs(1, 1, $d - 1);
$mc = rs(1, $d - 1, $d*($d - 1));

Context()->texStrings;
BEGIN_TEXT
$BR $BR $BR
${BBOLD}c.${EBOLD}
the hyperbola \( x^2 - y^2 = 1 \)
at the point \( ($xc, $yc \, ) \).
$BR $BR \( m = \) \{ans_rule(10)\}
END_TEXT
Context()->normalStrings;
ANS($mc->cmp);

ENDDOCUMENT();
