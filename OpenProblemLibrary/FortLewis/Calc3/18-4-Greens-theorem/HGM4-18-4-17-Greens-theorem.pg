#  Setup

Context("Numeric")->variables->are(x=>"Real",y=>"Real");

$a = random(2,4,1);
$b = random(2,4,1);
$c = random(2,5,1);
while ($c==$b) { $b = random(2,4,1); }

$F = "($a x - $b y) \vec{i} + $c x \vec{j}";

$r = random(2,4,1);
$rr = $r * $r;

$d = list_random(6,4,3);

if ($d == 6) {

  $answer = Compute("($b + $c) pi $rr / 12"); 
  $x = $r * sqrt(3)/2;
  $y = $r/2;

} elsif ($d == 4) {

  $answer = Compute("($b + $c) pi $rr / 8");
  $x = $r / sqrt(2);
  $y = $r / sqrt(2);

} else {

  $answer = Compute("($b + $c) pi $rr / 6");
  $x = $r/2;
  $y = $r * sqrt(3)/2;

}


