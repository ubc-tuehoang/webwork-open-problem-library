DOCUMENT(); 

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
$a = random(2,5,1);
$b = random(1,5,1);

BEGIN_TEXT
Use continuity to evaluate 
$BR$BR

\(\displaystyle \lim _{x\to 1} e^{x^2-$a x+$b} \) = \{ans_rule(25) \}

END_TEXT

$ans1 = "e^(1-($a) +$b)";

ANS(num_cmp($ans1));

ENDDOCUMENT(); 
