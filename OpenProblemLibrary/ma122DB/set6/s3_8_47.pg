DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context('Numeric');

$y = random(2, 9);
$y2 = $y**2;
$ty = 2 * $y;
$s = list_random('', '-');
$x = "$s \sqrt{e^{$y} - $y2}";

$m = Compute("$s 2 sqrt(e^($y) - $y2) / (e^($y) - $ty)");

BEGIN_TEXT
Let \( y = \ln(x^2 + y^2) \).
Determine the derivative \( y' \)
at the point \( ( $x, $y ) \).
$BR$BR
\( y'( $x \,) = \) \{ans_rule(40) \}
END_TEXT

ANS($m->cmp);

ENDDOCUMENT();
