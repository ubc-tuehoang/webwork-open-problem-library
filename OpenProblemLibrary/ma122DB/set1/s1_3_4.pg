## KEYWORDS('limits')

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(3,8,1);
$b1 = random(3,8,1);
$c1 = random(3,8,1);
$e1 = random(3,8,1);

BEGIN_TEXT
Evaluate the limit
\[ \lim_{ x \rightarrow $e1 } $c1 ( $a1 x + $b1 )^3 \]
Answer: \{ans_rule(25) \}
END_TEXT

$ans = "$c1 *( $a1*$e1 + $b1 )^3";
ANS(num_cmp($ans));

ENDDOCUMENT();        # This should be the last executable line in the problem.

