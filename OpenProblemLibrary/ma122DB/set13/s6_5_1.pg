DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextFraction.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1;

$a = random(2,4,1);
$b = random(1,3,1);
$c = random(4,6,1);
TEXT(beginproblem());

BEGIN_TEXT
Find the average value of \(f(x) = x^{$a}\) on the interval \([$b,$c]\).
$BR$BR
Answer: \{ans_rule(40)\}

END_TEXT

$ans = "($c^($a+1)- ($b^($a+1)))/(($a+1)*($c-($b)))";
ANS(num_cmp($ans));

$cb=$c-$b;
$a1=$a+1;
Context("Fraction");
$C=Compute("1/$cb");
$A=Compute("$C*($c**$a1/$a1-$b**$a1/$a1)");
if ($C==1) {$C=''};
Context()->texStrings;
BEGIN_SOLUTION
$PAR SOLUTION $PAR
Average value = \( \displaystyle
\frac{1}{$c-$b} \int_{$b}^{$c} x^{$a} \, dx 
= $C  \left[  \frac{x^{$a1}}{$a1} \right]_{$b}^{$c}
= $C \left(  \frac{$c^{$a1}}{$a1} -  \frac{$b^{$a1}}{$a1}\right)
=$A
\)
END_SOLUTION

ENDDOCUMENT();        # This should be the last executable line in the problem.
