DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context('Numeric');
Context()->variables->are('a'=>"Real");

$a = random(2,7,1);
$b = random(2,8,1);
$c = random(2,7,1);

$funct = Formula("-$a*$b/($b*a +$c)^2");

BEGIN_TEXT
Let \( f(x) =  \dfrac { $a } { $b x + $c } \). Compute \( f'( a ). \)
$BR$BR \( f'( a ) \) = \{ans_rule(30) \}

END_TEXT

#$ans = $funct;
