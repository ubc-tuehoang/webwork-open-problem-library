DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1;

$a = random(3,7,1);
$b = random(4,15,1);
$m = random(3,7,1);
$m1 = $m+1;
$n = random(8,12,1);

TEXT(beginproblem());
BEGIN_TEXT
Evaluate the indefinite integral.
$BR
\[ \ \int x^{$m}\left($a+$b x^{$m1}\right)^{$n}\, dx\]
$BR
Answer:  \{ ans_rule(30)\} \(+ \ C\)
END_TEXT

ANS(fun_cmp("($a+$b*x^($m+1))^($n+1)/($b*($m+1)*($n+1))",mode=>'antider'));

ENDDOCUMENT();
