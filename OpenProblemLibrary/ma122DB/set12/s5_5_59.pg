DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl"
);

$showPartialCorrectAnswers = 1;

$m = random(4,9,1);

$answ = "(1-0.5^(1-($m)))/(1-($m))";

TEXT(beginproblem());

BEGIN_TEXT
Evaluate the definite integral. $BR
\[ \int_{\pi/6}^{\pi/2} \frac{\cos(z)}{\sin^{$m}(z)}\, dz\]
$BR Answer: \{ ans_rule(40)\}
END_TEXT

ANS(num_cmp($answ));

ENDDOCUMENT();

