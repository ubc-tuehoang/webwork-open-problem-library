DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a1 = random(57,59,1);

BEGIN_TEXT
Use the differential to approximate
the number \(  \sin($a1^\circ) \).
$BR$BR
Answer: \{ans_rule(20) \}
END_TEXT
$ans = "sin(pi/3)-(cos(pi/3)*pi*(60-$a1)/180)";
ANS(num_cmp($ans));

