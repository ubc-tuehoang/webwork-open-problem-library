DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());

$showPartialCorrectAnswers = 1;
Context("Numeric");

$bnum = random(4,7,1);
$gnum = random(5,9,1);
if ($bnum==$gnum) {$gnum = $bnum + random(1,2,1);}
$anum = random(4,7,1);
if ($anum==$bnum || $anum==$gnum) {$anum = 3;}
$total = $bnum + $gnum + $anum;
$extra1 = $bnum + $gnum;
$extra2 = $total + random(-1,1,2);
$extra3 = $gnum + $anum;

$radio=new_multiple_choice();
$radio->qa("How many people are at the party altogether? ", "\($total\) ");
$radio->extra("\($extra1\)", "\($extra2\)","\($extra3\)");

Context()->texStrings;
BEGIN_TEXT
There are \($bnum\) boys, \($gnum\) girls, and \($anum\) adults at a party.
$BR
\{$radio->print_q()\}
\{$radio->print_a()\}
END_TEXT
Context()->normalStrings;

ANS(radio_cmp($radio->correct_ans()));

$subtotal = $bnum + $gnum;

BEGIN_SOLUTION
$PAR Solution $PAR
\($bnum+$gnum+$anum = $subtotal + $anum = $total\)
END_SOLUTION

ENDDOCUMENT();
