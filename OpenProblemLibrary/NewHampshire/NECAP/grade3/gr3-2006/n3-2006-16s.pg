DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context("Numeric");

$n1 = random(3,5,1);
$n2 = $n1 + random(2,4,1);
$n3 = random(2,5,1);
if ($n3==$n1) {$n3 = 2;}
$answer = $n1 + $n2 - $n3;
$sum = $n1 + $n2;

Context()->texStrings;
BEGIN_TEXT
Write a number in the box to make this number sentence true.$PAR
                \($n1 + $n2 = \) \{ans_rule(1)\} \( + $n3\)
END_TEXT
Context()->normalStrings;

ANS(Real($answer)->cmp);

BEGIN_SOLUTION
$PAR Solution: $PAR
\($n1 + $n2 = $sum = $answer + $n3\) so the answer is \($answer.\)$PAR
END_SOLUTION

ENDDOCUMENT();

