DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context("Numeric");

$n3 = random(2,5,1);
$n2 = $n3 + random(1,4,1);
$answer = random(4,8,1);
$n1 = $n2 + $n3 + $answer;

$extra1 = $n1 - $n2 + $n3;
$extra2 = $n1 - $n2;
$extra3 = $extra1 + non_zero_random(-1,1,1);

$radio=new_multiple_choice();
$radio->qa("Which number makes this number sentence true? ", "\($answer\) ");
$radio->extra("\($extra1\)  ", "\($extra2\) ","\($extra3\) ");

Context()->texStrings;
BEGIN_TEXT
Look at this number sentence
$PAR
\($n1 - $n2 = \square + $n3\)$PAR
\{$radio->print_q()\}
\{$radio->print_a()\}
END_TEXT
Context()->normalStrings;

ANS(radio_cmp($radio->correct_ans()));

BEGIN_SOLUTION
$PAR Solution $PAR
\($n1 - $n2 = $extra2 \) so our number sentence becomes \($extra2 = \square + $n3\) so, subtracting $BR
\($n3\) from each side of the equal sign leaves \($answer = \square.\)
END_SOLUTION

;
