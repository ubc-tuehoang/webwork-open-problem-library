DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context("Numeric");

$KimPts = random(16,30,2);
$diff = random(6,10,2);
$AdamPts = $KimPts - $diff;
$extra1 = $KimPts + $diff;
$extra2 = $KimPts + $diff - 0.5*$diff;
$extra3 = $KimPts - 0.5*$diff;


$radio=new_multiple_choice();
$radio->qa("How many point did Adam score? ", "\($AdamPts\) ");
$radio->extra("\($extra1\) ", "\($extra2\) ","\($extra3\) ");

Context()->texStrings;
BEGIN_TEXT
Kim scored \($KimPts\) points in a basketball game. Adam scored \($diff\) fewer points than Kim.
\{$radio->print_q()\}
\{$radio->print_a()\}
END_TEXT
Context()->normalStrings;

ANS(radio_cmp($radio->correct_ans()));

BEGIN_SOLUTION
$PAR Solution $PAR
\($KimPts - $diff = $AdamPts\).
END_SOLUTION

ENDDOCUMENT();
