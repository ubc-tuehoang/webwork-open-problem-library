DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(1,5);
$c = random(1,4);
$b = $a + $c;
$coeff = $b;
$funct = "$coeff * sin (t)";

BEGIN_TEXT
$PAR
The ellipse
$BR
$BR \[ \frac{x^2}{$a^2} + \frac{y^2}{$b^2} = 1 \]
$PAR
can be drawn with parametric equations. If \[ x = r \cos(t)  \]
$BR then r = \{ans_rule(10) \}
END_TEXT

ANS(num_cmp($a));

BEGIN_TEXT
$BR 
and y =  \{ ans_rule(50) \}

END_TEXT
$ans=$funct;
ANS(fun_cmp($ans, mode=>"antider", vars=>"t"));

ENDDOCUMENT();


