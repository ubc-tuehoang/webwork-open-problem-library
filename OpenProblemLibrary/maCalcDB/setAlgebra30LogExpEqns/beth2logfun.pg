DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a=random(2,20,1);
$b=random(2,20,1);
$c=random(1,20);

BEGIN_TEXT
Find the solution of the exponential equation
\[
$a e^x - $c=$b
\]
in terms of logarithms, or correct to four decimal places.
$BR

\(x=\) \{ans_rule(25) \}
$BR
END_TEXT

$ans1 = ln($b + $c)-ln($a);

ANS(num_cmp($ans1));

