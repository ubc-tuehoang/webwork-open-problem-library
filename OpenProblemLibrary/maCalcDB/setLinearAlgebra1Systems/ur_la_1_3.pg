## KEYWORDS('system','linear equations')
##a system ax+by=m, cx+dy=n is given, a=1, b,m,c,d,n are integers.
##the values of x and y may be non-integer.
##solve using substitution
##ENDDESCRIPTION

DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGgraphmacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = 1;
$b = random(2,5,1);
$c = random(2,5,1);
$det = non_zero_random(-2,2,1);
$d = $det-$b*$c;
$m = random(-5,5,1);
$n = random(-5,5,1);
$ans1 = ($m*$d+$b*$n)/$det;
$ans2 = ($a*$n-$m*$c)/$det; 

$NO_SPACE = '@{}';

BEGIN_TEXT

Solve the system using substitution

\[ \left\{"\{"\}
\begin{array}{r${NO_SPACE}r${NO_SPACE}r${NO_SPACE}r}
 x & -$b y & = & $m \cr
$c x & +$d y & = & $n
\end{array} \right. \]
$BR
\( x= \) \{ans_rule(10) \}
$BR 
\( y= \) \{ans_rule(10) \}

END_TEXT

ANS(num_cmp($ans1, mode=>"arith"));
ANS(num_cmp($ans2, mode=>"arith"));

ENDDOCUMENT();       # This should be the last executable line in the problem. 
