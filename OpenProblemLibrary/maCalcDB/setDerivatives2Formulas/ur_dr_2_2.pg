Context("Numeric");


TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

$a = random(2,10,1);
$b = random(2,12,1);
$c = random(1,40,1);
$n = random(2,5,1);
$func = Formula("$a*e^x-$n*$b*x^($n-1)");

Context()->texStrings;

BEGIN_TEXT

If \( f(x) =  $a e^x - $b x^$n + $c \), find \( f'( x ) \).
$BR $BR \( f'(x) = \) \{ans_rule(48) \}
END_TEXT
Context()->normalStrings;

ANS(Compute($func)->cmp());

