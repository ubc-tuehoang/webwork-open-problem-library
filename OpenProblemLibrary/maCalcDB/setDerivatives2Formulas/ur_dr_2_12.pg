loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context ("Numeric");

$a = random(2,7,1);
$b = random(2,12,1);
if ($a==$b) {$b=$b+1;}
$ans = Compute("$a/(2*sqrt($a*x+$b))");

TEXT(EV2(<<EOT));
If \( f(x) =  \sqrt{$a x + $b } \), find \( f'( x ) \).
$BR $BR \{ans_rule(25) \}
$BR
EOT

ANS($ans->cmp);



