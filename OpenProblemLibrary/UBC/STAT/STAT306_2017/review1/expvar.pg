## Initializations:
DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "parserRadioButtons.pl",
  "MathObjects.pl",
  "parserMultiAnswer.pl",
  "answerHints.pl",
);


Context("Numeric");
$mu=random(1,6,1);
$sigma2=random(3,6,1);
$b1=random(1,4,1);
$b0=random(3,6,1);


# variables for answers
$ansa=$b1*$mu+$b0;
$ansb=$b1*$b1*$sigma2;
$ansc=$b1*$b1*$sigma2;


# Main Text
Context()->texStrings;

BEGIN_TEXT
Let \(V\) be a random variable be mean \(\mu=$mu\) and variance 
\(\sigma^2=$sigma2\).


$BR

$BBOLD Part a) $EBOLD
$BR
What is \(E($b1 V+$b0)\)?
\{ ans_rule(6) \}
$BR
$BR

$BBOLD Part b) $EBOLD
$BR
What is \(Var($b1 V+$b0)\)?
\{ ans_rule(6) \}
$BR
$BR

$BBOLD Part c) $EBOLD
$BR
What is \(Var($b1 V-$b0)\)?
\{ ans_rule(6) \}
$BR

END_TEXT
#########################################################

BEGIN_HINT
Please see the Appendix of the coursepack.
END_HINT

#########################################################
## Answer evaluation
$showPartialCorrectAnswers = 1;
ANS( num_cmp($ansa) );
ANS( num_cmp($ansb) );
ANS( num_cmp($ansc) );

#########################################################
BEGIN_SOLUTION
$BR
(a) $b1*$mu+$b0
$BR 
(b) $b1*$b1*$sigma2
$BR 
(c) $b1*$b1*$sigma2
$BR
END_SOLUTION
