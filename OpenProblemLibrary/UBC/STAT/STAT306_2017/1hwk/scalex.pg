sub myround
{ my ($x,$dig)=@_;
  my $xround = int($x*(10**$dig)+0.5)/(10**$dig);
  return($xround);
}


Context("Numeric");
$n=5;
$x1=random(1,6,1);
$x2=random(2,7,1);
$x3=random(3,8,1);
$x4=random(4,8,1);
$x5=random(5,9,1);
$sumx=$x1+$x2+$x3+$x4+$x5;
$sumxx=$x1**2+$x2**2+$x3**2+$x4**2+$x5**2;
$y1=$x1;
$y2=$x2+random(1,4,1);
$y3=$x3+random(1,4,1);
$y4=$x4+random(1,4,1);
$y5=$x5+random(1,4,1);
$sumy=$y1+$y2+$y3+$y4+$y5;
$sumyy=$y1**2+$y2**2+$y3**2+$y4**2+$y5**2;
$sumxy=$x1*$y1+$x2*$y2+$x3*$y3+$x4*$y4+$x5*$y5;
$xbar=$sumx/$n;
$sx=sqrt(($sumxx-$sumx*$xbar)/($n-1));
$ybar=$sumy/$n;
$sy=sqrt(($sumyy-$sumy*$ybar)/($n-1));
$sxy=($sumxy-$sumx*$ybar)/($n-1);
$sx=myround($sx,3);
$sy=myround($sy,3);
$sxy=myround($sxy,3);

$rxy=$sxy/$sx/$sy;
$a0=random(2,4,1);
$a1=random(2,4,1);

# variables for answers
$ansa=$rxy;

$ansb=$a0+$a1*$xbar;
$ansc=$a1*$sx;
$ansd=$a1*$sxy;
$anse=$rxy;
$ansf=$ansb+($n-1)*$sx*$sx/$n+$xbar*$xbar;

