# variables for answers

@ansa=("\(n\sum_i (x_i-{\bar x})^2\)",
       "\(n(n-1)s_x^2\)",
       "\(n s_x^2\)",
       "\(\sum_i (x_i-{\bar x})^2\)" );
$mcquesa =  new_checkbox_multiple_choice();
