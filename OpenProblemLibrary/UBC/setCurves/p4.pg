Context("Numeric");

$c = random(1,3,1);
$b = -3*$c**2;
$f = Compute("2*x^6+$b*x^4")->reduce;

@e[0] = ".25*(x-1)^2 + 1 for x in <1,4> using color:red and weight:2";
@e[1] = ".25(x-4)^2 + 1  for x in <1,4> using color:red and weight:2";
