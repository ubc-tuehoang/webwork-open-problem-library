ANS($zero->cmp() );

# critical points of f, f'

$ans1=Compute("-$c");
if ($c==1) { 
  $ans2 = Formula("-sqrt(3/5)");
  $ans4 = Formula("sqrt(3/5)");
}
else { 
  $ans2 = Formula("-$c*sqrt(3/5)");
  $ans4 = Formula("$c*sqrt(3/5)");
}
