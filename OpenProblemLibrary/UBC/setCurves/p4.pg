  reduceConstants => 0,
  reduceConstantFunctions => 0
); # for solution display

# roots

if ($c==1){ 
  $x1 = Formula("-sqrt(3/2)");
  $x3 = Formula("sqrt(3/2)");
}
else { 
  $x1 = Formula("-$c*sqrt(3/2)");
  $x3 = Formula("$c*sqrt(3/2)");
}
$x2 = Compute("0");
$roots = List($x1,$x2,$x3);
ANS($roots->cmp(partialCredit=>1) );

