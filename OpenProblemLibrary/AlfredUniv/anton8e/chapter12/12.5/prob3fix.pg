DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGunion.pl",
  "Parser.pl",
  "parserVectorUtils.pl",
  "parserParametricLine.pl",
  "PGcourse.pl"
);


TEXT(beginproblem());
BEGIN_PROBLEM();

##############################################
#  Setup

Context("Vector");
Context()->variables->are(t=>'Real');
#
#  The points line p + tv
#
$p = non_zero_point3D();
$v = non_zero_vector3D();
$P = Vector($p);

#
#  The other point and line
#
$q = non_zero_point3D(); while ($q == $p) {$q = non_zero_point3D()};
$Q = Vector($q);

$L2 = Formula("$Q + t*$v")->reduce;

Context("ParametricLine");
$L = Line($p,$v);
##############################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Give a vector parametric equation for the line
that passes through the point \($q\), parallel
to the line parametrized by \($L\):
$BCENTER
$PAR
\(L(t)\) = \{ans_rule(40)\}.
$ECENTER

END_TEXT
Context()->normalStrings;

##################################################
#  Answers
ANS($L2->cmp);
#$showPartialCorrectAnswers = 1;

##################################################

END_PROBLEM();
ENDDOCUMENT();        # This should be the last executable line in the problem.
