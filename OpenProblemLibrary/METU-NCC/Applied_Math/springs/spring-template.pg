######################################
#  Initialization

DOCUMENT() ;        
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());

#######################################
#  Setup

Context('Matrix');

$m1 = random(1,10,1);
$m2 = random(1,10,1);
$m3 = random(1,10,1);

$c1 = random(1,10,1);
$c2 = random(1,10,1);
$c3 = random(1,10,1);
$c4 = random(1,10,1);
$c5 = random(1,10,1);
$c6 = random(1,10,1);
$c7 = random(1,10,1);

$elongation= Matrix([
[1,0],
[0,1],
[-1,1],
]);

$spring_const= Matrix([
[$c1,0,0],
[0,$c2,0],
[0,0,$c3],
]);

$stiffness= Matrix([
[$c1+$c3,-$c3],
[-$c3,$c2+$c3],
]);


($dim,$displacement,$B) = $stiffness->solve_LR( Matrix([[$m1],[$m2]]) );

#######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Consider the following spring system.

$BR

\{ image( "spring-2mass-3springs.png", width=>130, height=>200,  
tex_size=>900, extra_html_tags=>'alt="Spring System"' ) \}
\(c_1 = $c1,\quad c_2 = $c2,\quad c_3 = $c3 \\
  m_1 = $m1,\quad m_2 = $m2 \)


$BR

Write the elongation matrix \(A = \)\{ $elongation->ans_array() \}
(assume down is the positive direction).



$BR

Write the spring constant matrix \(C = \)\{ $spring_const->ans_array() \}


$BR

Write the stiffness matrix \(K = \)\{ $stiffness->ans_array() \}

$BR

Find the displacement of the springs at equilibrium caused by gravity
\(u = g\)\{ $displacement->ans_array() \}
END_TEXT
Context()->normalStrings;

#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1 ;

ANS( $elongation->cmp() );
ANS( $spring_const->cmp() );
ANS( $stiffness->cmp() );

ANS( $displacement-> cmp() );


COMMENT('MathObject version');

ENDDOCUMENT();
