$showPartialCorrectAnswers = 1;

ANS( $F->cmp() );

ANS($da0->cmp()); ANS($da1->cmp()); ANS($da2->cmp()); ANS($da3->cmp());
                  ANS($db1->cmp()); ANS($db2->cmp()); ANS($db3->cmp());

ANS($sa0->cmp()); ANS($sa1->cmp()); ANS($sa2->cmp()); ANS($sa3->cmp());
