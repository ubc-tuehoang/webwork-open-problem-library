DOCUMENT();      

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "problemRandomize.pl",
  "PGcourse.pl"
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

#  Allow for the user to try another version of the problem once they get it correct.
ProblemRandomize(when=>"Correct",onlyAfterDue=>0);

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#


Context()->variables->add(a => "Real");

$low = random(-15,-6,1);
$mid = random(-5,5,1);
$high = random(6,15,1);
$highest = random(16,20,1);
$ans = List( $low, $mid, $high, $highest );

@VALS = ($low,$mid,$high);
@V = @VALS[ NchooseK(3, 3) ];

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT

Order \($V[0]\), \($highest\), \($V[1]\), \($V[2]\) from least to greatest. 
$PAR
(Separate your answers by commas.)

\{ans_rule(15)\}

END_TEXT
Context()->normalStrings;

$showHint = 3;
BEGIN_HINT
\($low\) is the starting point since it is the smallest.  Continue in increasing order and don't forget to put commas between the numbers.
$BR
END_HINT

##############################################################
#
#  Answers
#
#

ANS( $ans->cmp(ordered=>1) );


ENDDOCUMENT();        
