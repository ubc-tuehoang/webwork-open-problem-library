## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Implicit differentiation)
## Date(8/14/2013)
## Institution(Cleveland State University)
## Author(Barbara Margolius)
## MLT(xy_poly_log_deriv)
## Level(3)
## MO(1)
## TitleText1('Calculus: Early Transcendentals')
## AuthorText1('Stewart')
## EditionText1('5')
## Section1('3.8')
## Problem1('47')
## KEYWORDS('Differentiation','Product','Quotient')

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

do {
	$a = random(1, 9);
	$b = random(1, 9);
} until ( $a - $b );
Context('Numeric')->variables->are(
	x => 'Real',
	y => 'Real'
);
$P = Formula("$a*x^2 + $b*y^2")->reduce;
$L = Formula("ln($P)")->reduce;
@ys = map { random(6, 9, 0.1) } (0 .. 5);
$test_points = [
	map {
		[ sqrt( (exp($_) - $b*($_)**2) / $a ), $_ ]
	} (@ys)
];
$dydx = Formula(
	"2*$a*x / (e^y - 2*$b*y)"
)->with(
	test_points => $test_points
)->reduce;

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

Context()->texStrings;
BEGIN_TEXT
Given that \( y \) is defined implicitly as a
function of \( x \) by the equation \( y = $L \),
use the technique of implicit differentiation
to find a differential equation for which
\( y \) is a solution.
$BR $BR
\(y' = \) \{ans_rule()\}
$BR $BR
Note: Leave answer in terms of \( x \) and \( y \).
END_TEXT
Context()->normalStrings;

ANS($dydx->cmp);

ENDDOCUMENT();
