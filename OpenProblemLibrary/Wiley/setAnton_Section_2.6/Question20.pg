# DESCRIPTION
# Find the derivative of a function using the chain rule
#
# ENDDESCRIPTION
## DBsubject(Calculus - single variable)
## DBchapter(Differentiation)
## DBsection(Chain rule (with trigonometric functions))
## Institution(John Wiley & Sons)
## Level(2)
## MO(1)
## TitleText1('Calculus')
## AuthorText1('Anton')
## EditionText1('9')
## Section1('2.6')
## Problem1('20')
## KEYWORDS('Derivative', 'Chain rule')
#***************************************************************
#   Initialization - Load standard PG and MathObjects macros   
#***************************************************************

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

#
# Set Up - Set up variable context and formulation of problem
#
Context("Numeric");
Context()->variables->add(u=>'Real');

$p = random(2,5,1);
$b = random(3,5,1);
$M=$p*$b; $pm1=$p-1; $bm1=$b-1;
if($pm1==1) {$pm1=''};

$f = Formula(" tan^$p(u)")->reduce;
$u = Formula(" tan(x^$b)")->reduce;

$g = Formula(" x^$b ")->reduce;

$fdisp = $f->substitute(u=>$g);
$Df = $f->D('u');
$Df = Formula(" $Df ")->reduce;
$Dg = $g->D('x');
$Dfg = $Df->substitute(u=>$g);
$Dfg = Formula("$Dfg")->reduce;

$tpm1 = ( $p == 2
	? "tan"
	: "tan^($pm1)"
);
$answer = Formula(
	"$M x^($bm1) $tpm1 (x^$b) sec^2 (x^$b)"
)->reduce;

# *********************
#   Problem Statement
# *********************

Context()->texStrings;
TEXT(beginproblem());

BEGIN_TEXT

Let \( f(x) = $fdisp \).  Find \( f'(x) \).
$BR $BR
\( f'(x) = \) \{ans_rule() \}
 
END_TEXT

#
# Expect strings in standard form
#
Context()->normalStrings;

# *******************************
#   Answer and Solution section
# *******************************
#
# Check student solution
#
ANS($answer->cmp());


#***************************
#  Explanation of solution  
#***************************
Context()->texStrings;
BEGIN_SOLUTION
Taking \( u(x) = $u \) in the generalized
derivative formula for \( u^$p \) yields
\[
\begin{aligned}
\frac{d \, $fdisp}{dx}
& = \frac{d \, [u^$p]}{dx}
= $p u^{$pm1} \frac{du}{dx}
= $p \tan^{$pm1}(x^$b)\frac{d \, [\tan(x^$b)]}{dx} \\
& = $p \tan^{$pm1}(x^$b) \sec^2(x^$b) \frac{d[x^$b]}{dx}
\qquad (u = x^$b) \\
& = $answer.
\end{aligned}
\]
END_SOLUTION
Context()->normalStrings;
ENDDOCUMENT();
