# INIT

DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

# PROBLEM SET-UP

# Set a context
Context("Numeric"); 
$dim = 3;
@a = (0,0,0);
@b = (0,0,0);
@c = (0,0,0);

#Generate random matrix
$count = 0;
do {
    $a[$count] = random(-9,9,1);
    $b[$count] = random(-9,9,1);
    $c[$count] = random(-9,9,1);
    $count += 1;
} until ($count == $dim);

$A_matrix = Matrix( [$a[0],$b[0],$c[0]],
		    [$a[1],$b[1],$c[1]],
		    [$a[2],$b[2],$c[2]]	);
# Compute the determinant
$SOLUTION = $A_matrix->det();

# TEXT SECTION

TEXT(beginproblem());
Context()->texStrings;
BEGIN_TEXT
Compute the determinant of
$PAR
\(
    A = $A_matrix
\)
	
$PAR
\( \det A = \) 
\{ ans_rule(5) \}
END_TEXT
Context()->normalStrings;

# ANSWER AND SOLUTION

ANS($SOLUTION -> cmp());

Context()->texStrings;
SOLUTION(EV3(<<'END_SOLUTION'));
$PAR SOLUTION $PAR

Recall the formula for the determinant of a 3x3 matrix,
$PAR
\( 
    \det
    \left[ \begin{matrix} a & b & c \cr
                          d & e & f \cr
                          g & h & i \cr \end{matrix}\right] = 
    aei + bfg + cdh - hfa - idb - gec
\)
$PAR
Hence, 
$PAR
\(
    \det $A_matrix = ($a[0])($b[1])($c[2]) +
                     ($b[0])($c[1])($a[2]) +
                     ($c[0])($a[1])($b[2]) -
                     ($b[2])($c[1])($a[0]) -
                     ($c[2])($a[1])($b[0]) -
                     ($a[2])($b[1])($c[0])
    = $SOLUTION
\)

END_SOLUTION
Context()->normalStrings;

ENDDOCUMENT();
