   	}
}

# part (a)
$k1 = random(1,4,1);
do {$k2 = random(1,4,1)} until ($k2 != $k1);

# part (b)
$k3 = random(1,4,1);
$b1 = non_zero_random(-6,6,1);

# part (c)
$k4 = random(1,4,1);
do {$k5 = random(1,4,1)} until ($k5 != $k4);
$b2 = non_zero_random(-6,6,1);


$showPartialCorrectAnswers = 1 ;

BEGIN_TEXT
This problem is related to Problems 5.20 in the text.

$PAR
Consider the following matrix: 
$BR
\{ mbox( display_matrix([[$a[1][1], $a[1][2], $a[1][3], $a[1][4]],
                         [$a[2][1], $a[2][2], $a[2][3], $a[2][4]],
                         [$a[3][1], $a[3][2], $a[3][3], $a[3][4]],
                         [$a[4][1], $a[4][2], $a[4][3], $a[4][4]]]) )  \}
$PAR
Write the Elementary Row Operation matrix that: 

$PAR
(c) Multiplies row $k4 by $b2 and adds it to row $k5 $BR \{ answer_matrix(4,4,5) \}

END_TEXT


#answer Part(c)
# first generate identity matrix
# multiply row k4 by b1 and add it to row k5

foreach $m (1..4) {

       foreach $n (1..4) {
           $e3[$m][$n] = 0;
           if (($m == $k5) && ($n == $k4)) {$e3[$m][$n] =$b2};
           if ($m == $n){ $e3[$m][$n] =1 };
           ANS(num_cmp($e3[$m][$n])); 
   	}
}



