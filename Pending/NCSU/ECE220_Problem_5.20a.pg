# first generate identity matrix
foreach $m (1..4) {
       foreach $n (1..4) {
           $e1[$m][$n] = 0;
           if ($m == $n){$e1[$m][$n] =1}; 
   	}
}
# exchange rows k1 and k2
foreach  $n (1..4) {
           $tmp = $e1[$k1][$n];
           $e1[$k1][$n] = $e1[$k2][$n];
           $e1[$k2][$n] = $tmp;
}
