Context("Numeric");

#given
$w = random(200,300);
$beta = random(50,65,1);
$L1 = random(30,40,1);
$L2 = random(3,5,.1);

#computation 
$t = $L1/$L2*$w;
$f = $w - $t;

#set tolerance
Context()->flags->set(
tolerance=>.01);

