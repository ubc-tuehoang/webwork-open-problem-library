Context("Numeric");

#given
$theta = random(50,70,1);
$thetar = $theta*pi/180;
$h  = random(2.5,3,.01);
$v = random(15,30,1);

#computation 
$vx = $v*cos($thetar);
$vy = $v*sin($thetar);
$vf = sqrt($vy**2 + 2*9.81*$h);
$t = ($vf-$vy)/9.81;
$dx = $t*$vx;

#set tolerance
Context()->flags->set(
tolerance=>.01);

