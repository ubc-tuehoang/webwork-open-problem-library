Context("Numeric");
#given
$p = random(200,50,300);
$a = random(400,50,600);
$b = 100;
$area = 10;

#image scale
$imgScaleA = .2;
$imgScaleB = .3;

#image aspect ratio
$widthA = $imgScaleA*2468;
$heightA = $imgScaleA*932;
$widthB = $imgScaleB*1435;
$heightB = $imgScaleB*657;

#computation 
$v = $p;
$mx = $p*$b/1000;
$my = 0;
$mz = $p*$a/1000;
$tauAve = $v/($area*100);

##############################################################
