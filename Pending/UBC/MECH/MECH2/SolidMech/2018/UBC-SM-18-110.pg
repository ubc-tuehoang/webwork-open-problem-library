##############################################################
#
#  Setup
#
#

Context("Numeric");

#given
$d1 = random(40,50,1);
$d3 = random(75,95,1);
$d2 = 65;
$T = random(1.6,2.4,0.1);
$g = 80;
$L = 660;

#computation 
$Ibar = pi/32*$d1**4;
$Itube = pi/32*($d3**4-$d2**4);

$T1 = $T * $Ibar/($Ibar+$Itube);
$T2 = $T * $Itube/($Ibar+$Itube);

$tau1 = $T1 * $d1 /2 / $Ibar*1000000;
$tau2 = $T2 * $d3 / 2/ $Itube*1000000;

$phi = $T1*$L/$g/$Ibar*180/pi*1000;
$kT = $T/$phi*180/pi;

#set tolerance
Context()->flags->set(
tolerance=>.05);

