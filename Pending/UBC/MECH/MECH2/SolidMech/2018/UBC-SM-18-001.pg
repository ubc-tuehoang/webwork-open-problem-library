Context("Numeric");
#given
$P = random(5,20,1);
$r = random(2,6,1);

#computation 
$Position = 50;
$Stress = $P*.3/(pi/4*sqrt(2)*(10**4-$r**4))*(10**(6));

#set tolerance
Context()->flags->set(
tolerance=>.05);

