);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 0;

##############################################################
#
#  Setup
#
#

Context("Numeric");

#image scale
$imgScale = .7;

#image aspect ratio
$width = $imgScale*576;
$height = $imgScale*449;

$mc1 = RadioButtons(
    ["\([2, 3, 0]\)", "\([1, 1, -1]\)"],
    "\([1, 1, -1]\)",
    labels => "ABC");

$mc2 = RadioButtons(
    ["\([2, 3, 0]\)", "\([1, 1, -1]\)"],
    "\([2, 3, 0]\)",
    labels => "ABC");

##############################################################
#
#  PGML area
#
#
BEGIN_PGML

Determine the Miller Indices for the planes shown in the following unit cell:

[@ image( "UBC-MAT-16-005.png", width=>[$width], height=>[$height]) @]* 

END_PGML

BEGIN_TEXT
$BR
Plane \(A\):
$BR
\{ $mc1->buttons() \}
$BR
$BR
Plane \(B\):
$BR
\{ $mc2->buttons() \}
$BR
END_TEXT
##############################################################
$showPartialCorrectAnswers = 0;

ANS( $mc1->cmp() );
ANS( $mc2->cmp() );

