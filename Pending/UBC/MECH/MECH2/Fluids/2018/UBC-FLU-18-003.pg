DOCUMENT();

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*2646;
$height = $imgScale*1954;

loadMacros(   
	"PGstandard.pl",     # Standard macros for PG language
	"MathObjects.pl",
	"PGML.pl",
	"parserPopUp.pl",
	"parserMultiAnswer.pl",
	"parserRadioButtons.pl",
