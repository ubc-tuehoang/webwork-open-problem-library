Context("Numeric");
#given
$V1= random(2,3,.01);# [m^3]
$rho2= random(2,8,.1);# [kg/m^3]

#computation
$Ans = $V1*($rho2-1.18);# [kg]

#set tolerance
Context()->flags->set(
tolerance=>.01,);

