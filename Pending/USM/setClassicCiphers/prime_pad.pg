DOCUMENT();      

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   #"source.pl",        # allows code to be displayed on certain sites.
   #"PGcourse.pl",      # Customization file for the course
);

# Print problem number and point value (weight) for the problem
TEXT(beginproblem());

# Show which answers are correct and which ones are incorrect
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#

@texts = (
"singgoddessachillesanger",
"tellmeomuseofthathero",
"armsandthemanising",
"midwayuponlifesjourney"
);
$text = @texts[random(0,3,1)];
$key = ( "cdfhlnrtxdflprvbhjptvbfl");
$encrypted = "";
for ($i = 0; $i < length($text); ++$i) {
  $c = substr($text, $i, 1);
  $d = substr($key, $i % length($key), 1);
  $encrypted .= chr((ord($c) + ord($d) - 2*ord('a')) % 26 + ord('a'));
}

Context()->strings->add($key=>{});
Context()->strings->add($text=>{});
##############################################################
#
#  Text
#
#

BEGIN_TEXT


The text
<center><span style="color:red;font-weight:bold;">$encrypted</span></center>
has been encrypted using a one-time pad generated by using the first 24 prime numbers, each reduced to the canonical residue modulo 26. You had to find these prime numbers for a previous assignment; now reduce them modulo 26 and string together the letters corresponding to these numbers to form the pad. Use the pad to decrypt the text.
$PAR
The key is \{ ans_rule(30) \} .
$PAR
The text is \{ ans_rule(30) \} .
END_TEXT

##############################################################
#
#  Answers
#
#

ANS( Compute($key)->cmp() );
ANS( Compute($text)->cmp() );

ENDDOCUMENT();        
