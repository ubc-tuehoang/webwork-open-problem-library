Context("Numeric")->variables->are(n=>'Real');

$b = random(2,9,1);
$a = Compute("($b n + 1) / ($b n) - ($b n) / ($b n + 1)");
$c = Compute("(-1)^n * $b / (n+1)");

$ans1 = $a->eval(n=>1);
$ans2 = Real("0");

sub lower_bound_checker {
  my ($correct, $student, $ansHash) = @_;
  if ($correct == Compute("DNE")) { 
    return $correct == $student; 
  } else {
    return ($correct >= $student);
  }
}

sub upper_bound_checker {
  my ($correct, $student, $ansHash) = @_;
  if ($correct == Compute("DNE")) { 
    return $correct == $student; 
  } else {
    return ($correct <= $student);
  }
}


