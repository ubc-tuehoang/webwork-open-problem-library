sub lower_bound_checker {
  my ($correct, $student, $ansHash) = @_;
  if ($correct == Compute("DNE")) { 
    return $correct == $student; 
  } else {
    return ($correct >= $student);
  }
}

sub upper_bound_checker {
  my ($correct, $student, $ansHash) = @_;
  if ($correct == Compute("DNE")) { 
    return $correct == $student; 
  } else {
    return ($correct <= $student);
  }
}


