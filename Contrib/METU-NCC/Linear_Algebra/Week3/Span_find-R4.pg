sub pick {
  my ($k, @in) = @_;
  my @out = ();
  while (@out < $k) { push( @out, splice(@in, random(0,$#in), 1) ); }
  @out;
}

TEXT(beginproblem());

COMMENT('should we remove the hint that three vectors are necessary?');

Context("Vector");
Context()->lists->set(Vector=>{open=>"(",close=>")"});
Context()->{cmpDefaults}{Vector} = {promotePoints=>1};
Context()->noreduce('(-x)-y');
Context()->variables->are(x=>"Real",y=>"Real",z=>"Real",t=>"Real");

$n = 4; 
@vars = (Formula("x"),Formula("y"),Formula("z"),Formula("t"));

my @v = pick($n,(-5..-1,1..5));
$eqn = Formula("0");
foreach (0..($n-1)) { $eqn = Formula("$eqn + $v[$_]*$vars[$_]")->reduce; }

my @ans;
foreach (0..($n-2)) { 
  my @tmp = ((0)x($n));
  $tmp[$_]   =  $v[$n-1]; 
  $tmp[$n-1] = -$v[$_]; 
  @ans[$_] = Vector(@tmp);
}

$ans = List(@ans);
$vars = Vector(@vars[0..($n-1)]);

$vects = "v_1";
foreach (2..($n-1)) { $vects = $vects . ",\,v_{$_}"; }

$example = "";
foreach my $i (0..($n-2)) { 
 $example = $example . (($i!=0) ? " , (" : "(");  
 foreach my $j (1..$n) {
   $example = $example . (($j!=1) ? "," : "") . ($i*$n+$j)
 }  
 $example = $example . ")"
}

Context()->texStrings;
