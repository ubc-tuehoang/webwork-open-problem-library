######################################
#  Initialization

DOCUMENT() ;        
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "parserVectorUtils.pl",
  "PGcourse.pl"
);
TEXT(beginproblem());

#######################################
#  Setup

Context('Matrix');

$m1 = random(1,10,1);
$m2 = random(1,10,1);
$m3 = random(1,10,1);

$c1 = random(1,10,1);
$c2 = random(1,10,1);

$elongation= Matrix([
[-1,1,0],
[0,-1,1],
]);

$spring_const= Matrix([
[$c1,0],
[0,$c2],
]);

$stiffness= Matrix([
[$c1,-$c1,0],
[-$c1,$c1+$c2,-$c2],
[0,-$c2,$c2],
]);



#######################################
#  Main text

Context()->texStrings;
BEGIN_TEXT
Consider the following spring system.

$BR

\{ image( "spring-3mass-2springs.png", width=>75, height=>200,  
tex_size=>900, extra_html_tags=>'alt="Spring System"' ) \}
\(c_1 = $c1,\quad c_2 = $c2 \\
  m_1 = $m1,\quad m_2 = $m2, \quad m_3 = $m3 \)


$BR

Write the elongation matrix \(A = \)\{ $elongation->ans_array() \}
(assume down is the positive direction).



$BR

Write the spring constant matrix \(C = \)\{ $spring_const->ans_array() \}


$BR

Write the stiffness matrix \(K = \)\{ $stiffness->ans_array() \}



END_TEXT
Context()->normalStrings;

#######################################
#  Answer evaluation

$showPartialCorrectAnswers = 1 ;

ANS( $elongation->cmp() );
ANS( $spring_const->cmp() );
ANS( $stiffness->cmp() );



COMMENT('MathObject version');

ENDDOCUMENT();
