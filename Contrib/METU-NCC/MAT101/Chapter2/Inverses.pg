DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl",
  "MathObjects.pl",
  "contextFraction.pl"
);

sub pick {
  my ($k, @in) = @_;
  my @out = ();
  while (@out < $k) { push( @out, splice(@in, random(0,$#in), 1) ); }
  @out; 
}

TEXT(beginproblem());
Context("Fraction");
Context()->variables->are(x=>"Real");
Context()->noreduce('(-x)-y');


my @c;

@c = pick(2,(-4..-1,1..4));
$f[0]    = Formula("$c[0] x + $c[1]")->reduce;
$finv[0] = Formula("(x - $c[1]) / ($c[0])"); 


do { @c = pick(4,(-5..-1,1..5)); }
until ($c[0]*$c[3] - $c[1]*$c[2] != 0 );

Context()->texStrings;
$f[1]    = "\frac{" . Formula("$c[0] x + $c[1]")->reduce . "}{" .
                      Formula("$c[2] x + $c[3]")->reduce . "}";
Context()->normalStrings;		      
$finv[1] = Formula("($c[1]-$c[3] x) / ($c[2] x - $c[0])"); 

@index = ("A","B","C","D","E","F","G","H","I","J","K","L","M","N","O");

Context()->texStrings;
BEGIN_TEXT

Compute inverses for the following functions.

END_TEXT
for ($i=0;$i<=$#f;$i++) {

BEGIN_TEXT
$PAR
$BBOLD ($index[$i]) $EBOLD 
 \(\quad \displaystyle f(x) = $f[$i] \)
$PAR $SPACE
\(\quad \displaystyle f^{-1}(x) = \)  
            \{$finv[$i]->ans_rule(20);\}
$BR

END_TEXT

}

Context()->normalStrings;

$showPartialCorrectAnswers = 1;

for ($i=0;$i<=$#finv;$i++) {
  ANS( $finv[$i]->cmp() );
}



ENDDOCUMENT();        # This should be the last executable line in the problem.

