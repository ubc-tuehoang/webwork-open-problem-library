DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "PGcourse.pl",
  "MathObjects.pl",
#  "PGessaymacros.pl",
  "parserImplicitEquation.pl",
);

sub pick {
  my ($k, @in) = @_;
  my @out = ();
  while (@out < $k) { push( @out, splice(@in, random(0,$#in), 1) ); }
  @out; 
};

TEXT(beginproblem());
Context("ImplicitEquation");
Context()->flags->set(reduceConstantFunctions=>0);
Context()->noreduce('(-x)-y','(-x)+y');

($a,$b,$c,$d) = pick(4,(-5..-1,1..5));

my $DD = ($c-$a)**2 + ($d-$b)**2; my $D = sqrt($DD);

$ans[0] = Formula("sqrt($DD)");
$ans[1] = ImplicitEquation("(x-$a)^2 + (y-$b)^2 = $DD",
  limits=>[[$a-$D,$a+$D],[$b-$D,$b+$D]],
  solutions=>[[$a-$D,$b],
              [$a+$D,$b],
              [$a,$b-$D],
              [$a,$b+$D]]);

@index = ("A","B","C","D","E","F","G","H","I","J","K","L","M","N","O");

Context()->texStrings;

BEGIN_TEXT
Solve the following linked problems.
$PAR

$BBOLD ($index[0]) $EBOLD 
  Find the distance between the points 
  \(($a,$b)\) and \(($c,$d)\).
$BR 
\(\qquad \text{distance }=\) \{ans_rule(25);\} 


$PAR
$BBOLD ($index[1]) $EBOLD 
  Write an equation of the circle with center \(($a,$b)\) which passes
  through the point \(($c,$d)\).
$BR 
\(\qquad \) \{ans_rule(20);\} 

END_TEXT

=remove essay box

$PAR
$BBOLD ($index[2]) $EBOLD 
  What geometric object would you get if you attempted to make the 
  circle with center \((x_1,y_1)\) passing through the point \((x_2,y_2)\)
  when \(x_1=x_2\) and \(y_1=y_2\)?
$BR 
\(\qquad \) \{essay_box(1,15)\}

=cut

Context()->normalStrings;

$showPartialCorrectAnswers = 1;

for ($i=0;$i<=$#ans;$i++) {
  ANS( $ans[$i]->cmp() );
}

#ANS( essay_cmp() );


ENDDOCUMENT();        # This should be the last executable line in the problem.

