\{ $mcC -> print_a() \}
$BR
\{ $mcD -> print_q() \}
\{ $mcD -> print_a() \}

END_TEXT

$showPartialCorrectAnswers = 0;
ANS( checkbox_cmp( $mcA->correct_ans() ) );
ANS( checkbox_cmp( $mcB->correct_ans() ) );
ANS( checkbox_cmp( $mcC->correct_ans() ) );
ANS( checkbox_cmp( $mcD->correct_ans() ) );

ENDDOCUMENT();