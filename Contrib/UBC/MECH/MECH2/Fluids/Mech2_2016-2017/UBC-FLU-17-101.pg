loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGML.pl"
);

Context("Numeric");
$a = 24.4;
$b = 0.0678;
$eps = 0.00025;
$D = 0.0203;
$L = 176.5;
$rho = 1000;
$mu = 0.00089; 
$error = 0.0001;
$k = 41.15;
$delta_z = 7.85;

$inc = 0.01;
$number_of_terms = 2000;
$U = 0.01;

for ( $n = 0; $n <= $number_of_terms; $n++)
{ 

$Re = $rho *$U * $D / $mu;
$f = 0.039;
$major_loss = $f * $L / $D;
$loss_tot = $k + $major_loss;
$h_available = $delta_z + ($U^2) / (2 * 9.81) * ($loss_tot);
$Area = 0.25 * 3.1416 * $D^2;
$V_dot = $Area * $U;
$V_dot_lpm = $V_dot * 60000;
$bal = $h_available - $a + ($U * $Area)^2;

if (abs($bal) >= $error)
{
$U = $U + $inc;
}

}

$U = sprintf("%0.2f",$U);

BEGIN_PGML

