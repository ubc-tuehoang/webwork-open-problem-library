Context("Numeric");
#given
$theta = random(5,35,1); #degree
$d1 = 0.9; #m
$d2 = 0.75; #m
$g = 9.81; #m/s2

#computation
$theta_r = $theta*pi/180;
$a = ($d2*cos($theta_r)- $d1*sin($theta_r))/$d1*$g;


