	#"PGcourse.pl", 	 # Customization file for the course
   	);

TEXT(beginproblem());

##############################################################
#
#  Setup
#
#

Context("Numeric");
#given
$M = random (1,10,1); #Nm
$m = (0.5,2,0.1); #kg
$L1 = 0.5; #m
$L2 = 0.7; #m

#image scale
$imgScale = .2;

#image aspect ratio
$width = $imgScale*2069;
$height = $imgScale*1937;

#computation
$IG = 1/12*$m*($L1+$L2)**2;
$Io = $IG + $m*(0.1)**2;
$alpha = $M/$Io;
$at = 0.1*$alpha;
$R = $m*$at;


#set tolerance
Context()->flags->set(
tolerance=>.01);

##############################################################
#
#  PGML 
#
#

BEGIN_PGML

[@ image( "UBC-DYN-18-019.png", width=>[$width], height=>[$height]) @]*

Calculate the force that is applied at the bearing at point [`O`] as it starts to rotate when a constant torque [`M = [$M]`] [`Nm`] is applied to the bar. Assume that the mass of the bar is equal to [`[$m]`] [`kg`].

[`F =`] [____]{"$R"} [`N`]

END_PGML

