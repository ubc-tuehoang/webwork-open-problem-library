#
Context("Numeric");

$mc = new_checkbox_multiple_choice();
$mc -> qa (
"Select the three main purposes of sled and crash testing:", 
"Regulatory $BR",
"Consumer Information $BR",                
"Research $BR",
);
$mc -> extra(
"Military $BR",
"Technician Training $BR",
);
##############################################################
#
#  Text
#
#
Context()->texStrings;
BEGIN_TEXT
\{ $mc -> print_q() \}
$BR
\{ $mc -> print_a() \}
END_TEXT

##############################################################
#
#  Answers
#
#

install_problem_grader(~~&std_problem_grader);

$showPartialCorrectAnswers = 0;

ANS( checkbox_cmp( $mc->correct_ans() ) );


