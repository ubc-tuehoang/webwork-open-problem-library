# DESCRIPTION
# Asks to find P(a), P(-x), and P(x+h) given a linear polynomial of form ax + b
# ENDDESCRIPTION

## DBsubject('Intermediate Algebra')
## DBchapter('Ch 05: Polynomials, Polynomial Functions, and Factoring')
## DBsection('Introduction to Polynomials and Polynomial Functions')
## KEYWORDS('polynomials')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("LimitedPolynomial-Strict");
$a = random(2,5)*random(-1,1,2);
do {$b = non_zero_random(-5,5)} until (abs($b) != abs($a));
$c = non_zero_random(-8,8);;
$dp = nicestring([$a,$b,$c],["x^2","x",""]);

Context()->variables->are(x=>"Real", h=>"Real", a=>"Real");
$ansa = Formula("$a a^2 + $b a + $c")->reduce;
$ansb = Formula("$a x^2 - $b x + $c")->reduce;
$ansc = Formula("$a x + $a h + $b")->reduce;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
If \(P(x) = $dp\), find the following.
$PAR
(a) \(P(a) = \) \{ans_rule(20)\}
$PAR
(b) \(P(-x) = \) \{ans_rule(20)\}
END_TEXT


###########################################################################
# check the answer  
###########################################################################
ANS($ansa->cmp());
ANS($ansb->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} (a) \($ansa\), $SPACE (b) \($ansb\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization');
ENDDOCUMENT();
