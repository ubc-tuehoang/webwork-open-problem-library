# DESCRIPTION
# Find f so that h = g(f).
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection('Composing Functions')
## KEYWORDS('functions', 'composition', 'composition of functions')
## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("LimitedPolynomial");
$c0 = non_zero_random(-10,10,1);
$c1 = random(-1,1,2)*random(2,10,1);
$c2 = random(-1,1,2)*random(2,10,1);
$c3 = random(-1,1,2)*random(2,10,1);
$a = random(2,10,1);
$b = non_zero_random(-10,10,1);

$f = Formula("$a x + $b")->reduce;
$g = "$c3 x^3 + $c2 x^2 + $c1 x + $c0";
$h = "$c3 ($a x + $b) ^3 + $c2 ($a x + $b)^2 + $c1 ($a x + $b) + $c0";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Find a function \(f(x)\) so that \(h(x) = (g \circ f)(x)\) given that
$PAR
$BCENTER
\(g(x) = \displaystyle $g\)
$ECENTER
$PAR
and
$PAR
$BCENTER
\(h(x) = \displaystyle $h\).
$ECENTER
$PAR
\(f(x) = \) \{ans_rule(30)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($f->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \(f(x) = $f\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Find f so that h = g(f).');
ENDDOCUMENT();
