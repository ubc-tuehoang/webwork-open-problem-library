# DESCRIPTION
# Find the composition functions given f, g, and h. They always exist since they are polynomials.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection('Composing Functions')
## KEYWORDS('functions', 'composition', 'composition of functions')
## Author1('David Covert')
## Author2('Teri Christiansen')
## Author3('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "MUHelp.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("LimitedPolynomial")->strings->add("undefined"=>{});
$a = random(-1,1,2)*random(2,5);
$b = random(-1,1,2)*random(2,6);
do {$c = non_zero_random(-6,6)} until (abs($c) != abs($b));
$d = non_zero_random(-4,4);
do {$e = non_zero_random(-5,5)} until (abs($e) != abs($d));

$f = Formula("$a x^2")->reduce;
$g = Formula("$b x + $c")->reduce;
$h = Formula("x^2 + $d x + $c")->reduce;

$e31 = $a*(($b)**2);
$e21 = 2*$a*$b*$c;
$e11 = $a*(($c)**2);
$fg = Formula("$e31 x^2 + $e21 x + $e11")->reduce;

$e32 = $a*$b;
$e12 = $c;
$gf = Formula("$e32 x^2 + $e12")->reduce;

$e43 = 2*$d;
$e33 = 2*$c + $d + ($d)**2;
$e23 = 2*$c*$d + ($d)**2;
$e13 = $c + ($c)**2 + $c*$d;
$hh = Formula("x^4 + $e43 x^3 + $e33 x^2 + $e23 x + $e13")->reduce;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Suppose that \(f(x) = $f\), \(g(x) = $g\), and \(h(x) = $h\). Find the following:
$PAR
$SPACE $SPACE (a) \((f \circ g)(x) = \) \{ans_rule(30)\} 
$PAR
$SPACE $SPACE (b) \((g \circ f)(x) = \) \{ans_rule(30)\} 
$PAR
$SPACE $SPACE (c) \((h \circ h)(x) = \) \{ans_rule(30)\} 
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($fg->cmp());
ANS($gf->cmp());
ANS($hh->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} (a) \($fg\), (b) \($gf\), (c) \($hh\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  $BBOLD Help: $EBOLD \{ MUHelp("combfuns") \}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Find the composition functions given f, g, and h. They always exist since they are polynomials.');
ENDDOCUMENT();
