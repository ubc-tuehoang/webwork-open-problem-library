# DESCRIPTION
# Divide ax^4 + bx^3 + c x^2 + d x + e by (fx^2 + g), where one of b,c,d are zero.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Polynomial and Rational Functions')
## DBsection('Dividing Polynomials')
## KEYWORDS('polynomials','division')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("LimitedPolynomial-Strict");
do {
$a = random(-1,1,2);
$b = list_random(2,3,5,6,7)*random(-1,1,2);
$dd = nicestring([$a,$b],["x^2",""]);

$c = random(3,6);
$d = non_zero_random(-7,7);
$e = random(11,19)*random(-1,1,2);
$dQ = nicestring([$c,$d,$e],["x^2","x",""]);

$f = random(11,17);
$g = non_zero_random(-99,99);
$dR = nicestring([$f,$g],["x",""]);

$a4 = $a*$c;
$a3 = $a*$d; 
$a2 = $a*$e + $b*$c;
$a1 = $f+$b*$d;
$a0 = $b*$e + $g;
$dP = nicestring([$a4,$a3,$a2,$a1,$a0],["x^4","x^3","x^2","x",""]);
} until (abs($a4) < 10 && abs($a3) < 10 && abs($a2) < 10 && abs($a1) < 10 && abs($a0) < 10 && $a4 != 0 && $a0 != 0 && (($a3 == 0 && $a2 != 0 && $a1 != 0) || ($a3 != 0 && $a2 == 0 && $a1 != 0) || ($a3 != 0 && $a2 != 0 && $a1 == 0)));


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Given the polynomial \(P(x) = $dP\) , $BR $BR and divisor \(d(x) = $dd\) , $BR $BR find the quotient \(Q(x)\) and remainder \(R(x)\). 

$PAR Write your answer in the form \(P(x) = d(x)Q(x) + R(x)\).
$PAR
\($dP = ($dd) \big(\) \{ans_rule(20)\} \(\big) + \big(\) \{ans_rule(10)\} \(\big)\)
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS(Formula($dQ)->cmp());
ANS(Formula($dR)->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($dP = ($dd)($dQ) + ($dR)\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Created in 2013.
$BR
Desc: Divide ax^4 + bx^3 + c x^2 + d x + e by (fx^2 + g), where one of b,c,d are zero.');
ENDDOCUMENT();
