# DESCRIPTION
# Expand an expression of the form c1 a b^{n1}(c2 a^{n2}b^{n3} - c3 ab).
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Basic Algebra')
## DBsection('Expanding and Factoring')
## KEYWORDS('expanding', 'polynomial', 'polynomials')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("LimitedPolynomial-Strict");
Context()->variables->are(a=>'Real',b=>'Real');

$a= random(1,7,1);
($b1,$b0)= (random(2,5,1),non_zero_random(-3,3,1));

$n1=random(2,4,1);
$n2=random(2,4,1);
$n3=random(2,4,1);

$poly1 = nicestring([$a],["a b^$n1"]);
$poly2 = nicestring([$b1,$b0],["a^$n2 b^$n3","a b"]);

($c1,$c0) = ($a*$b1,$a*$b0);
($ae1,$ae0) = ($n2+1,2);
($be1,$be0) = ($n1+$n3,$n1+1);
$expn = "$poly1 ($poly2)";
$answer = Formula("$c1*a^$ae1*b^$be1 + $c0*a^$ae0*b^$be0")->reduce;


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Expand the expression
$PAR\[ $expn \] $PAR
and combine like terms. Simplify your answer as much as possible.
$PAR
Answer: \{ans_rule(30)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($answer\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Expand an expression of the form c1 a b^{n1}(c2 a^{n2}b^{n3} - c3 ab) .');
ENDDOCUMENT();
