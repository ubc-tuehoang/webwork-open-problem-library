# DESCRIPTION
# Solve P = 1 - C/S, for S.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter(Equations and Inequalities')
## DBsection('Rational Equations')
## KEYWORDS('equations', 'rational')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "MUHelp.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
$var1 = uc(list_random('x','y','z'));
$var2 = uc(list_random('w','p','q','r'));
$var3 = uc(list_random('s','t','u','v'));
Context()->variables->are(lc($var1)=>"Real", uc($var1)=>"Real", lc($var2)=>"Real", uc($var2)=>"Real", lc($var3)=>"Real", uc($var3)=>"Real");

$eqn = "\displaystyle $var1 = 1 - \frac{$var2}{$var3}";

$answer = Formula("$var2/(1-$var1)");


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($var3\):
$PAR \[$eqn\] $PAR
\($var3 = \) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($answer->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($var = $answer\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Solve P = 1 - C/S, for S.');
ENDDOCUMENT();
