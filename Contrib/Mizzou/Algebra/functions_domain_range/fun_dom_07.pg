# DESCRIPTION
# Find the domain of f(x) = a/(b - cx).
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter('Functions')
## DBsection('Domain and Range')
## KEYWORDS('functions', 'domain')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


###########################################################################
# initialization 
###########################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "fracListChecker.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
setFracListFunctions();
$var = list_random('x','y','z','s','t','u','v','w');
Context()->variables->are($var=>"Real", uc($var)=>"Real");
$a = random(2,15);
$b = random(1,9);
do {$c = random(-1,1,2)*random(2,9)} until (gcd($c,$b) == 1);
$remove = Fraction($b,$c)->reduce;
$domain = Interval("R-{$remove}");
$dispf = "f(x) = \frac{$a}{$b - $c x}";


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Find the domain of the function 
$PAR\[\displaystyle $dispf\]$PAR
and write your answer using interval notation.
$PAR
Domain: \{ans_rule(30)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($domain->cmp(checkFracInterval()));


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($domain\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Help:${EBOLD} \{ helpLink("intervals", "Click here for help entering an interval as an answer.") \}
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Features Periodic Rerandomization. Edited and updated in 2012/2013.
$BR
Desc: Find the domain of f(x) = a/(b - cx).');
ENDDOCUMENT();
