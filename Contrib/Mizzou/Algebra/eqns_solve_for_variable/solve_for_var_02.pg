# DESCRIPTION
# Solve m1*x+b1 = C - (m2*y-b2)/S, for S.
# ENDDESCRIPTION

## DBsubject('Algebra')
## DBchapter(Equations and Inequalities')
## DBsection('Rational Equations')
## KEYWORDS('equations', 'rational')
## Author('Rick Lynch')
## Institution('University of Missouri-Columbia')


##################################################################
# initialization 
##################################################################
DOCUMENT();
loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PeriodicRerandomization.pl",
  "MUHelp.pl",
  "contextLimitedPolynomial.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());
PeriodicRerandomization("3");
$showPartialCorrectAnswers = 1;


###########################################################################
# setup contexts and variables 
###########################################################################
Context("Numeric");
@vlist = qw(X Y Z W P Q R S T V);
$var1 = list_random(@vlist);
do {$var2 = list_random(@vlist)} until ($var2 ne $var1);
do {$var3 = list_random(@vlist)} until ($var3 ne $var1 && $var3 ne $var2);
# Context()->variables->remove(X);
Context()->variables->add($var1=>"Real", $var2=>"Real", $var3=>"Real");
$m1 = random(-1,1,2)*random(2,5);
$b1 = random(-1,1,2)*random(1,5);
$m2 = random(-1,1,2)*random(2,5);
$b2 = random(-1,1,2)*random(1,5);
$c  = random(-1,1,2)*random(1,5); 
$d = $b1-$c;

$eq_disp = "$m1$var1+$b1=$c+\frac{$m2$var2+$b2}{$var3}";

# $ans_numer_disp = "$m2$var2+$b2";
# $ans_denom_disp = "$m1$var1+$d";
# $ans_disp = "\frac{$ans_numer_disp}{$ans_denom_disp}";

$ans = Compute("($m2*$var2+$b2)/($m1*$var1+$d)");


###########################################################################
# state the problem 
###########################################################################
Context()->texStrings;
BEGIN_TEXT
Solve the equation for \($var3\):
$PAR \[$eq_disp\] $PAR
\($var3 = \) \{ans_rule(20)\}
END_TEXT
Context()->normalStrings;


###########################################################################
# check the answer  
###########################################################################
ANS($ans->cmp());


###########################################################################
# use PeriodicRerandomization to write the answer and generate a new
# version of the problem
###########################################################################
Context()->texStrings;
if ($attempts_modp == 0 && $actualAttempts != 0) {
  BEGIN_TEXT
  $PAR
  ${BBOLD}Answer:${EBOLD} \($var = $ans\)
  $PAR
  END_TEXT
} else {
  BEGIN_TEXT
  $BR
  END_TEXT
}
Context()->normalStrings;
PeriodicStatus(); 

COMMENT('Edited in the summer of 2014. This is similar to 
  MizzouLibrary/Algebra/eqns_rational/solve_for_var_01.pg but more complex.
  The LHS as well as the numerator of the RHS are both linear functions.');
ENDDOCUMENT();

