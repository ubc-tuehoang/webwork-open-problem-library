# DESCRIPTION
# Tangent Plane
# ENDDESCRIPTION   

## DBsubject('Calculus - multivariable')
## DBchapter('Vectors and the Geometry of Space')
## DBsection('Equations of Lines and Planes')
## KEYWORDS('Multivariable','Geometry','Vector')
## Author('David Protas')
## Institution('CSUN')

DOCUMENT();	# This should be the first executable line in the problem.

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "PGcourse.pl"
);

Context("Numeric");
TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
              
$c = random(-9, 9);
$d = 8 + 3*$c*$c;

Context()->texStrings;
BEGIN_TEXT
Find the equation of the plane through the point \((2,1,$c)\) that is tangent to the surface 
\[x^2 + 4y^3 + 3z^2 = $d\] 
at  \((2,1,$c)\). Write it in the form indicated below.
$BR $BR
Equation: \(4(x- 2) + \)\{ ans_rule(3) \}\((y - \)\{ ans_rule(2) \})\( + \)\{ ans_rule(3) \}\((z - \)\{ ans_rule(2) \})\( = 0\)
END_TEXT

Context()->normalStrings;
ANS(Compute(12)->cmp);
ANS(Compute(1)->cmp);
ANS(Compute(6*$c)->cmp);
ANS(Compute($c)->cmp);

ENDDOCUMENT();	# This should be the last executable line in the problem.
