###########################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPoint.pl",
  "PGML.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


###########################
#  Setup
$showPartialCorrectAnswers = 0;
Context()->flags->set(tolerance => 0.1,tolType => "absolute");
Context("Numeric");
Context()->variables->add(t=>'Real');

$x = random(2,9,1);
$y0= 2;
$y = Compute("-1*$y0");
$y1 = random(4,9,1);

$fx = Formula("$x*t");
$fy = Formula("$y1+$y*t");

$tLower = 0;
$tInterval = random(1,2,1);
$tUpper = Compute("$tLower+$tInterval");

$ansdydt = $fy->D('t');
$ansdxdt = $fx->D('t');

$ansForxAxis = Compute("2*pi*($x^2+$y0^2)^(1/2)*($y*$tUpper^2/2+$y1*$tUpper-$y*$tLower^2/2-$y1*$tLower)");
$ansForyAxis = Compute("2*pi*$x*($x^2+$y0^2)^(1/2)*($tUpper^2-$tLower^2)/2");

###########################
#  Main text

BEGIN_PGML
For the curve given by  
>>[` x=[$x]t `], [`y=[$y]t +[$y1]`], [` [$tLower] \leq t \leq [$tUpper] `]<<  
1. [` \frac{dy}{dt}=`][______]{$ansdydt} 
2. [` \frac{dx}{dt}=`][______]{$ansdxdt} 
3. The area of the surface generated by revolving the curve around the x-axis: [`S = `][____________________]{$ansForxAxis} 
4. The area of the surface generated by revolving the curve around the y-axis: [`S = `][____________________]{$ansForyAxis}  

END_PGML

############################
#  Answer evaluation


ENDDOCUMENT();
