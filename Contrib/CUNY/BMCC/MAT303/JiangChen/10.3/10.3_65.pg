###########################
#  Initialization

DOCUMENT();

loadMacros(
  "PGstandard.pl",
  "MathObjects.pl",
  "contextLimitedPoint.pl",
  "PGML.pl",
  "PGcourse.pl"
);

TEXT(beginproblem());


###########################
#  Setup
$showPartialCorrectAnswers = 0;
Context()->flags->set(tolerance => 0.1,tolType => "absolute");
Context("Numeric");
Context()->variables->add(t=>'Real');

$x = random(2,9,1);
$y = random(2,9,1);

$fx = Formula("$x*t");
$fy = Formula("$y*t");

$tLower = random(1,5,1);
$tUpper = Compute("$tLower+3");

$ansdydt = $fy->D('t');
$ansdxdt = $fx->D('t');

$ansForxAxis = Compute("2*pi*$y*($x^2+$y^2)^(1/2)*($tUpper^2-$tLower^2)/2");
$ansForyAxis = Compute("2*pi*$x*($x^2+$y^2)^(1/2)*($tUpper^2-$tLower^2)/2");

###########################
#  Main text

BEGIN_PGML
For the curve given by  
>>[` x=[$x]t `], [`y=[$y]t`], [` [$tLower] \leq t \leq [$tUpper] `]<<
Find the following   
1. [` \frac{dy}{dt}=`][______]{$ansdydt} 
2. [` \frac{dx}{dt}=`][______]{$ansdxdt} 
3. The area of the surface generated by revolving the curve around the x-axis: [`S = `][___________]{$ansForxAxis} 
4. The area of the surface generated by revolving the curve around the y-axis: [`S = `][___________]{$ansForyAxis}  

END_PGML

############################
#  Answer evaluation


ENDDOCUMENT();
