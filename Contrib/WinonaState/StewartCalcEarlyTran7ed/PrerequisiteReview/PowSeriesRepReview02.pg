#######################
## Initialization

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "MathObjects.pl"
          );

TEXT(beginproblem());

###################################
# Setup

$a = random(2,9,1)*(-1)**random(1,2,1);

if( $a < 0) { $ex = '\(\frac{d}{dx}('.$a.')^n =\)'  } else {$ex = '\(\frac{d}{dx}\ '.$a.'^n =\)' };

Context("Numeric");
Context( )->variables->add("n"=>"Real");

###################################
# Main text

TEXT(EV2(<<EOT));
$BR
Suppose that \(n\) is constant. $BR $BR

Compute:
$ex

\{ans_rule(10) \} $BR
EOT

###################################
## Answer evaluation

$ans1 = Compute("0");

ANS($ans1->cmp);

ENDDOCUMENT();