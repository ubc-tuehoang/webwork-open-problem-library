#######################
## Initialization

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGauxiliaryFunctions.pl",
           "MathObjects.pl"
          );


TEXT(beginproblem());

###################################
# Setup

Context("Numeric");
Context( )->variables->add("n"=>"Real");

$a = 2*random(1,3,1)+1;
$b = random(-1,3,1);
$c = random(2,4,1);
$d1=$c*1+$b;
$d2=$c*2+$b;
$d3=$c*3+$b;
$d4=$c*4+$b;
$d5=$c*5+$b;
$n1=$a/gcd($a,$d1);
$n2=$a/gcd($a,$d2);
$n3=$a/gcd($a,$d3);
$n4=$a/gcd($a,$d4);
$n5=$a/gcd($a,$d5);
$d1=($c*1+$b)/gcd($a,$d1);
$d2=($c*2+$b)/gcd($a,$d2);
$d3=($c*3+$b)/gcd($a,$d3);
$d4=($c*4+$b)/gcd($a,$d4);
$d5=($c*5+$b)/gcd($a,$d5);


###################################
# Main text

BEGIN_TEXT
$BR
For the sequence below, find a formula for the general term, \( a_n \).
(Assume that \(n\) begins with 1.)
\[  \frac{$n1}{$d1},\ \frac{$n2}{$d2},\ \frac{$n3}{$d3},\ \frac{$n4}{$d4},\ \frac{$n5}{$d5},\ ... \]
$BR
\(a_n=\) \{ ans_rule(15)  \}  

END_TEXT

###################################
## Answer evaluation

$showPartialCorrectAnswers = 1;

$ans1=Compute("$a/(($c)*n+$b)");

ANS($ans1->cmp);

ENDDOCUMENT();