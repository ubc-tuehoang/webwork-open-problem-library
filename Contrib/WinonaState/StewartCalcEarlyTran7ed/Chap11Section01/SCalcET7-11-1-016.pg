#######################
## Initialization

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
           "MathObjects.pl"
          );


TEXT(beginproblem());

###################################
# Setup

Context("Numeric");
Context( )->variables->add("n"=>"Real");

$a = (-1)**random(1,2,1)*random(3,9,1);
$b = (-1)**random(1,2,1)*random(2,9,1);
$a1=$a*1+$b;
$a2=$a*2+$b;
$a3=$a*3+$b;
$a4=$a*4+$b;
$a5=$a*5+$b;
$t=sqrt(random(10,15,1));

###################################
# Main text

BEGIN_TEXT
$BR
For the sequence below, find a formula for the general term, \( a_n \).
(Assume that \(n\) begins with 1.)
\[  $a1,\ $a2,\ $a3,\ $a4,\ $a5,\ ... \]
$BR
\(a_n=\) \{ ans_rule(15)  \}  


END_TEXT

###################################
## Answer evaluation

$showPartialCorrectAnswers = 1;

$ans1=Compute("$a*n+$b");

ANS(fun_cmp($ans1, vars=>"n", test_points=>[1,2,3,4,5,$t]));

ENDDOCUMENT();