#######################
## Initialization

DOCUMENT();
loadMacros("PG.pl",
           "PGbasicmacros.pl",
           "PGanswermacros.pl",
           "MathObjects.pl"
          );


TEXT(beginproblem());

###################################
# Setup

Context("Numeric");
Context( )->variables->add("n"=>"Real");

$a = -(random(2,4,1));
$b = abs($a)+1;
$c = -(random($a+1,$a+5,1));
$a1=$c;
$a2=$c*($a);
$a3=$c*($a)**2;
$a4=$c*($a)**3;
$a5=$c*($a)**4;
$d2=$b;
$d3=$b**2;
$d4=$b**3;
$d5=$b**4;


###################################
# Main text

BEGIN_TEXT
$BR
For the sequence below, find a formula for the general term, \( a_n \).
(Assume that \(n\) begins with 1.)
\[  $a1,\ \frac{$a2}{$d2},\ \frac{$a3}{$d3},\ \frac{$a4}{$d4},\ \frac{$a5}{$d5},\ ... \]
$BR
\(a_n=\) \{ ans_rule(15)  \}  

END_TEXT

###################################
## Answer evaluation

$showPartialCorrectAnswers = 1;

$ans1=Compute("$c*($a/$b)**(n-1)");
$ans1->{limits} = [1,6,1];

ANS($ans1->cmp);

ENDDOCUMENT();