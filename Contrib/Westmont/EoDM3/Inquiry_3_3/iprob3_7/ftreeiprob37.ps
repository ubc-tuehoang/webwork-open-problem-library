%!PS
%%BoundingBox: 75 145 205 270
% Fractal tree (90 degree branches)
% David J. Hunter

/depth 9 def
/depthdown {/depth depth 1 sub def} def
/depthup {/depth depth 1 add def} def
/blength 128 def
/bldown {/blength blength 2 div def} def
/blup {/blength blength 2 mul def} def

0.7 0.7 scale
% recursive function to draw the fractal
% parameters: 
/drawtree
{
	gsave
	0 blength rlineto currentpoint stroke
	translate 0 0 moveto
	depthdown
	0 depth lt
	{
		bldown
		90 rotate drawtree
		-180 rotate drawtree
		blup
	}
	if
	depthup
	grestore
} def

200 210 moveto
drawtree
showpage
